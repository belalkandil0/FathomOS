<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomCard Styles    -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <!-- Shadow Effects for Elevation Levels -->
    <DropShadowEffect x:Key="Elevation0Shadow" ShadowDepth="0" BlurRadius="0" Opacity="0"/>
    <DropShadowEffect x:Key="Elevation1Shadow" ShadowDepth="1" BlurRadius="3" Opacity="0.4" Direction="270"/>
    <DropShadowEffect x:Key="Elevation2Shadow" ShadowDepth="2" BlurRadius="6" Opacity="0.5" Direction="270"/>
    <DropShadowEffect x:Key="Elevation3Shadow" ShadowDepth="4" BlurRadius="12" Opacity="0.6" Direction="270"/>
    <DropShadowEffect x:Key="Elevation4Shadow" ShadowDepth="8" BlurRadius="24" Opacity="0.7" Direction="270"/>
    <DropShadowEffect x:Key="Elevation5Shadow" ShadowDepth="16" BlurRadius="48" Opacity="0.8" Direction="270"/>

    <Style TargetType="{x:Type controls:FathomCard}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomCard}">
                    <Border x:Name="CardBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Effect="{StaticResource Elevation2Shadow}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Header -->
                                <RowDefinition Height="Auto"/>
                                <!-- Content -->
                                <RowDefinition Height="*"/>
                                <!-- Footer -->
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <ContentPresenter x:Name="HeaderContent"
                                              Grid.Row="0"
                                              Content="{TemplateBinding Header}"
                                              Visibility="Collapsed"
                                              Margin="20,16,20,8"/>

                            <!-- Main Content -->
                            <ContentPresenter Grid.Row="1"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                            <!-- Footer -->
                            <ContentPresenter x:Name="FooterContent"
                                              Grid.Row="2"
                                              Content="{TemplateBinding Footer}"
                                              Visibility="Collapsed"
                                              Margin="20,8,20,16"/>

                            <!-- Separator between header and content -->
                            <Border x:Name="HeaderSeparator"
                                    Grid.Row="0"
                                    Height="1"
                                    Background="{DynamicResource BorderSubtleBrush}"
                                    VerticalAlignment="Bottom"
                                    Visibility="Collapsed"
                                    Margin="20,0"/>

                            <!-- Separator between content and footer -->
                            <Border x:Name="FooterSeparator"
                                    Grid.Row="1"
                                    Height="1"
                                    Background="{DynamicResource BorderSubtleBrush}"
                                    VerticalAlignment="Bottom"
                                    Visibility="Collapsed"
                                    Margin="20,0"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Show Header if set -->
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="HeaderContent" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="HeaderSeparator" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Header, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="HeaderContent" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="HeaderSeparator" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Show Footer if set -->
                        <Trigger Property="Footer" Value="{x:Null}">
                            <Setter TargetName="FooterContent" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="FooterSeparator" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Footer, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="FooterContent" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="FooterSeparator" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Elevation 0 -->
                        <Trigger Property="Elevation" Value="0">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation0Shadow}"/>
                        </Trigger>
                        <!-- Elevation 1 -->
                        <Trigger Property="Elevation" Value="1">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation1Shadow}"/>
                        </Trigger>
                        <!-- Elevation 2 (default) -->
                        <Trigger Property="Elevation" Value="2">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation2Shadow}"/>
                        </Trigger>
                        <!-- Elevation 3 -->
                        <Trigger Property="Elevation" Value="3">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation3Shadow}"/>
                        </Trigger>
                        <!-- Elevation 4 -->
                        <Trigger Property="Elevation" Value="4">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation4Shadow}"/>
                        </Trigger>
                        <!-- Elevation 5 -->
                        <Trigger Property="Elevation" Value="5">
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation5Shadow}"/>
                        </Trigger>

                        <!-- Clickable hover effect -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsClickable" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource Elevation3Shadow}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Variant Triggers -->
        <Style.Triggers>
            <!-- ELEVATED VARIANT (Default) -->
            <Trigger Property="Variant" Value="Elevated">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>

            <!-- OUTLINED VARIANT -->
            <Trigger Property="Variant" Value="Outlined">
                <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Variant" Value="Outlined"/>
                    <Condition Property="IsClickable" Value="True"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            </MultiTrigger>

            <!-- FILLED VARIANT -->
            <Trigger Property="Variant" Value="Filled">
                <Setter Property="Background" Value="{DynamicResource BackgroundTertiaryBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Variant" Value="Filled"/>
                    <Condition Property="IsClickable" Value="True"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            </MultiTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
