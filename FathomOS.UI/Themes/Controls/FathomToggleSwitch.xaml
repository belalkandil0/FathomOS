<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomToggleSwitch   -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <Style TargetType="{x:Type controls:FathomToggleSwitch}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="#4D4D52"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomToggleSwitch}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="LeftLabelColumn" Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition x:Name="RightLabelColumn" Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Label -->
                        <TextBlock x:Name="LeftLabel"
                                   Grid.Column="0"
                                   Text="{TemplateBinding Content}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"
                                   Visibility="Collapsed"/>

                        <!-- Toggle Switch Track -->
                        <Grid Grid.Column="1" Width="44" Height="24" VerticalAlignment="Center">
                            <!-- Focus Ring -->
                            <Border x:Name="FocusRing"
                                    CornerRadius="12"
                                    BorderThickness="2"
                                    BorderBrush="Transparent"
                                    Margin="-2"/>

                            <!-- Track Background -->
                            <Border x:Name="Track"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12"/>

                            <!-- Thumb -->
                            <Border x:Name="Thumb"
                                    Width="18"
                                    Height="18"
                                    Background="#CCCCCC"
                                    CornerRadius="9"
                                    HorizontalAlignment="Left"
                                    Margin="3,0,0,0"/>
                        </Grid>

                        <!-- Right Label (Default) -->
                        <StackPanel x:Name="RightLabel"
                                    Grid.Column="2"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center"
                                    Margin="12,0,0,0"
                                    Visibility="Collapsed">
                            <ContentPresenter x:Name="ContentPresenter"
                                              RecognizesAccessKey="True"/>
                            <TextBlock x:Name="StateLabel"
                                       Text="{TemplateBinding OffLabel}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Show content on right by default -->
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter TargetName="RightLabel" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="RightLabel" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Label Placement Left -->
                        <Trigger Property="LabelPlacement" Value="Left">
                            <Setter TargetName="LeftLabel" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="RightLabel" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Show state label -->
                        <Trigger Property="ShowLabel" Value="True">
                            <Setter TargetName="StateLabel" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Hover State (Off) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Track" Property="Background" Value="#5A5A5F"/>
                        </MultiTrigger>

                        <!-- Checked State (On) -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="Thumb" Property="Background" Value="#FFFFFF"/>
                            <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                            <Setter TargetName="StateLabel" Property="Text" Value="{Binding OnLabel, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Trigger>

                        <!-- Checked + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Track" Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                        </MultiTrigger>

                        <!-- Focus State -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FocusRing" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
