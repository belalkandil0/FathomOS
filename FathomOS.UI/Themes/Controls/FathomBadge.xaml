<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomBadge          -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <Style TargetType="{x:Type controls:FathomBadge}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiaryBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomBadge}">
                    <Border x:Name="BadgeBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <ContentPresenter x:Name="IconContent"
                                              Grid.Column="0"
                                              Content="{TemplateBinding Icon}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,4,0"
                                              Visibility="Collapsed"/>

                            <!-- Content -->
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>

                            <!-- Remove Button -->
                            <Button x:Name="RemoveButton"
                                    Grid.Column="2"
                                    Command="{TemplateBinding RemoveCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="2"
                                    Margin="4,0,0,0"
                                    Cursor="Hand"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <Path Data="M0,0 L6,6 M6,0 L0,6"
                                      Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="1.5"
                                      Width="6"
                                      Height="6"
                                      Opacity="0.7"/>
                            </Button>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Show Icon if set -->
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="IconContent" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Show Remove Button if removable -->
                        <Trigger Property="IsRemovable" Value="True">
                            <Setter TargetName="RemoveButton" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Pill Shape -->
                        <Trigger Property="IsPill" Value="True">
                            <Setter TargetName="BadgeBorder" Property="CornerRadius" Value="12"/>
                        </Trigger>

                        <!-- Size: Small -->
                        <Trigger Property="Size" Value="Small">
                            <Setter Property="FontSize" Value="10"/>
                            <Setter Property="Padding" Value="6,2"/>
                        </Trigger>

                        <!-- Size: Large -->
                        <Trigger Property="Size" Value="Large">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="12,6"/>
                        </Trigger>

                        <!-- === VARIANT COLORS === -->

                        <!-- Primary Variant -->
                        <Trigger Property="Variant" Value="Primary">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
                        </Trigger>

                        <!-- Success Variant -->
                        <Trigger Property="Variant" Value="Success">
                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>

                        <!-- Warning Variant -->
                        <Trigger Property="Variant" Value="Warning">
                            <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                            <Setter Property="Foreground" Value="#1A1A1D"/>
                        </Trigger>

                        <!-- Error Variant -->
                        <Trigger Property="Variant" Value="Error">
                            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>

                        <!-- Info Variant -->
                        <Trigger Property="Variant" Value="Info">
                            <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>

                        <!-- === OUTLINED VARIANTS === -->

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Default"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Primary"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Success"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Warning"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Error"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsOutlined" Value="True"/>
                                <Condition Property="Variant" Value="Info"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource InfoBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
