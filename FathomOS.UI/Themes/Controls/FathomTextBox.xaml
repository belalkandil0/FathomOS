<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomTextBox Styles -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <Style TargetType="{x:Type controls:FathomTextBox}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource BackgroundPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomTextBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Label -->
                            <RowDefinition Height="Auto"/>
                            <!-- Input -->
                            <RowDefinition Height="Auto"/>
                            <!-- Error Message -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Label -->
                        <TextBlock x:Name="LabelText"
                                   Grid.Row="0"
                                   Text="{TemplateBinding Label}"
                                   Style="{DynamicResource LabelText}"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,4"/>

                        <!-- Input Container -->
                        <Grid Grid.Row="1">
                            <!-- Focus Ring -->
                            <Border x:Name="FocusRing"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    BorderThickness="2"
                                    BorderBrush="Transparent"
                                    Margin="-2"/>

                            <!-- Main Border -->
                            <Border x:Name="InputBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <!-- Left Icon -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Input Area -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Right Icon -->
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Icon -->
                                    <ContentPresenter x:Name="LeftIcon"
                                                      Grid.Column="0"
                                                      Content="{TemplateBinding Icon}"
                                                      VerticalAlignment="Center"
                                                      Margin="12,0,0,0"
                                                      Visibility="Collapsed"/>

                                    <!-- Input Area with Placeholder -->
                                    <Grid Grid.Column="1">
                                        <!-- Placeholder -->
                                        <TextBlock x:Name="PlaceholderText"
                                                   Text="{TemplateBinding Placeholder}"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                   Margin="{TemplateBinding Padding}"
                                                   IsHitTestVisible="False"
                                                   Visibility="Collapsed"/>

                                        <!-- Actual Input -->
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="{TemplateBinding Padding}"/>
                                    </Grid>

                                    <!-- Right Icon -->
                                    <ContentPresenter x:Name="RightIcon"
                                                      Grid.Column="2"
                                                      Content="{TemplateBinding Icon}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,12,0"
                                                      Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Error Message -->
                        <TextBlock x:Name="ErrorText"
                                   Grid.Row="2"
                                   Text="{TemplateBinding ErrorMessage}"
                                   Foreground="{DynamicResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Show Label if set -->
                        <Trigger Property="Label" Value="">
                            <Setter TargetName="LabelText" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Label, RelativeSource={RelativeSource Self}, Converter={x:Static converters:StringNonEmptyConverter.Instance}}" Value="True">
                            <Setter TargetName="LabelText" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Show Placeholder when empty -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                                <Condition Property="IsFocused" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                        </MultiTrigger>

                        <!-- Icon Placement -->
                        <Trigger Property="IconPlacement" Value="Left">
                            <Setter TargetName="LeftIcon" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IconPlacement" Value="Right">
                            <Setter TargetName="RightIcon" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Hide icons if no icon set -->
                        <Trigger Property="Icon" Value="{x:Null}">
                            <Setter TargetName="LeftIcon" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="RightIcon" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="InputBorder" Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}"/>
                        </Trigger>

                        <!-- Focus State -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="InputBorder" Property="BorderBrush" Value="{DynamicResource BorderFocusBrush}"/>
                            <Setter TargetName="InputBorder" Property="Background" Value="{DynamicResource InputFocusBrush}"/>
                            <Setter TargetName="FocusRing" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                        </Trigger>

                        <!-- Error State -->
                        <Trigger Property="HasError" Value="True">
                            <Setter TargetName="InputBorder" Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
                            <Setter TargetName="InputBorder" Property="Background" Value="{DynamicResource ErrorBackgroundBrush}"/>
                            <Setter TargetName="ErrorText" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="InputBorder" Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter TargetName="InputBorder" Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
