<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomToolbar        -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <!-- FathomToolbarSeparator Style -->
    <Style TargetType="{x:Type controls:FathomToolbarSeparator}">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Background" Value="{DynamicResource BorderSubtleBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomToolbarSeparator}">
                    <Border Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Margin="{TemplateBinding Margin}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- FathomToolbar Style -->
    <Style TargetType="{x:Type controls:FathomToolbar}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomToolbar}">
                    <Border x:Name="ToolbarBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0"
                            Padding="{TemplateBinding Padding}">

                        <ItemsPresenter/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Raised Variant -->
                        <Trigger Property="Variant" Value="Raised">
                            <Setter TargetName="ToolbarBorder" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            <Setter TargetName="ToolbarBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="2"
                                                      BlurRadius="6"
                                                      Opacity="0.3"
                                                      Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Bordered Variant -->
                        <Trigger Property="Variant" Value="Bordered">
                            <Setter TargetName="ToolbarBorder" Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                            <Setter TargetName="ToolbarBorder" Property="BorderThickness" Value="1"/>
                            <Setter TargetName="ToolbarBorder" Property="CornerRadius" Value="4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=controls:FathomToolbar}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <!-- Orientation Triggers -->
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Vertical Separator Style -->
    <Style x:Key="FathomToolbarSeparatorVertical" TargetType="{x:Type controls:FathomToolbarSeparator}" BasedOn="{StaticResource {x:Type controls:FathomToolbarSeparator}}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</ResourceDictionary>
