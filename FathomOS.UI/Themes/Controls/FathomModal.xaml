<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomModal          -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <Style TargetType="{x:Type controls:FathomModal}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomModal}">
                    <Grid>
                        <!-- Overlay Background -->
                        <Border x:Name="PART_Overlay"
                                Background="#80000000"
                                Opacity="0.6"/>

                        <!-- Modal Container -->
                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="32">

                            <!-- Modal Card -->
                            <Border x:Name="ModalCard"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    MinWidth="320"
                                    MaxWidth="480"
                                    MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}, Converter={x:Static converters:SubtractConverter.Instance}, ConverterParameter=64}">

                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="8"
                                                      BlurRadius="24"
                                                      Opacity="0.4"
                                                      Direction="270"/>
                                </Border.Effect>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <!-- Header -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Content -->
                                        <RowDefinition Height="*"/>
                                        <!-- Footer -->
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Border Grid.Row="0"
                                            Background="{DynamicResource BackgroundSecondaryBrush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                                            BorderThickness="0,0,0,1"
                                            CornerRadius="8,8,0,0"
                                            Padding="20,16">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Title -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{TemplateBinding Title}"
                                                       Style="{DynamicResource HeadingSmall}"
                                                       VerticalAlignment="Center"/>

                                            <!-- Close Button -->
                                            <Button x:Name="PART_CloseButton"
                                                    Grid.Column="1"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="8"
                                                    Cursor="Hand"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding ShowCloseButton, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static converters:BoolToVisibilityConverter.Instance}}">
                                                <Path Data="M0,0 L12,12 M12,0 L0,12"
                                                      Stroke="{DynamicResource TextSecondaryBrush}"
                                                      StrokeThickness="2"
                                                      Width="12"
                                                      Height="12"/>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- Content -->
                                    <ScrollViewer Grid.Row="1"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ContentPresenter Margin="20,16"/>
                                    </ScrollViewer>

                                    <!-- Footer -->
                                    <Border x:Name="FooterBorder"
                                            Grid.Row="2"
                                            Background="{DynamicResource BackgroundSecondaryBrush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                                            BorderThickness="0,1,0,0"
                                            CornerRadius="0,0,8,8"
                                            Padding="20,16"
                                            Visibility="Collapsed">

                                        <ContentPresenter Content="{TemplateBinding Footer}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Show Footer if set -->
                        <DataTrigger Binding="{Binding Footer, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="FooterBorder" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Size: Small (320px) -->
                        <Trigger Property="Size" Value="Small">
                            <Setter TargetName="ModalCard" Property="MaxWidth" Value="320"/>
                        </Trigger>

                        <!-- Size: Medium (480px) - Default -->
                        <Trigger Property="Size" Value="Medium">
                            <Setter TargetName="ModalCard" Property="MaxWidth" Value="480"/>
                        </Trigger>

                        <!-- Size: Large (640px) -->
                        <Trigger Property="Size" Value="Large">
                            <Setter TargetName="ModalCard" Property="MaxWidth" Value="640"/>
                        </Trigger>

                        <!-- Size: ExtraLarge (800px) -->
                        <Trigger Property="Size" Value="ExtraLarge">
                            <Setter TargetName="ModalCard" Property="MaxWidth" Value="800"/>
                        </Trigger>

                        <!-- Size: Full -->
                        <Trigger Property="Size" Value="Full">
                            <Setter TargetName="ModalCard" Property="MaxWidth" Value="10000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
