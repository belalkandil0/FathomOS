<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FathomOS.UI.Controls"
                    xmlns:converters="clr-namespace:FathomOS.UI.Converters">

    <!-- ============================================== -->
    <!-- FathomOS Design System - FathomTabControl     -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <!-- FathomTabItem Style -->
    <Style TargetType="{x:Type controls:FathomTabItem}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomTabItem}">
                    <Grid x:Name="TabItemRoot">
                        <!-- Focus Ring -->
                        <Border x:Name="FocusRing"
                                BorderThickness="2"
                                BorderBrush="Transparent"
                                CornerRadius="4"
                                Margin="-2"/>

                        <!-- Tab Header -->
                        <Border x:Name="TabBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter x:Name="IconContent"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding Icon}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"
                                                  Visibility="Collapsed"/>

                                <!-- Header Text -->
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  RecognizesAccessKey="True"/>

                                <!-- Close Button -->
                                <Button x:Name="CloseButton"
                                        Grid.Column="2"
                                        Command="{TemplateBinding CloseCommand}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        Margin="8,0,0,0"
                                        Cursor="Hand"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center">
                                    <Path Data="M0,0 L8,8 M8,0 L0,8"
                                          Stroke="{DynamicResource TextTertiaryBrush}"
                                          StrokeThickness="1.5"
                                          Width="8"
                                          Height="8"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Underline Indicator (for Default variant) -->
                        <Border x:Name="Underline"
                                Height="2"
                                Background="Transparent"
                                VerticalAlignment="Bottom"
                                Margin="8,0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Show Icon if set -->
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="IconContent" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <!-- Show Close Button if closable -->
                        <Trigger Property="IsClosable" Value="True">
                            <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Hover State -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                        </Trigger>

                        <!-- Selected State -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="Underline" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>

                        <!-- Focus State -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FocusRing" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                        </Trigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- FathomTabControl Style -->
    <Style TargetType="{x:Type controls:FathomTabControl}">
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimary}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomTabControl}">
                    <Grid ClipToBounds="True"
                          KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="HeaderRow" Height="Auto"/>
                            <RowDefinition x:Name="ContentRow" Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Strip -->
                        <Border x:Name="TabStripBorder"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">

                            <TabPanel x:Name="HeaderPanel"
                                      IsItemsHost="True"
                                      Margin="4,0"
                                      KeyboardNavigation.TabIndex="1"/>
                        </Border>

                        <!-- Content Area -->
                        <Border x:Name="ContentPanel"
                                Grid.Row="1"
                                Background="{DynamicResource BackgroundPrimaryBrush}"
                                KeyboardNavigation.TabNavigation="Local"
                                KeyboardNavigation.DirectionalNavigation="Contained"
                                KeyboardNavigation.TabIndex="2">

                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- TabStripPlacement Bottom -->
                        <Trigger Property="TabStripPlacement" Value="Bottom">
                            <Setter TargetName="HeaderRow" Property="Height" Value="*"/>
                            <Setter TargetName="ContentRow" Property="Height" Value="Auto"/>
                            <Setter TargetName="TabStripBorder" Property="Grid.Row" Value="1"/>
                            <Setter TargetName="ContentPanel" Property="Grid.Row" Value="0"/>
                            <Setter TargetName="TabStripBorder" Property="BorderThickness" Value="0,1,0,0"/>
                        </Trigger>

                        <!-- TabStripPlacement Left -->
                        <Trigger Property="TabStripPlacement" Value="Left">
                            <Setter TargetName="TabStripBorder" Property="BorderThickness" Value="0,0,1,0"/>
                        </Trigger>

                        <!-- TabStripPlacement Right -->
                        <Trigger Property="TabStripPlacement" Value="Right">
                            <Setter TargetName="TabStripBorder" Property="BorderThickness" Value="1,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Variant Triggers -->
        <Style.Triggers>
            <!-- ENCLOSED VARIANT -->
            <Trigger Property="Variant" Value="Enclosed">
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>

            <!-- PILLS VARIANT -->
            <Trigger Property="Variant" Value="Pills">
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Enclosed TabItem Style -->
    <Style x:Key="FathomTabItemEnclosed" TargetType="{x:Type controls:FathomTabItem}" BasedOn="{StaticResource {x:Type controls:FathomTabItem}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomTabItem}">
                    <Grid x:Name="TabItemRoot">
                        <!-- Tab Header with Border -->
                        <Border x:Name="TabBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter x:Name="IconContent"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding Icon}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"
                                                  Visibility="Collapsed"/>

                                <!-- Header Text -->
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  RecognizesAccessKey="True"/>

                                <!-- Close Button -->
                                <Button x:Name="CloseButton"
                                        Grid.Column="2"
                                        Command="{TemplateBinding CloseCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        Margin="8,0,0,0"
                                        Cursor="Hand"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center">
                                    <Path Data="M0,0 L8,8 M8,0 L0,8"
                                          Stroke="{DynamicResource TextTertiaryBrush}"
                                          StrokeThickness="1.5"
                                          Width="8"
                                          Height="8"/>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="IconContent" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <Trigger Property="IsClosable" Value="True">
                            <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            <Setter TargetName="TabBorder" Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter TargetName="TabBorder" Property="Margin" Value="2,-2,2,0"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Pills TabItem Style -->
    <Style x:Key="FathomTabItemPills" TargetType="{x:Type controls:FathomTabItem}" BasedOn="{StaticResource {x:Type controls:FathomTabItem}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FathomTabItem}">
                    <Grid x:Name="TabItemRoot">
                        <!-- Pill Shape -->
                        <Border x:Name="TabBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}"
                                Margin="4,4">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter x:Name="IconContent"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding Icon}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"
                                                  Visibility="Collapsed"/>

                                <!-- Header Text -->
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  RecognizesAccessKey="True"/>

                                <!-- Close Button -->
                                <Button x:Name="CloseButton"
                                        Grid.Column="2"
                                        Command="{TemplateBinding CloseCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="4"
                                        Margin="8,0,0,0"
                                        Cursor="Hand"
                                        Visibility="Collapsed"
                                        VerticalAlignment="Center">
                                    <Path Data="M0,0 L8,8 M8,0 L0,8"
                                          Stroke="{DynamicResource TextTertiaryBrush}"
                                          StrokeThickness="1.5"
                                          Width="8"
                                          Height="8"/>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource Self}, Converter={x:Static converters:ObjectNotNullConverter.Instance}}" Value="True">
                            <Setter TargetName="IconContent" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <Trigger Property="IsClosable" Value="True">
                            <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource BackgroundTertiaryBrush}"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
