<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- FathomOS Design System - Color Palette        -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- ============================================== -->

    <!-- Primary Brand Colors -->
    <Color x:Key="PrimaryColor">#0066CC</Color>
    <Color x:Key="PrimaryDarkColor">#004C99</Color>
    <Color x:Key="PrimaryLightColor">#3399FF</Color>
    <Color x:Key="PrimaryHoverColor">#0052A3</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#6C757D</Color>
    <Color x:Key="SecondaryDarkColor">#545B62</Color>
    <Color x:Key="SecondaryLightColor">#ADB5BD</Color>

    <!-- Accent Color (Premium Teal) -->
    <Color x:Key="AccentColor">#00D4AA</Color>
    <Color x:Key="AccentDarkColor">#00A886</Color>
    <Color x:Key="AccentLightColor">#33DDBB</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="SuccessLightColor">#48C764</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="WarningLightColor">#FFD039</Color>
    <Color x:Key="ErrorColor">#DC3545</Color>
    <Color x:Key="ErrorLightColor">#E4606D</Color>
    <Color x:Key="InfoColor">#17A2B8</Color>
    <Color x:Key="InfoLightColor">#3AB4C6</Color>

    <!-- Dark Theme Background Colors -->
    <Color x:Key="BackgroundPrimaryDark">#1A1A2E</Color>
    <Color x:Key="BackgroundSecondaryDark">#16213E</Color>
    <Color x:Key="BackgroundTertiaryDark">#0F3460</Color>
    <Color x:Key="SurfaceDark">#252542</Color>
    <Color x:Key="SurfaceHoverDark">#2D2D4A</Color>
    <Color x:Key="BorderDark">#3A3A5C</Color>

    <!-- Light Theme Background Colors -->
    <Color x:Key="BackgroundPrimaryLight">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondaryLight">#F8F9FA</Color>
    <Color x:Key="BackgroundTertiaryLight">#E9ECEF</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="SurfaceHoverLight">#F5F5F5</Color>
    <Color x:Key="BorderLight">#DEE2E6</Color>

    <!-- Text Colors - Dark Theme -->
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#B0B0B0</Color>
    <Color x:Key="TextTertiaryDark">#808080</Color>
    <Color x:Key="TextDisabledDark">#505050</Color>

    <!-- Text Colors - Light Theme -->
    <Color x:Key="TextPrimaryLight">#212529</Color>
    <Color x:Key="TextSecondaryLight">#6C757D</Color>
    <Color x:Key="TextTertiaryLight">#ADB5BD</Color>
    <Color x:Key="TextDisabledLight">#CED4DA</Color>

    <!-- Solid Color Brushes - Primary -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>

    <!-- Solid Color Brushes - Secondary -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>

    <!-- Solid Color Brushes - Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>

    <!-- Solid Color Brushes - Semantic -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

</ResourceDictionary>
