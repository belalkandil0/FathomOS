<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- FathomOS Design System - Shared Colors        -->
    <!-- Owned by: UI-AGENT                            -->
    <!-- DO NOT modify without UI-AGENT approval       -->
    <!-- Theme-agnostic colors used across both themes -->
    <!-- ============================================== -->

    <!-- ========== PRIMARY BRAND COLORS ========== -->
    <!-- These are consistent across both themes -->

    <Color x:Key="PrimaryBrand">#0066CC</Color>
    <Color x:Key="PrimaryBrandHover">#0052A3</Color>
    <Color x:Key="PrimaryBrandActive">#003D7A</Color>
    <Color x:Key="PrimaryBrandLight">#3399FF</Color>

    <!-- ========== FIXED SEMANTIC COLORS ========== -->
    <!-- Used for status indicators that remain consistent -->

    <Color x:Key="StatusOnline">#4EC469</Color>
    <Color x:Key="StatusOffline">#6E6E6E</Color>
    <Color x:Key="StatusBusy">#F14C4C</Color>
    <Color x:Key="StatusAway">#DDB44D</Color>

    <!-- ========== TRANSPARENT OVERLAYS ========== -->

    <Color x:Key="OverlayBlack10">#1A000000</Color>
    <Color x:Key="OverlayBlack20">#33000000</Color>
    <Color x:Key="OverlayBlack40">#66000000</Color>
    <Color x:Key="OverlayBlack60">#99000000</Color>
    <Color x:Key="OverlayBlack80">#CC000000</Color>

    <Color x:Key="OverlayWhite10">#1AFFFFFF</Color>
    <Color x:Key="OverlayWhite20">#33FFFFFF</Color>
    <Color x:Key="OverlayWhite40">#66FFFFFF</Color>
    <Color x:Key="OverlayWhite60">#99FFFFFF</Color>
    <Color x:Key="OverlayWhite80">#CCFFFFFF</Color>

    <!-- ========== TRANSPARENT BRUSHES ========== -->

    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="OverlayBlack10Brush" Color="{StaticResource OverlayBlack10}"/>
    <SolidColorBrush x:Key="OverlayBlack20Brush" Color="{StaticResource OverlayBlack20}"/>
    <SolidColorBrush x:Key="OverlayBlack40Brush" Color="{StaticResource OverlayBlack40}"/>
    <SolidColorBrush x:Key="OverlayBlack60Brush" Color="{StaticResource OverlayBlack60}"/>
    <SolidColorBrush x:Key="OverlayWhite10Brush" Color="{StaticResource OverlayWhite10}"/>
    <SolidColorBrush x:Key="OverlayWhite20Brush" Color="{StaticResource OverlayWhite20}"/>

    <!-- ========== BRAND BRUSHES ========== -->

    <SolidColorBrush x:Key="PrimaryBrandBrush" Color="{StaticResource PrimaryBrand}"/>
    <SolidColorBrush x:Key="PrimaryBrandHoverBrush" Color="{StaticResource PrimaryBrandHover}"/>
    <SolidColorBrush x:Key="PrimaryBrandActiveBrush" Color="{StaticResource PrimaryBrandActive}"/>
    <SolidColorBrush x:Key="PrimaryBrandLightBrush" Color="{StaticResource PrimaryBrandLight}"/>

    <!-- ========== STATUS BRUSHES ========== -->

    <SolidColorBrush x:Key="StatusOnlineBrush" Color="{StaticResource StatusOnline}"/>
    <SolidColorBrush x:Key="StatusOfflineBrush" Color="{StaticResource StatusOffline}"/>
    <SolidColorBrush x:Key="StatusBusyBrush" Color="{StaticResource StatusBusy}"/>
    <SolidColorBrush x:Key="StatusAwayBrush" Color="{StaticResource StatusAway}"/>

</ResourceDictionary>
