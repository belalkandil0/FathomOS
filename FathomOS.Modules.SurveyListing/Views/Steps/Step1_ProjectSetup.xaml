<UserControl x:Class="FathomOS.Modules.SurveyListing.Views.Steps.Step1_ProjectSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:FathomOS.Modules.SurveyListing.Converters"
             >
    
    <UserControl.Resources>
        <converters:EnumDisplayConverter x:Key="EnumDisplayConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="Project Information" FontSize="24" FontWeight="Light" Margin="0,0,0,20"/>
            <TextBlock Text="Enter the basic information about your survey project." 
                       Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,30"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Project Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Client Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Vessel Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding VesselName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Data Processor" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ProcessorName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Product Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="ROV Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding RovName, UpdateSourceTrigger=PropertyChanged}" 
                             
                             Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Survey Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding SurveyTypes}" 
                              SelectedItem="{Binding SelectedSurveyType}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Coordinate System *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding CoordinateSystems}" 
                              SelectedItem="{Binding SelectedCoordinateSystem}"
                              IsEditable="True"
                              
                              Margin="0,0,0,15"/>

                    <!-- KP/DCC Mode Selection - IMPORTANT -->
                    <Border Background="{DynamicResource AccentBrush}" 
                            CornerRadius="4" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="KP/DCC Calculation Mode" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding KpDccModes}" 
                                      SelectedItem="{Binding SelectedKpDccMode}"
                                      Background="White">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="{Binding KpDccModeDescription}" 
                                       Foreground="White" Opacity="0.9" FontSize="11" 
                                       TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="KP Units" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding KpUnits}" 
                              SelectedItem="{Binding SelectedKpUnit}"
                              Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDisplayConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
            
            <!-- Units Configuration Section -->
            <Border Background="{DynamicResource PanelBackgroundBrush}" 
                    CornerRadius="4" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="üìè Units Configuration" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Text="Specify the input (source data) and output (exported data) units."
                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Input Units -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Input Coordinate Units" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CoordinateUnits}" 
                                      SelectedItem="{Binding SelectedInputUnit}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="Units of source survey data" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                       FontSize="11" Margin="0,3,0,0"/>
                        </StackPanel>
                        
                        <!-- Arrow -->
                        <TextBlock Grid.Column="1" Text="‚Üí" FontSize="24" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                        
                        <!-- Output Units -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Output Coordinate Units" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CoordinateUnits}" 
                                      SelectedItem="{Binding SelectedOutputUnit}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDisplayConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="Units for exported listings" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                       FontSize="11" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Common Presets -->
                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="Quick Presets:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button Content="US Survey Feet ‚Üí US Survey Feet" Padding="8,4" Margin="0,0,5,0"
                                Click="PresetUsFeet_Click"/>
                        <Button Content="Meters ‚Üí Meters" Padding="8,4" Margin="0,0,5,0"
                                Click="PresetMeters_Click"/>
                        <Button Content="Meters ‚Üí US Survey Feet" Padding="8,4"
                                Click="PresetMetersToUsFeet_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Coordinate Conversion Section -->
            <Border Background="{DynamicResource PanelBackgroundBrush}" 
                    CornerRadius="4" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <CheckBox Content="Enable Coordinate Conversion" 
                              IsChecked="{Binding EnableCoordinateConversion}"
                              FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Convert coordinates from one projection to another during processing."
                               Foreground="{DynamicResource SecondaryTextBrush}" 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <!-- Conversion Options (visible when enabled) -->
                    <Grid Visibility="{Binding ConversionPanelVisibility}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Source CRS -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Source Coordinate System" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CoordinateSystems}" 
                                      SelectedItem="{Binding SourceCoordinateSystem}"
                                      IsEditable="True"
                                      />
                        </StackPanel>
                        
                        <!-- Arrow -->
                        <TextBlock Grid.Column="1" Text="‚Üí" FontSize="24" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"/>
                        
                        <!-- Target CRS -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Target Coordinate System" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CoordinateSystems}" 
                                      SelectedItem="{Binding TargetCoordinateSystem}"
                                      IsEditable="True"
                                      />
                        </StackPanel>
                    </Grid>
                    
                    <!-- Warning message when conversion is enabled -->
                    <Border Background="#FFF3E0" CornerRadius="3" Padding="10" Margin="0,10,0,0"
                            Visibility="{Binding ConversionPanelVisibility}">
                        <TextBlock TextWrapping="Wrap" Foreground="#E65100">
                            <Run FontWeight="SemiBold">‚ö†Ô∏è Note:</Run>
                            <Run>Coordinate conversion requires Proj.NET library. Ensure source and target CRS are compatible. Conversion is applied to both route and survey data.</Run>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Info Box -->
            <Border Background="{DynamicResource PanelBackgroundBrush}" 
                    CornerRadius="4" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="‚ÑπÔ∏è Survey Type Info" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource SecondaryTextBrush}">
                        <Run FontWeight="SemiBold">Seabed Survey:</Run>
                        <Run>Uses 10x depth exaggeration for visualization. Suitable for pipeline route surveys.</Run>
                        <LineBreak/>
                        <Run FontWeight="SemiBold">ROV/Dynamic Survey:</Run>
                        <Run>Uses 1x depth exaggeration. Suitable for inspection and as-built surveys.</Run>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
