<UserControl x:Class="FathomOS.Modules.SurveyListing.Views.Steps.Step2_RouteFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:FathomOS.Modules.SurveyListing.Converters"
             >
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Load Route &amp; Field Layout" FontSize="24" FontWeight="Light"/>
            <TextBlock Text="Load the EIVA RLX route file and optionally a field layout DXF." 
                       Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Route File Selection -->
        <Border Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" 
                Margin="20,10" Padding="15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Route File (RLX)" FontWeight="SemiBold"/>
                        <TextBlock Text=" *" Foreground="#FF5252" FontWeight="SemiBold"
                                   Visibility="{Binding IsRouteRequired, Converter={StaticResource BoolToVisibility}}"/>
                        <TextBlock Text=" (Optional)" Foreground="{DynamicResource SecondaryTextBrush}" FontWeight="SemiBold"
                                   Visibility="{Binding IsRouteRequired, Converter={StaticResource InverseBoolToVisibility}}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding FileName}" FontSize="14" Margin="0,5,0,0"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" Margin="0,5,0,0"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Browse..." Width="100" 
                        Click="BrowseFile_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Field Layout Selection -->
        <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" 
                Margin="20,10" Padding="15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Field Layout (DXF) - Optional" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding FieldLayoutFileName}" FontSize="14" Margin="0,5,0,0"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{Binding FieldLayoutStatus}" FontSize="12" Margin="0,5,0,0"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="âš ï¸ Only DXF format is supported. Convert DWG files to DXF using AutoCAD or BricsCAD." 
                               FontSize="10" Margin="0,5,0,0" TextWrapping="Wrap"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Browse..." Width="100" 
                        Click="BrowseFieldLayout_Click" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Clear" Width="60" 
                        Click="ClearFieldLayout_Click" VerticalAlignment="Center"
                        IsEnabled="{Binding IsFieldLayoutLoaded}"/>
            </Grid>
        </Border>

        <!-- Route Information and Preview -->
        <Border Grid.Row="3" Margin="20,10,20,20" Padding="15" 
                BorderBrush="{DynamicResource PanelBackgroundBrush}" BorderThickness="1" CornerRadius="4"
                Visibility="{Binding IsLoaded, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Route Information -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Route Information" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Name:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{Binding RouteName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Units:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{Binding RouteUnit}"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Segments:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{Binding SegmentCount}"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="KP Range:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{Binding KpRange}"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Length:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{Binding TotalLength}"/>
                    </Grid>

                    <!-- Field Layout Info (if loaded) -->
                    <StackPanel Margin="0,15,0,0" 
                                Visibility="{Binding IsFieldLayoutLoaded, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Field Layout" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Entities:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="{Binding FieldLayoutInfo}"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- 3D Viewer Button -->
                    <Button Content="ðŸ” Open 3D Viewer" Click="Open3DViewer_Click" 
                            Margin="0,20,0,0" Padding="15,10"
                            Background="#2196F3" Foreground="White"
                            IsEnabled="{Binding PreviewEnabled}"/>
                </StackPanel>

                <!-- Route Preview Canvas -->
                <Border Grid.Column="1" Background="#FF1E1E1E" CornerRadius="4" Margin="15,0,0,0">
                    <Grid>
                        <!-- Canvas for 2D preview -->
                        <Canvas x:Name="PreviewCanvas" ClipToBounds="True"/>
                        
                        <!-- Placeholder when no data -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding IsLoaded, Converter={StaticResource InverseBoolToVisibility}}">
                            <TextBlock Text="ðŸ“Š" Width="48" Height="48" 
                                                         Foreground="{DynamicResource BorderBrush}"/>
                            <TextBlock Text="Route Preview" HorizontalAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        
                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" 
                                    Margin="10" Visibility="{Binding IsLoaded, Converter={StaticResource BoolToVisibility}}">
                            <Border Background="#40000000" CornerRadius="3" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="20" Height="3" Fill="Red" VerticalAlignment="Center"/>
                                    <TextBlock Text="Route" Foreground="White" FontSize="10" Margin="5,0,10,0"/>
                                    <Rectangle Width="20" Height="3" Fill="Gray" VerticalAlignment="Center"
                                               Visibility="{Binding IsFieldLayoutLoaded, Converter={StaticResource BoolToVisibility}}"/>
                                    <TextBlock Text="Field" Foreground="White" FontSize="10" Margin="5,0,0,0"
                                               Visibility="{Binding IsFieldLayoutLoaded, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
