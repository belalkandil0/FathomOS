<mah:MetroWindow x:Class="FathomOS.Modules.SurveyListing.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="About Fathom OS" 
        Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        TitleCharacterCasing="Normal"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
        ResizeMode="NoResize">
    
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <!-- Background Gradient -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#16213e" Offset="0.5"/>
                    <GradientStop Color="#0f3460" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="FATHOM OS" FontSize="42" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#4FC3F7"/>
                <TextBlock Text="Survey Listing Generator" FontSize="20" FontWeight="Light" 
                           HorizontalAlignment="Center" Foreground="#B0BEC5" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Info Cards -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Version Card -->
                    <Border Grid.Column="0" Grid.Row="0" Background="#2D2D2D" CornerRadius="12" 
                            Padding="20" Margin="0,0,10,10">
                        <StackPanel>
                            <TextBlock Text="VERSION" FontSize="11" FontWeight="Bold" 
                                       Foreground="#888" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtVersion" Text="1.0.23" FontSize="24" 
                                       FontWeight="Light" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Build Card -->
                    <Border Grid.Column="1" Grid.Row="0" Background="#2D2D2D" CornerRadius="12" 
                            Padding="20" Margin="10,0,0,10">
                        <StackPanel>
                            <TextBlock Text="BUILD DATE" FontSize="11" FontWeight="Bold" 
                                       Foreground="#888" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtBuildDate" Text="December 2024" FontSize="24" 
                                       FontWeight="Light" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Platform Card -->
                    <Border Grid.Column="0" Grid.Row="1" Background="#2D2D2D" CornerRadius="12" 
                            Padding="20" Margin="0,10,10,0">
                        <StackPanel>
                            <TextBlock Text="PLATFORM" FontSize="11" FontWeight="Bold" 
                                       Foreground="#888" Margin="0,0,0,5"/>
                            <TextBlock Text=".NET 8.0" FontSize="24" FontWeight="Light" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Framework Card -->
                    <Border Grid.Column="1" Grid.Row="1" Background="#2D2D2D" CornerRadius="12" 
                            Padding="20" Margin="10,10,0,0">
                        <StackPanel>
                            <TextBlock Text="UI FRAMEWORK" FontSize="11" FontWeight="Bold" 
                                       Foreground="#888" Margin="0,0,0,5"/>
                            <TextBlock Text="WPF + MahApps" FontSize="24" FontWeight="Light" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Description -->
                <Border Background="#2D2D2D" CornerRadius="12" Padding="25" Margin="0,20,0,0" Width="500">
                    <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="22" TextAlignment="Center" Foreground="#B0BEC5">
                        A professional hydrographic data processing module for creating 
                        survey listings from NPD files. Part of the Fathom OS platform 
                        for offshore survey data management.
                    </TextBlock>
                </Border>
            </StackPanel>
            
            <!-- Footer -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,30,0,0">
                <TextBlock Text="Â© 2024 Fathom OS" FontSize="14" Foreground="#888" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="All Rights Reserved" FontSize="12" Foreground="#666" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                
                <Button Content="Close" Width="120" Height="35" Margin="0,20,0,0" 
                        Click="Close_Click" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"/>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
