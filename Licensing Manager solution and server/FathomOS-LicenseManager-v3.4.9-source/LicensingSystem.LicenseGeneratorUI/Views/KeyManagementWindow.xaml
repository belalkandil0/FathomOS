<Window x:Class="LicenseGeneratorUI.Views.KeyManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FathomOS License Manager - Key Setup"
        Height="650" Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0D1117">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="CardBrush" Color="#161B22"/>
        <SolidColorBrush x:Key="ElevatedBrush" Color="#21262D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#58A6FF"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#3FB950"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#D29922"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F85149"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6E7681"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1A1E22"/>
                                <Setter Property="Foreground" Value="#6E7681"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2EA043"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="outerCircle" Width="18" Height="18" Stroke="{StaticResource BorderBrush}" StrokeThickness="2" Fill="Transparent" VerticalAlignment="Top" Margin="0,2,0,0"/>
                                <Ellipse x:Name="innerCircle" Width="10" Height="10" Fill="{StaticResource AccentBrush}" VerticalAlignment="Top" Margin="0,6,0,0" Visibility="Collapsed"/>
                                <ContentPresenter Grid.Column="1" Margin="12,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="innerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="outerCircle" Property="Stroke" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#1A2332"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A2332"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Key Setup" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Configure your signing keys to create valid licenses" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Content - Setup Page -->
        <Grid x:Name="SetupPage" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Description -->
                    <TextBlock Text="Your signing keys are used to create valid licenses. The private key must be kept secure and never shared."
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="0,0,0,24"/>

                    <!-- Option: Generate new keys -->
                    <RadioButton x:Name="GenerateNewRadio" Style="{StaticResource RadioButtonStyle}" IsChecked="True" Checked="KeyOption_Changed" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Generate new key pair" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Create new ECDSA P-256 signing keys" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Option: Import existing -->
                    <RadioButton x:Name="ImportExistingRadio" Style="{StaticResource RadioButtonStyle}" Checked="KeyOption_Changed" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Import existing private key" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Load from PEM file" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                            <Button x:Name="BrowseButton" Content="Browse..." Style="{StaticResource SecondaryButton}"
                                    Padding="16,8" Margin="0,12,0,0" HorizontalAlignment="Left"
                                    Click="Browse_Click" IsEnabled="False"/>
                            <TextBlock x:Name="ImportedFileText" Text="" FontSize="11" Foreground="{StaticResource SuccessBrush}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Warning box -->
                    <Border Background="#2D1F0F" BorderBrush="{StaticResource WarningBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="!" FontSize="16" FontWeight="Bold" Foreground="{StaticResource WarningBrush}" Width="20"/>
                                <TextBlock Text="IMPORTANT: Back up your private key!" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="#D4B896" FontSize="12">
                                If lost, you cannot create new licenses or revoke existing ones. Store backup in a secure location.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Error message -->
                    <Border x:Name="ErrorBorder" Background="#2D1B1B" BorderBrush="{StaticResource ErrorBrush}" BorderThickness="1"
                            CornerRadius="6" Padding="14" Margin="0,16,0,0" Visibility="Collapsed">
                        <TextBlock x:Name="ErrorText" Foreground="{StaticResource ErrorBrush}" TextWrapping="Wrap" FontSize="13"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Content - Success Page -->
        <Grid x:Name="SuccessPage" Grid.Row="1" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Success header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="*" FontSize="24" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Keys Generated Successfully" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Private key confirmation -->
                    <Border Background="#1A2E1A" BorderBrush="{StaticResource SuccessBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="*" FontSize="16" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Private key stored securely (DPAPI encrypted)" FontSize="13" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Public key display -->
                    <TextBlock Text="Public Key (embed this in FathomOS app):" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <Border Background="{StaticResource ElevatedBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                        <TextBox x:Name="PublicKeyDisplay" IsReadOnly="True" FontFamily="Consolas" FontSize="11"
                                 Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderThickness="0" TextWrapping="Wrap" Height="100"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>

                    <!-- Copy/Export buttons for public key -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Copy to Clipboard" Style="{StaticResource SecondaryButton}" Padding="14,8" Click="CopyPublicKey_Click"/>
                        <Button Content="Export to File" Style="{StaticResource SecondaryButton}" Padding="14,8" Margin="8,0,0,0" Click="ExportPublicKey_Click"/>
                    </StackPanel>

                    <!-- Private key backup button -->
                    <Border Background="#2D1F0F" BorderBrush="{StaticResource WarningBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Export Private Key Backup" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="Store this securely - you'll need it if you reinstall or move to another machine." FontSize="12" Foreground="#D4B896" TextWrapping="Wrap" Margin="0,0,0,12"/>
                            <Button Content="Export Private Key Backup" Style="{StaticResource SecondaryButton}" Padding="16,10" HorizontalAlignment="Left" Click="ExportPrivateKeyBackup_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"/>
            <Button x:Name="ContinueButton" Content="Continue" Width="120" Margin="12,0,0,0" Style="{StaticResource PrimaryButton}" Click="Continue_Click"/>
            <Button x:Name="DoneButton" Content="Done" Width="120" Margin="12,0,0,0" Style="{StaticResource PrimaryButton}" Click="Done_Click" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
