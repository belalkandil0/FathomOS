<Window x:Class="LicenseGeneratorUI.Views.EditOfflineLicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Offline License - Update Modules" 
        Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âœï¸ Edit Offline License" FontSize="20" FontWeight="SemiBold" Foreground="#1E293B"/>
            <TextBlock Text="Modify tier and modules, then regenerate the license file" FontSize="12" Foreground="#64748B" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- License Info (Read-only) -->
        <Border Grid.Row="1" Background="#E0F2FE" CornerRadius="6" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="License Information" FontWeight="SemiBold" Foreground="#0369A1" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="License ID:" Grid.Row="0" Grid.Column="0" Foreground="#64748B" FontSize="11"/>
                    <TextBlock x:Name="LicenseIdText" Text="LIC-XXXX" Grid.Row="0" Grid.Column="1" FontSize="11" FontFamily="Consolas"/>
                    
                    <TextBlock Text="Customer:" Grid.Row="1" Grid.Column="0" Foreground="#64748B" FontSize="11" Margin="0,3,0,0"/>
                    <TextBlock x:Name="CustomerText" Text="Name (email)" Grid.Row="1" Grid.Column="1" FontSize="11" Margin="0,3,0,0"/>
                    
                    <TextBlock Text="Expires:" Grid.Row="2" Grid.Column="0" Foreground="#64748B" FontSize="11" Margin="0,3,0,0"/>
                    <TextBlock x:Name="ExpiresText" Text="2025-12-31" Grid.Row="2" Grid.Column="1" FontSize="11" Margin="0,3,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Hardware IDs (Read-only) -->
        <Border Grid.Row="2" Background="#FEF3C7" CornerRadius="6" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="âš ï¸ Hardware IDs (cannot be changed)" FontWeight="SemiBold" Foreground="#92400E" Margin="0,0,0,5"/>
                <TextBlock x:Name="HardwareIdsText" Text="CA56C7F9..., DF28FC6D..." FontSize="11" Foreground="#92400E" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Tier Selection -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="License Tier" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <ComboBox x:Name="TierCombo" 
                      Padding="10,8" 
                      FontSize="13"
                      SelectionChanged="TierCombo_SelectionChanged"/>
        </StackPanel>

        <!-- Module Selection -->
        <Border Grid.Row="4" Background="White" CornerRadius="6" Padding="15" BorderBrush="#E2E8F0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Licensed Modules" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock x:Name="TierDescriptionText" 
                               Text="Select modules for this license" 
                               FontSize="11" 
                               Foreground="#64748B" 
                               Margin="0,3,0,0"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="ModulesPanel" Orientation="Horizontal">
                        <!-- Dynamic checkboxes will be added here -->
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelBtn" Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button x:Name="SaveBtn" Content="ðŸ”„ Regenerate License" Style="{StaticResource PrimaryButton}" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
