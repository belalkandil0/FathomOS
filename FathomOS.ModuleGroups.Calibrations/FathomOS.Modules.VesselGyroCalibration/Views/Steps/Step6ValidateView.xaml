<UserControl x:Class="FathomOS.Modules.VesselGyroCalibration.Views.Steps.Step6ValidateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.VesselGyroCalibration.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:QcStatusToIconConverter x:Key="QcStatusToIcon"/>
        <converters:QcStatusToBrushConverter x:Key="QcStatusToBrush"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Step 6: Validate Results" 
                       FontSize="24" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="Quality control checks and acceptance decision"
                       FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- QC Checks List -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="20" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <iconPacks:PackIconMaterial Kind="ClipboardCheck" Width="24" Height="24"
                                                    Foreground="{DynamicResource AccentBrush}"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Quality Control Checks" FontWeight="SemiBold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding QcChecks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}" 
                                        CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Icon -->
                                        <iconPacks:PackIconMaterial Grid.Column="0"
                                            Kind="{Binding Status, Converter={StaticResource QcStatusToIcon}}"
                                            Foreground="{Binding Status, Converter={StaticResource QcStatusToBrush}}"
                                            Width="24" Height="24" VerticalAlignment="Center"/>
                                        
                                        <!-- Check Details -->
                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap" Margin="0,3,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Value -->
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ActualValue}" FontWeight="Bold" FontSize="16"
                                                       Foreground="{Binding Status, Converter={StaticResource QcStatusToBrush}}"
                                                       HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Threshold}" FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
            
            <!-- Decision Panel -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="20">
                <StackPanel>
                    <TextBlock Text="Calibration Decision" FontWeight="SemiBold" FontSize="16"
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <!-- Overall Status -->
                    <Border Background="{Binding OverallStatus, Converter={StaticResource QcStatusToBrush}}"
                            CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial 
                                Kind="{Binding OverallStatus, Converter={StaticResource QcStatusToIcon}}"
                                Width="48" Height="48" Foreground="White"
                                HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding OverallStatusText}" FontWeight="Bold"
                                       FontSize="18" Foreground="White" Margin="0,10,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Result Summary -->
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                            Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="RESULT VALUE" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Mean C-O (Accepted)" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" Text="{Binding MeanCO, StringFormat={}{0:F4}Â°}" 
                                           FontWeight="Bold" FontSize="16"
                                           Foreground="{DynamicResource AccentBrush}"/>
                            </Grid>
                            
                            <TextBlock Text="{Binding ResultInterpretation}" FontSize="12" TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Mode-specific guidance -->
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                            Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16"
                                                            Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="{Binding ModeGuidanceTitle}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="8,0,0,0"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ModeGuidance}" FontSize="12" TextWrapping="Wrap"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Acceptance Buttons -->
                    <StackPanel>
                        <Button Content="Accept Results" Command="{Binding AcceptCommand}"
                                Style="{DynamicResource PrimaryButton}" Margin="0,0,0,10"
                                Padding="20,12"/>
                        
                        <Button Content="Reject - Requires Re-test" Command="{Binding RejectCommand}"
                                Style="{DynamicResource SecondaryButton}"
                                Padding="20,12"/>
                    </StackPanel>
                    
                    <!-- Notes -->
                    <TextBlock Text="Notes (optional)" FontWeight="SemiBold" FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,20,0,5"/>
                    <TextBox Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             Height="80" VerticalScrollBarVisibility="Auto"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer Summary -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Checks Passed: " Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding PassedChecks}" FontWeight="SemiBold"
                               Foreground="{DynamicResource SuccessBrush}"/>
                    <TextBlock Text=" / " Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding TotalChecks}" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Warnings: " Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding WarningChecks}" FontWeight="SemiBold"
                               Foreground="{DynamicResource WarningBrush}"/>
                    <TextBlock Text="  |  Failures: " Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding FailedChecks}" FontWeight="SemiBold"
                               Foreground="{DynamicResource ErrorBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
