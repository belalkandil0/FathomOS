<UserControl x:Class="FathomOS.Modules.VesselGyroCalibration.Views.Steps.Step3ConfigureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.VesselGyroCalibration.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Step 3: Map Data Columns" Style="{DynamicResource SectionHeader}"/>
                    <TextBlock Text="Select which columns from your data file correspond to the Reference Heading (truth) and the Calibrated Heading (system being checked)."
                               TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <iconPacks:PackIconMaterial Grid.Column="1" Kind="TableColumn" 
                                            Width="48" Height="48" Opacity="0.3"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Column Mapping -->
        <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Section Title -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,16">
                    <iconPacks:PackIconMaterial Kind="Link" Width="18" Height="18"
                                                Foreground="{DynamicResource PrimaryBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="Column Assignments" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                    <Button Command="{Binding AutoDetectCommand}" 
                            Style="{DynamicResource SecondaryButton}"
                            Padding="12,4" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AutoFix" Width="14" Height="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Auto-Detect" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Time Column -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Time/Date Column:" 
                           Style="{DynamicResource FieldLabel}" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          ItemsSource="{Binding AvailableColumns}"
                          SelectedItem="{Binding SelectedTimeColumn}"
                          Margin="0,0,0,12"/>

                <!-- Reference Heading -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Reference Heading:" 
                           Style="{DynamicResource FieldLabel}" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          ItemsSource="{Binding AvailableColumns}"
                          SelectedItem="{Binding SelectedReferenceColumn}"
                          Margin="0,0,0,12"/>
                <Border Grid.Row="2" Grid.Column="2" Background="{DynamicResource SuccessBrush}" 
                        CornerRadius="4" Padding="8,4" Margin="12,0,0,12" VerticalAlignment="Center">
                    <TextBlock Text="TRUTH" FontSize="10" FontWeight="Bold" Foreground="White"/>
                </Border>

                <!-- Calibrated Heading -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Calibrated Heading:" 
                           Style="{DynamicResource FieldLabel}" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="3" Grid.Column="1" 
                          ItemsSource="{Binding AvailableColumns}"
                          SelectedItem="{Binding SelectedCalibratedColumn}"/>
                <Border Grid.Row="3" Grid.Column="2" Background="{DynamicResource InfoBrush}" 
                        CornerRadius="4" Padding="8,4" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="CHECK" FontSize="10" FontWeight="Bold" Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- Format Options -->
        <Border Grid.Row="2" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <iconPacks:PackIconMaterial Kind="Cog" Width="18" Height="18"
                                                Foreground="{DynamicResource PrimaryBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="Format Options" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <WrapPanel Grid.Row="1" Orientation="Horizontal">
                    <!-- NaviPac Date/Time Split -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,32,8">
                        <CheckBox IsChecked="{Binding HasDateTimeSplit}" VerticalAlignment="Center"/>
                        <TextBlock Text="NaviPac Format (Date/Time split)" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <iconPacks:PackIconMaterial Kind="HelpCircle" Width="14" Height="14"
                                                    Foreground="{DynamicResource TextMutedBrush}"
                                                    VerticalAlignment="Center" Margin="8,0,0,0"
                                                    ToolTip="Enable if header shows 'Time' as one column but data has separate Date and Time values"/>
                    </StackPanel>

                    <!-- Date Format -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                        <TextBlock Text="Date Format:" Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding DateFormat}" Width="100"/>
                    </StackPanel>

                    <!-- Time Format -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Time Format:" Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding TimeFormat}" Width="100"/>
                    </StackPanel>
                </WrapPanel>
            </Grid>
        </Border>

        <!-- Help Info -->
        <Border Grid.Row="3" Style="{DynamicResource CardBorder}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <iconPacks:PackIconMaterial Kind="Lightbulb" Width="18" Height="18"
                                                Foreground="{DynamicResource WarningBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="Understanding C-O Calculation" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" LineHeight="22">
                    <Run FontWeight="SemiBold">C-O = Reference Heading − Calibrated Heading</Run>
                    <LineBreak/><LineBreak/>
                    <Run>• </Run><Run FontWeight="SemiBold">Reference Heading:</Run><Run> The trusted system (vessel gyro, already calibrated)</Run>
                    <LineBreak/>
                    <Run>• </Run><Run FontWeight="SemiBold">Calibrated Heading:</Run><Run> The system being checked or calibrated</Run>
                    <LineBreak/><LineBreak/>
                    <Run>For </Run><Run FontWeight="SemiBold">Verification:</Run><Run> The mean C-O should be close to 0° if the existing calibration is valid.</Run>
                    <LineBreak/>
                    <Run>For </Run><Run FontWeight="SemiBold">Calibration:</Run><Run> The mean C-O value will be the new correction to apply.</Run>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="6" Padding="12,8" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage, FallbackValue='Select the columns that contain your heading data.'}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
