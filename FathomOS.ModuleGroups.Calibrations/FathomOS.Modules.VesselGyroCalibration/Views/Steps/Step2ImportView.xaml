<UserControl x:Class="FathomOS.Modules.VesselGyroCalibration.Views.Steps.Step2ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.VesselGyroCalibration.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource CardBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Step 2: Load Data File" Style="{DynamicResource SectionHeader}"/>
                    <TextBlock Text="Select an NPD or CSV file containing gyro heading data. The file should have columns for time and at least two heading values."
                               TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <iconPacks:PackIconMaterial Grid.Column="1" Kind="FolderOpen" 
                                            Width="48" Height="48" Opacity="0.3"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- File Selection -->
        <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- File path display -->
                <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="6" Padding="12,10" Margin="0,0,12,0">
                    <TextBlock Text="{Binding SelectedFilePath, FallbackValue='No file selected'}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Browse button -->
                <Button Grid.Column="1" Command="{Binding BrowseCommand}"
                        Style="{DynamicResource PrimaryButton}" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="16" Height="16" VerticalAlignment="Center"/>
                        <TextBlock Text="Browse..." Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Clear button -->
                <Button Grid.Column="2" Command="{Binding ClearCommand}"
                        Style="{DynamicResource SecondaryButton}"
                        Visibility="{Binding HasFile, Converter={StaticResource BoolToVisibility}}">
                    <iconPacks:PackIconMaterial Kind="Close" Width="16" Height="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- File Preview -->
        <Border Grid.Row="2" Style="{DynamicResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Preview Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Table" Width="18" Height="18" 
                                                    Foreground="{DynamicResource PrimaryBrush}"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Raw Data Preview" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                Visibility="{Binding HasFile, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center">
                            <Run Text="{Binding RowCount, Mode=OneWay, StringFormat='{}{0:N0}'}"/>
                            <Run Text=" rows Ã— "/>
                            <Run Text="{Binding ColumnCount, Mode=OneWay}"/>
                            <Run Text=" columns"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Data Grid with raw data -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewRows}"
                          Style="{StaticResource ModernDataGrid}"
                          Visibility="{Binding HasFile, Converter={StaticResource BoolToVisibility}}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[0], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 1'}" 
                                            Binding="{Binding Col0}" Width="*"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[1], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 2'}" 
                                            Binding="{Binding Col1}" Width="*"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[2], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 3'}" 
                                            Binding="{Binding Col2}" Width="*"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[3], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 4'}" 
                                            Binding="{Binding Col3}" Width="*"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[4], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 5'}" 
                                            Binding="{Binding Col4}" Width="*"/>
                        <DataGridTextColumn Header="{Binding DataContext.ColumnHeaders[5], RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Col 6'}" 
                                            Binding="{Binding Col5}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- No file placeholder -->
                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8"
                        Visibility="{Binding HasFile, Converter={StaticResource InverseBoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="FileUpload" Width="64" Height="64"
                                                    Foreground="{DynamicResource BorderBrush}"
                                                    HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a file to preview its contents"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontSize="14" Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Loading overlay -->
                <Border Grid.Row="1" Background="#80000000" CornerRadius="8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <mah:ProgressRing IsActive="True" Width="40" Height="40"/>
                        <TextBlock Text="Loading file..." Foreground="White" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="6" Padding="12,8" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
