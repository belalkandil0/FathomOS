<UserControl x:Class="FathomOS.Modules.VesselGyroCalibration.Views.Steps.Step1SelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.VesselGyroCalibration.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Input Group Style -->
        <Style x:Key="InputGroup" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <!-- Field Label with Unit -->
        <Style x:Key="FieldLabelWithUnit" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="{DynamicResource PrimaryBrush}" 
                            CornerRadius="12" Width="64" Height="64" Margin="0,0,20,0">
                        <iconPacks:PackIconMaterial Kind="CompassOutline" Width="32" Height="32"
                                                    Foreground="White" HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Step 1: Setup Calibration" 
                                   FontSize="22" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Configure the calibration mode and enter project details. All measurements will use the selected unit."
                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ==================== MODE SELECTION ==================== -->
            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                <TextBlock Text="CALIBRATION MODE" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Calibration Mode -->
                    <Border Grid.Column="0" MouseLeftButtonDown="CalibrationCard_Click"
                            Cursor="Hand" CornerRadius="12" Padding="20"
                            Background="{DynamicResource CardBrush}"
                            BorderThickness="2">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCalibrationMode}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#2ECC71" Opacity="0.08"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton IsChecked="{Binding IsCalibrationMode}" Margin="0,0,12,0"
                                             VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource SuccessBrush}" CornerRadius="8"
                                        Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="TuneVertical" Width="20" Height="20"
                                                                Foreground="White" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="1" Text="Calibration" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                Determine the C-O correction value for a gyro system being calibrated.
                                The result will be applied as the new correction.
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- Verification Mode -->
                    <Border Grid.Column="2" MouseLeftButtonDown="VerificationCard_Click"
                            Cursor="Hand" CornerRadius="12" Padding="20"
                            Background="{DynamicResource CardBrush}"
                            BorderThickness="2">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVerificationMode}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#3498DB" Opacity="0.08"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton IsChecked="{Binding IsVerificationMode}" Margin="0,0,12,0"
                                             VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource AccentBrush}" CornerRadius="8"
                                        Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="CheckDecagram" Width="20" Height="20"
                                                                Foreground="White" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="1" Text="Verification" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                Verify that the existing correction is still valid.
                                Expected result: Mean C-O ≈ 0° if calibration is current.
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- ==================== PROJECT DETAILS ==================== -->
            <StackPanel Grid.Row="2" Margin="0,0,0,24">
                <TextBlock Text="PROJECT INFORMATION" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Row 1: Project Title (full width) -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Project Title"/>
                                <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                            <TextBox Text="{Binding Project.ProjectTitle, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Enter project name or reference"
                                     mah:TextBoxHelper.ClearTextButton="True"/>
                        </StackPanel>
                        
                        <!-- Row 2: Vessel Name | Date -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Vessel Name"/>
                                <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                            <TextBox Text="{Binding Project.VesselName, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., MV Explorer"
                                     mah:TextBoxHelper.ClearTextButton="True"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Survey Date" Style="{StaticResource FieldLabelWithUnit}"/>
                            <mah:DateTimePicker SelectedDateTime="{Binding Project.DateTime}"
                                                SelectedDateFormat="Short"
                                                Orientation="Horizontal"/>
                        </StackPanel>
                        
                        <!-- Row 3: Surveyor | Reference System -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Surveyor / Observer" Style="{StaticResource FieldLabelWithUnit}"/>
                            <TextBox Text="{Binding Project.ObservedBy, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Name of person conducting calibration"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Reference System (Heading Source)" Style="{StaticResource FieldLabelWithUnit}"/>
                            <TextBox Text="{Binding Project.ReferenceSystemModel, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., GNSS Compass, Satellite Compass"/>
                        </StackPanel>
                        
                        <!-- Row 4: Calibrated System -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Calibrated System (Gyro Being Tested)" Style="{StaticResource FieldLabelWithUnit}"/>
                            <TextBox Text="{Binding Project.CalibratedSystemModel, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., Vessel Main Gyro, Backup Gyro"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- ==================== SETTINGS ==================== -->
            <StackPanel Grid.Row="3">
                <TextBlock Text="SETTINGS" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Display Unit -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Display Unit"/>
                                <Run Text=" (for distances)" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <ComboBox ItemsSource="{Binding UnitOptions}"
                                      SelectedValue="{Binding Project.DisplayUnit}"
                                      SelectedValuePath="Unit"
                                      DisplayMemberPath="DisplayName"/>
                        </StackPanel>
                        
                        <!-- Rounding -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Result Precision" Style="{StaticResource FieldLabelWithUnit}"/>
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <mah:ToggleSwitch Grid.Column="0" IsOn="{Binding Project.RoundingEnabled, Mode=TwoWay}"
                                                  OnContent="" OffContent="" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Round to 4 decimal places"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Help Text -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                        Padding="16" Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="InformationOutline" Width="18" Height="18"
                                                    Foreground="{DynamicResource AccentBrush}"
                                                    VerticalAlignment="Top" Margin="0,2,12,0"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            <Run FontWeight="SemiBold" Text="Tip: "/>
                            <Run Text="All angle measurements are in degrees (°). Distance units (if applicable) will use the selected display unit throughout the module. Required fields are marked with"/>
                            <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
