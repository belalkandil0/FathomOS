<mah:MetroWindow x:Class="FathomOS.Modules.GnssCalibration.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm="clr-namespace:FathomOS.Modules.GnssCalibration.ViewModels"
        xmlns:converters="clr-namespace:FathomOS.Modules.GnssCalibration.Converters"
        xmlns:steps="clr-namespace:FathomOS.Modules.GnssCalibration.Views.Steps"
        mc:Ignorable="d"
        Title="GNSS Calibration - Fathom OS"
        Height="850" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentBrush}"
        ResizeMode="CanResizeWithGrip"
        TitleCharacterCasing="Normal"
        ShowTitleBar="True"
        SaveWindowPosition="True">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:StepToActiveConverter x:Key="StepToActive"/>
        <converters:StepToCompletedConverter x:Key="StepToCompleted"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Title Bar Buttons -->
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ShowHelpCommand}" ToolTip="Help (F1)">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="HelpCircleOutline" Width="16" Height="16" VerticalAlignment="Center"/>
                    <TextBlock Text="Help" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ToggleThemeCommand}" ToolTip="{Binding ThemeToggleTooltip}">
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <iconPacks:PackIconMaterial Kind="WeatherSunny" Width="16" Height="16" 
                                                     Foreground="#FFD700"
                                                     Visibility="{Binding IsDarkTheme, Converter={StaticResource BoolToVisibility}}"/>
                        <iconPacks:PackIconMaterial Kind="WeatherNight" Width="16" Height="16" 
                                                     Foreground="#4A90D9"
                                                     Visibility="{Binding IsDarkTheme, Converter={StaticResource InverseBoolToVisibility}}"/>
                    </Grid>
                    <TextBlock Text="Theme" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding NewProjectCommand}" ToolTip="New Project (Ctrl+N)">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="FileDocumentPlus" Width="16" Height="16" VerticalAlignment="Center"/>
                    <TextBlock Text="New" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Step Header with Title -->
            <RowDefinition Height="*"/>         <!-- Content -->
            <RowDefinition Height="Auto"/>      <!-- Navigation (hidden on Step 7) -->
            <RowDefinition Height="Auto"/>      <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Enhanced Step Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Top Row: Current Step Info + Point Counters -->
                <Grid Grid.Row="0" Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Current Step Badge + Title + Description -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Step Number Badge -->
                        <Border Background="{DynamicResource AccentBrush}" CornerRadius="10" 
                                Width="48" Height="48" Margin="0,0,16,0">
                            <TextBlock Text="{Binding CurrentStepIndex}" 
                                       Foreground="White" FontSize="22" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Step Title and Description -->
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentStep.Name}" 
                                       FontSize="22" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding CurrentStep.Description}" 
                                       FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Progress Indicator (center) -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                            <Run Text="Step"/>
                            <Run Text="{Binding CurrentStepIndex, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text="of 7"/>
                        </TextBlock>
                        <!-- Mini progress bar -->
                        <Border Background="{DynamicResource BorderBrush}" CornerRadius="3" 
                                Height="6" Width="140" Margin="0,6,0,0">
                            <Border Background="{DynamicResource AccentBrush}" CornerRadius="3" 
                                    HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Width" Value="20"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="1">
                                                <Setter Property="Width" Value="20"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="2">
                                                <Setter Property="Width" Value="40"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="3">
                                                <Setter Property="Width" Value="60"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="4">
                                                <Setter Property="Width" Value="80"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="5">
                                                <Setter Property="Width" Value="100"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="6">
                                                <Setter Property="Width" Value="120"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="7">
                                                <Setter Property="Width" Value="140"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Border>
                    </StackPanel>
                    
                    <!-- Point Counters -->
                    <Border Grid.Column="2" Background="{DynamicResource CardBrush}" 
                            CornerRadius="10" Padding="16,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Margin="0,0,20,0">
                                <Run Text="Points:"/>
                                <Run Text="{Binding TotalPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                            <TextBlock FontSize="13" Margin="0,0,20,0">
                                <Run Text="✓" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                                <Run Text="{Binding AcceptedPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                            </TextBlock>
                            <TextBlock FontSize="13">
                                <Run Text="✗" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}"/>
                                <Run Text="{Binding RejectedPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Bottom Row: Step Progress Pills -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding Steps}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.GoToStepCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Number}"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Padding="0" Margin="4,0">
                                <Border CornerRadius="16" Padding="14,8" MinWidth="100">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Step Number (when not completed) -->
                                        <TextBlock FontSize="13" FontWeight="Bold" Margin="0,0,8,0"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding IsCompleted, Converter={StaticResource InverseBoolToVisibility}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                    <Setter Property="Text" Value="{Binding Number}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <!-- Checkmark (when completed) -->
                                        <iconPacks:PackIconMaterial Kind="Check" Width="14" Height="14"
                                                                     Foreground="White" Margin="0,0,8,0"
                                                                     VerticalAlignment="Center"
                                                                     Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}"/>
                                        <!-- Step Name -->
                                        <TextBlock Text="{Binding Name}" FontSize="13" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Margin="15,10" Style="{DynamicResource CardBorder}">
            <Grid>
                <steps:Step1SetupView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=1}"/>
                <steps:Step2LoadView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=2}"/>
                <steps:Step3SettingsView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=3}"/>
                <steps:Step4AlignView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=4}"/>
                <steps:Step5QCView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=5}"/>
                <steps:Step6ResultsView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=6}"/>
                <steps:Step7ExportView Visibility="{Binding CurrentStepIndex, Converter={StaticResource StepToActive}, ConverterParameter=7}"/>
            </Grid>
        </Border>

        <!-- Navigation Buttons (Hidden on Step 7 - it has its own nav) -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15,12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentStepIndex}" Value="7">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" 
                        Command="{Binding PreviousStepCommand}"
                        IsEnabled="{Binding CanGoBack}"
                        Style="{DynamicResource SecondaryButton}"
                        MinWidth="110" Padding="14,10">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="16" Height="16" 
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Back" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <!-- Status Message (center) -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage, Mode=OneWay}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="13"/>

                <!-- Next Button -->
                <Button Grid.Column="2" 
                        Command="{Binding NextStepCommand}"
                        IsEnabled="{Binding CanGoNext}"
                        Style="{DynamicResource PrimaryButton}"
                        MinWidth="140" Padding="14,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding NextButtonText}" VerticalAlignment="Center" FontSize="14"/>
                        <Grid Margin="8,0,0,0">
                            <!-- Arrow for normal navigation -->
                            <iconPacks:PackIconMaterial Kind="ArrowRight" Width="16" Height="16" VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial.Style>
                                    <Style TargetType="iconPacks:PackIconMaterial">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="4">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </iconPacks:PackIconMaterial.Style>
                            </iconPacks:PackIconMaterial>
                            <!-- Checkmark for Process (Step 4) -->
                            <iconPacks:PackIconMaterial Kind="CheckAll" Width="16" Height="16" VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial.Style>
                                    <Style TargetType="iconPacks:PackIconMaterial">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentStepIndex}" Value="4">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </iconPacks:PackIconMaterial.Style>
                            </iconPacks:PackIconMaterial>
                        </Grid>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource PrimaryDarkBrush}" Padding="15,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center">
                    <Run Text="{Binding StatusMessage, Mode=OneWay}"/>
                </TextBlock>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="v4.5.4" Foreground="{DynamicResource TextSecondaryBrush}" 
                               FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <mah:ProgressRing IsActive="{Binding IsBusy}" 
                                      Width="14" Height="14"
                                      Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" 
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="Processing..." Foreground="White" FontSize="14" 
                           Margin="0,12,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

</mah:MetroWindow>
