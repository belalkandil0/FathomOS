<UserControl x:Class="FathomOS.Modules.GnssCalibration.Views.Steps.Step2LoadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.GnssCalibration.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        
        <!-- Premium Card Style -->
        <Style x:Key="PremiumCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.12" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Label Style -->
        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <!-- Column ComboBox Style -->
        <Style x:Key="ColumnComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step Header -->
            <Border Grid.Row="0" Style="{StaticResource PremiumCard}" Padding="20,15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="6" Padding="10,4" Margin="0,0,12,0">
                                <TextBlock Text="STEP 2" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </Border>
                            <TextBlock Text="Column Mapping &amp; Data Selection" FontSize="22" FontWeight="SemiBold"
                                       Foreground="#1E3A5F" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Map NPD columns to GNSS systems. Auto-detection finds common patterns - adjust if needed." 
                                   Foreground="#888" FontSize="12" Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- Data Status Badge -->
                    <Border Grid.Column="1" CornerRadius="20" Padding="15,8" Background="#27AE60"
                            Visibility="{Binding DataLoaded, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="CheckCircle" Width="16" Height="16" 
                                                         Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding TotalDataRows, StringFormat='{}{0:N0} rows loaded', Mode=OneWay}" 
                                       Foreground="White" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Auto-Detection Notice -->
            <Border Grid.Row="1" Background="{DynamicResource PrimarySubtleBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                    Visibility="{Binding DataLoaded, Converter={StaticResource BoolToVisibility}}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="AutoFix" Width="20" Height="20" 
                                                 Foreground="#3498DB" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Auto-Detection Active" FontWeight="SemiBold" FontSize="13" Foreground="#2980B9"/>
                        <TextBlock Text="Columns have been automatically detected based on common naming patterns. Review and adjust if necessary." 
                                   FontSize="11" Foreground="#5DADE2"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Column Mapping Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- GNSS 1 (Reference) Card -->
                <Border Grid.Column="0" Style="{StaticResource PremiumCard}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border CornerRadius="8" Padding="12,8" Margin="0,0,15,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1E3A5F" Offset="0"/>
                                        <GradientStop Color="#2C5282" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Satellite" Width="20" Height="20" 
                                                                 Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="GNSS 1" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="REFERENCE SYSTEM" Style="{StaticResource SectionLabel}" Margin="0"/>
                                <TextBlock Text="Primary positioning system" Foreground="#666" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Form Fields -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="SYSTEM NAME" Style="{StaticResource SectionLabel}"/>
                            <TextBox Text="{Binding Project.System1Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="36" FontSize="13" Padding="10,8" Margin="0,0,0,15"/>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="EASTING COLUMN *" Style="{StaticResource SectionLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                              SelectedItem="{Binding SelectedSystem1EastingColumn, Mode=TwoWay}"
                                              Style="{StaticResource ColumnComboBox}"
                                              ToolTip="Select the column containing System 1 Easting values"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="NORTHING COLUMN *" Style="{StaticResource SectionLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                              SelectedItem="{Binding SelectedSystem1NorthingColumn, Mode=TwoWay}"
                                              Style="{StaticResource ColumnComboBox}"
                                              ToolTip="Select the column containing System 1 Northing values"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="HEIGHT COLUMN (OPTIONAL)" Style="{StaticResource SectionLabel}"/>
                            <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                      SelectedItem="{Binding SelectedSystem1HeightColumn, Mode=TwoWay}"
                                      Style="{StaticResource ColumnComboBox}"
                                      ToolTip="Select the column containing System 1 Height values (optional)"/>
                            
                            <!-- Mapping Status -->
                            <Border Background="{DynamicResource SuccessSubtleBrush}" CornerRadius="6" Padding="10" Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CheckCircleOutline" Width="16" Height="16" 
                                                                 Foreground="#27AE60" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock FontSize="11" Foreground="#166534">
                                        <Run Text="Mapped: "/>
                                        <Run Text="{Binding SelectedSystem1EastingColumn, Mode=OneWay, FallbackValue='(none)'}" FontWeight="SemiBold"/>
                                        <Run Text=", "/>
                                        <Run Text="{Binding SelectedSystem1NorthingColumn, Mode=OneWay, FallbackValue='(none)'}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- GNSS 2 (Comparison) Card -->
                <Border Grid.Column="2" Style="{StaticResource PremiumCard}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                            <Border CornerRadius="8" Padding="12,8" Margin="0,0,15,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#E67E22" Offset="0"/>
                                        <GradientStop Color="#F39C12" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="SatelliteVariant" Width="20" Height="20" 
                                                                 Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="GNSS 2" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="COMPARISON SYSTEM" Style="{StaticResource SectionLabel}" Margin="0"/>
                                <TextBlock Text="System to compare against" Foreground="#666" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Form Fields -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="SYSTEM NAME" Style="{StaticResource SectionLabel}"/>
                            <TextBox Text="{Binding Project.System2Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="36" FontSize="13" Padding="10,8" Margin="0,0,0,15"/>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="EASTING COLUMN *" Style="{StaticResource SectionLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                              SelectedItem="{Binding SelectedSystem2EastingColumn, Mode=TwoWay}"
                                              Style="{StaticResource ColumnComboBox}"
                                              ToolTip="Select the column containing System 2 Easting values"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="NORTHING COLUMN *" Style="{StaticResource SectionLabel}"/>
                                    <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                              SelectedItem="{Binding SelectedSystem2NorthingColumn, Mode=TwoWay}"
                                              Style="{StaticResource ColumnComboBox}"
                                              ToolTip="Select the column containing System 2 Northing values"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="HEIGHT COLUMN (OPTIONAL)" Style="{StaticResource SectionLabel}"/>
                            <ComboBox ItemsSource="{Binding AvailableColumns}" 
                                      SelectedItem="{Binding SelectedSystem2HeightColumn, Mode=TwoWay}"
                                      Style="{StaticResource ColumnComboBox}"
                                      ToolTip="Select the column containing System 2 Height values (optional)"/>
                            
                            <!-- Mapping Status -->
                            <Border Background="{DynamicResource AccentSubtleBrush}" CornerRadius="6" Padding="10" Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CheckCircleOutline" Width="16" Height="16" 
                                                                 Foreground="#E67E22" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock FontSize="11" Foreground="#9A3412">
                                        <Run Text="Mapped: "/>
                                        <Run Text="{Binding SelectedSystem2EastingColumn, Mode=OneWay, FallbackValue='(none)'}" FontWeight="SemiBold"/>
                                        <Run Text=", "/>
                                        <Run Text="{Binding SelectedSystem2NorthingColumn, Mode=OneWay, FallbackValue='(none)'}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Time Range Slider Card -->
            <Border Grid.Row="3" Style="{StaticResource PremiumCard}" Padding="25,20" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Time Filter Header -->
                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Background="{DynamicResource InfoBrush}" CornerRadius="6" Padding="10,6" Margin="0,0,12,0">
                                <iconPacks:PackIconMaterial Kind="ClockTimeEight" Width="18" Height="18" Foreground="White"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="TIME RANGE" Style="{StaticResource SectionLabel}" Margin="0"/>
                                <TextBlock Text="Filter data by time period" Foreground="#666" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <CheckBox Content="Enable time filtering" 
                                  IsChecked="{Binding TimeFilterEnabled, Mode=TwoWay}"
                                  FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Slider Section -->
                    <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TimeFilterEnabled}" Value="False">
                                        <Setter Property="Opacity" Value="0.4"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <!-- Time Labels -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Text="START" FontSize="9" FontWeight="Bold" Foreground="#888"/>
                                <TextBlock Text="{Binding FilterStartTimeDisplay, Mode=OneWay}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#1E3A5F"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="DURATION" FontSize="9" FontWeight="Bold" Foreground="#888" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding FilterDurationDisplay, Mode=OneWay}" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="#E67E22" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock Text="END" FontSize="9" FontWeight="Bold" Foreground="#888" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding FilterEndTimeDisplay, Mode=OneWay}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#1E3A5F" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Range Sliders -->
                        <Grid Height="50" Margin="0,5">
                            <Border Background="{DynamicResource BorderLightBrush}" CornerRadius="6" Height="10" VerticalAlignment="Center" Margin="10,0"/>
                            <Slider Value="{Binding TimeSliderStart}" 
                                    Minimum="{Binding TimeSliderMinimum}" 
                                    Maximum="{Binding TimeSliderMaximum}" 
                                    IsEnabled="{Binding TimeFilterEnabled}"
                                    VerticalAlignment="Center"
                                    SmallChange="0.1" LargeChange="1"
                                    ToolTip="Drag to set filter start time"/>
                        </Grid>
                        
                        <Grid Height="50" Margin="0,-30,0,0">
                            <Slider Value="{Binding TimeSliderEnd}" 
                                    Minimum="{Binding TimeSliderMinimum}" 
                                    Maximum="{Binding TimeSliderMaximum}" 
                                    IsEnabled="{Binding TimeFilterEnabled}"
                                    VerticalAlignment="Center"
                                    SmallChange="0.1" LargeChange="1"
                                    ToolTip="Drag to set filter end time"/>
                        </Grid>
                        
                        <!-- Full Data Range -->
                        <Grid Margin="10,5,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" HorizontalAlignment="Left" FontSize="10" Foreground="#AAA">
                                <Run Text="Data Start: "/>
                                <Run Text="{Binding DataStartTime, StringFormat=HH:mm:ss, Mode=OneWay, FallbackValue=--:--:--}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Right" FontSize="10" Foreground="#AAA">
                                <Run Text="Data End: "/>
                                <Run Text="{Binding DataEndTime, StringFormat=HH:mm:ss, Mode=OneWay, FallbackValue=--:--:--}"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Statistics Panel -->
                    <Border Grid.Column="2" Background="{DynamicResource PanelAltBrush}" CornerRadius="10" Padding="20,15" Margin="20,0,0,0">
                        <StackPanel>
                            <TextBlock Text="DATA STATS" Style="{StaticResource SectionLabel}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total:" FontSize="11" Foreground="#666"/>
                                <TextBlock Grid.Column="2" Text="{Binding TotalDataRows, StringFormat='{}{0:N0}', Mode=OneWay}" 
                                           FontWeight="Bold" FontSize="13" Foreground="#1E3A5F"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Selected:" FontSize="11" Foreground="#666"/>
                                <TextBlock Grid.Column="2" Text="{Binding FilteredDataCount, StringFormat='{}{0:N0}', Mode=OneWay}" 
                                           FontWeight="Bold" FontSize="13" Foreground="#27AE60"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Duration:" FontSize="11" Foreground="#666"/>
                                <TextBlock Grid.Column="2" Text="{Binding DataDurationDisplay, Mode=OneWay}" 
                                           FontWeight="Bold" FontSize="13" Foreground="#E67E22"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="4" Style="{StaticResource PremiumCard}" Padding="25,18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Parse Options -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox Content="NaviPac date/time split mode" 
                                  IsChecked="{Binding Project.ColumnMapping.HasDateTimeSplit, Mode=TwoWay}"
                                  ToolTip="Enable if header shows 'Time' but data has 'Date,Time' as separate columns"
                                  FontSize="12" Margin="0,0,30,0"/>
                        
                        <TextBlock Text="Date:" FontSize="11" Foreground="#888" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding Project.ColumnMapping.DateFormat}" 
                                 Width="100" Height="28" FontSize="11" Margin="0,0,20,0"/>
                        
                        <TextBlock Text="Time:" FontSize="11" Foreground="#888" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding Project.ColumnMapping.TimeFormat}" 
                                 Width="80" Height="28" FontSize="11"/>
                    </StackPanel>
                    
                    <!-- Preview Button -->
                    <Button Grid.Column="1" Command="{Binding ShowDataPreviewCommand}" 
                            Margin="0,0,20,0" Padding="25,12" Background="{DynamicResource InfoBrush}" Foreground="White" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="TableEye" Width="18" Height="18" 
                                                         VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Preview All Data" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Confirmation -->
                    <Border Grid.Column="2" Background="{DynamicResource SuccessSubtleBrush}" CornerRadius="8" Padding="15,10">
                        <CheckBox Content="Column mapping verified" 
                                  IsChecked="{Binding DataPreviewConfirmed, Mode=TwoWay}"
                                  FontSize="12" FontWeight="SemiBold" Foreground="#166534"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="5" Background="#80000000" CornerRadius="12"
                    Visibility="{Binding IsLoadingAllData, Converter={StaticResource BoolToVisibility}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <mah:ProgressRing IsActive="True" Width="60" Height="60" Foreground="White"/>
                    <TextBlock Text="Loading all data rows..." Foreground="White" FontSize="14" 
                               FontWeight="SemiBold" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Auto-detecting column mappings..." Foreground="#CCC" FontSize="11" 
                               Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
