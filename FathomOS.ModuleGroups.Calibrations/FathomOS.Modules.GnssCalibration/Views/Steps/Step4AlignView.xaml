<UserControl x:Class="FathomOS.Modules.GnssCalibration.Views.Steps.Step4AlignView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.GnssCalibration.Converters"
             d:DesignHeight="650" d:DesignWidth="1100"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Step Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Process &amp; Data" Style="{DynamicResource SectionHeader}" FontSize="20"/>
            <TextBlock Text="Process the data to calculate C-O (Computed minus Observed) differences and view all points." 
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Process Control Bar -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Process Button -->
                <Button Grid.Column="0" 
                        Command="{Binding ProcessDataCommand}"
                        Style="{DynamicResource PrimaryButton}"
                        Padding="20,8">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Play" Width="16" Height="16" 
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Process Data" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Status Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <!-- Not Processed State -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding DataProcessed, Converter={StaticResource InverseBoolToVisibility}}">
                        <iconPacks:PackIconMaterial Kind="AlertCircleOutline" Width="18" Height="18"
                                                     Foreground="{DynamicResource WarningBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Data not yet processed. Click 'Process Data' to calculate differences."
                                   Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Processed State -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding DataProcessed, Converter={StaticResource BoolToVisibility}}">
                        <iconPacks:PackIconMaterial Kind="CheckCircle" Width="18" Height="18"
                                                     Foreground="{DynamicResource SuccessBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}">
                            <Run Text="Processed"/>
                            <Run Text="{Binding TotalPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                            <Run Text="points |"/>
                            <Run Text="{Binding AcceptedPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                            <Run Text="accepted |"/>
                            <Run Text="{Binding RejectedPointCount, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}"/>
                            <Run Text="rejected"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                
                <!-- Processing Time -->
                <TextBlock Grid.Column="2" Text="{Binding StatusMessage, Mode=OneWay}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" FontSize="11"/>
            </Grid>
        </Border>

        <!-- C-O Data Table -->
        <Border Grid.Row="2" Style="{DynamicResource CardBorder}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Table Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <iconPacks:PackIconMaterial Kind="TableLarge" Width="18" Height="18" 
                                                 Foreground="{DynamicResource AccentBrush}" 
                                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="C-O Data (Computed - Observed)" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock Margin="15,0,0,0" FontSize="11" VerticalAlignment="Center"
                               Visibility="{Binding DataProcessed, Converter={StaticResource BoolToVisibility}}">
                        <Run Text="Showing all" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <Run Text="{Binding ComparisonPoints.Count, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
                        <Run Text="points" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding ComparisonPoints}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Extended"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource BorderBrush}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True"
                          Visibility="{Binding DataProcessed, Converter={StaticResource BoolToVisibility}}">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRejected}" Value="True">
                                    <Setter Property="Background" Value="#15E74C3C"/>
                                    <Setter Property="Foreground" Value="#C0392B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Time" Binding="{Binding DateTime, StringFormat=HH:mm:ss}" Width="75"/>
                        <DataGridTextColumn Header="ΔE (C-O)" Binding="{Binding DeltaEasting, StringFormat=F4}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ΔN (C-O)" Binding="{Binding DeltaNorthing, StringFormat=F4}" Width="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ΔH (C-O)" Binding="{Binding DeltaHeight, StringFormat=F4}" Width="85">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Radial" Binding="{Binding RadialDistance, StringFormat=F4}" Width="85">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Sys1 E" Binding="{Binding System1Easting, StringFormat=F3}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#2980B9"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Sys1 N" Binding="{Binding System1Northing, StringFormat=F3}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#2980B9"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Sys2 E" Binding="{Binding System2Easting, StringFormat=F3}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#8E44AD"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Sys2 N" Binding="{Binding System2Northing, StringFormat=F3}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#8E44AD"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Empty State -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding DataProcessed, Converter={StaticResource InverseBoolToVisibility}}">
                    <iconPacks:PackIconMaterial Kind="DatabaseOff" Width="64" Height="64"
                                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="No Data Processed Yet" FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400"
                               Foreground="{DynamicResource TextSecondaryBrush}">
                        Click "Process Data" above to parse the file, calculate C-O differences 
                        (Computed minus Observed), and apply the outlier filter.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
