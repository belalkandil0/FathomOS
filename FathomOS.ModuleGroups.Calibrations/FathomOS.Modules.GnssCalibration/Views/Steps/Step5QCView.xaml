<UserControl x:Class="FathomOS.Modules.GnssCalibration.Views.Steps.Step5QCView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.GnssCalibration.Converters"
             d:DesignHeight="500" d:DesignWidth="900"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <converters:RejectedToColorConverter x:Key="RejectedToColor"/>
        <converters:BoolToStatusTextConverter x:Key="BoolToStatusText"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Quality Control" Style="{DynamicResource SectionHeader}" FontSize="20"/>
            <TextBlock Text="Review outliers and manually accept/reject data points." 
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Data Grid -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Comparison Data" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="10" 
                                Padding="8,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding TotalPointCount, Mode=OneWay}" FontSize="11" Foreground="White"/>
                        </Border>
                        <TextBlock Text="points" Foreground="{DynamicResource TextSecondaryBrush}" 
                                   Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding ComparisonPoints}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Extended"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="{DynamicResource SurfaceBrush}"
                              RowBackground="{DynamicResource CardBrush}"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding DateTime, StringFormat=HH:mm:ss}" Width="70"/>
                            <DataGridTextColumn Header="ΔE" Binding="{Binding DeltaEasting, StringFormat=F4}" Width="80"/>
                            <DataGridTextColumn Header="ΔN" Binding="{Binding DeltaNorthing, StringFormat=F4}" Width="80"/>
                            <DataGridTextColumn Header="ΔH" Binding="{Binding DeltaHeight, StringFormat=F4}" Width="80"/>
                            <DataGridTextColumn Header="Radial" Binding="{Binding RadialDistance, StringFormat=F4}" Width="80"/>
                            <DataGridTextColumn Header="Z-Score" Binding="{Binding StandardizedScore, StringFormat=F2}" Width="70"/>
                            <DataGridTemplateColumn Header="Status" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="5,2" 
                                                HorizontalAlignment="Center"
                                                Background="{Binding IsRejected, Converter={StaticResource RejectedToColor}}">
                                            <TextBlock Text="{Binding IsRejected, Converter={StaticResource BoolToStatusText}}" 
                                                       Foreground="White" FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- QC Summary -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Filter Summary" Style="{DynamicResource SectionHeader}"/>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Total Points" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding TotalPointCount, Mode=OneWay}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Accepted" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding AcceptedPointCount, Mode=OneWay}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="12" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Rejected" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding RejectedPointCount, Mode=OneWay}" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource ErrorBrush}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Filter Settings -->
                    <TextBlock Text="Filter Settings" Style="{DynamicResource FieldLabel}" Margin="0,10,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" 
                                Minimum="1" Maximum="5" 
                                Value="{Binding Project.SigmaThreshold}"
                                TickFrequency="0.5" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Project.SigmaThreshold, StringFormat={}{0:F1}σ, Mode=OneWay}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    </Grid>

                    <Button Content="Apply Filter" Style="{DynamicResource PrimaryButton}" 
                            Command="{Binding ApplyFilterCommand}"
                            Margin="0,0,0,8"/>
                    <Button Content="Accept All" Style="{DynamicResource SecondaryButton}" 
                            Command="{Binding AcceptAllCommand}"
                            Margin="0,0,0,8"/>
                    <Button Content="Reject Flagged" Style="{DynamicResource SecondaryButton}"
                            Command="{Binding RejectFlaggedCommand}"/>
                    
                    <!-- Info -->
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="10" Margin="0,15,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}">
                            Points with Z-Score exceeding the sigma threshold 
                            AND radial distance exceeding the mean are flagged for rejection.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
