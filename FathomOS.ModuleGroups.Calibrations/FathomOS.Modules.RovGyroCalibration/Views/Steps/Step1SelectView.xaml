<UserControl x:Class="FathomOS.Modules.RovGyroCalibration.Views.Steps.Step1SelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.RovGyroCalibration.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        
        <!-- Input Group Style -->
        <Style x:Key="InputGroup" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <!-- Field Label -->
        <Style x:Key="FieldLabelWithUnit" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ==================== HEADER ==================== -->
            <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="{DynamicResource PrimaryBrush}" 
                            CornerRadius="12" Width="64" Height="64" Margin="0,0,20,0">
                        <iconPacks:PackIconMaterial Kind="Submarine" Width="32" Height="32"
                                                    Foreground="White" HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Step 1: Setup ROV Gyro Calibration" 
                                   FontSize="22" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Configure calibration mode, ROV geometry parameters, and project details."
                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ==================== MODE SELECTION ==================== -->
            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                <TextBlock Text="CALIBRATION MODE" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Calibration Mode -->
                    <Border Grid.Column="0" MouseLeftButtonDown="CalibrationCard_Click"
                            Cursor="Hand" CornerRadius="12" Padding="20"
                            Background="{DynamicResource CardBrush}" BorderThickness="2">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCalibrationMode}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#2ECC71" Opacity="0.08"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton IsChecked="{Binding IsCalibrationMode}" Margin="0,0,12,0"
                                             VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource SuccessBrush}" CornerRadius="8"
                                        Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="TuneVertical" Width="20" Height="20"
                                                                Foreground="White" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="1" Text="Calibration" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                Determine the C-O correction for the ROV gyro system.
                                Result will be applied as the new correction value.
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- Verification Mode -->
                    <Border Grid.Column="2" MouseLeftButtonDown="VerificationCard_Click"
                            Cursor="Hand" CornerRadius="12" Padding="20"
                            Background="{DynamicResource CardBrush}" BorderThickness="2">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVerificationMode}" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#3498DB" Opacity="0.08"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton IsChecked="{Binding IsVerificationMode}" Margin="0,0,12,0"
                                             VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource AccentBrush}" CornerRadius="8"
                                        Width="40" Height="40">
                                    <iconPacks:PackIconMaterial Kind="CheckDecagram" Width="20" Height="20"
                                                                Foreground="White" HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Grid.Row="1" Text="Verification" FontSize="18" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                Verify existing ROV gyro correction is still valid.
                                Expected: Mean C-O ≈ 0° if calibration is current.
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- ==================== ROV CONFIGURATION ==================== -->
            <StackPanel Grid.Row="2" Margin="0,0,0,24">
                <TextBlock Text="ROV GEOMETRY CONFIGURATION" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Row 1: Measurement Mode Toggle -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Measurement Mode" Style="{StaticResource FieldLabelWithUnit}"/>
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <mah:ToggleSwitch Grid.Column="0" IsOn="{Binding UseFwdAftMeasurements, Mode=TwoWay}"
                                                  OnContent="" OffContent="" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="{Binding MeasurementModeText, Mode=OneWay}"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Row 2: Port/Starboard OR Forward/Aft Measurements -->
                        <!-- Port/Starboard Mode -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource InputGroup}"
                                    Visibility="{Binding UseFwdAftMeasurements, Converter={StaticResource InverseBoolToVisibility}}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Port Distance"/>
                                <Run Text="{Binding UnitAbbreviation, Mode=OneWay, StringFormat='({0})'}" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding PortMeasurement}" 
                                               Minimum="0" Maximum="100" Interval="0.01"
                                               StringFormat="F3"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource InputGroup}"
                                    Visibility="{Binding UseFwdAftMeasurements, Converter={StaticResource InverseBoolToVisibility}}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Starboard Distance"/>
                                <Run Text="{Binding UnitAbbreviation, Mode=OneWay, StringFormat='({0})'}" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding StarboardMeasurement}" 
                                               Minimum="0" Maximum="100" Interval="0.01"
                                               StringFormat="F3"/>
                        </StackPanel>
                        
                        <!-- Forward/Aft Mode -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource InputGroup}"
                                    Visibility="{Binding UseFwdAftMeasurements, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Forward Distance"/>
                                <Run Text="{Binding UnitAbbreviation, Mode=OneWay, StringFormat='({0})'}" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding ForwardMeasurement}" 
                                               Minimum="0" Maximum="100" Interval="0.01"
                                               StringFormat="F3"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource InputGroup}"
                                    Visibility="{Binding UseFwdAftMeasurements, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Aft Distance"/>
                                <Run Text="{Binding UnitAbbreviation, Mode=OneWay, StringFormat='({0})'}" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding AftMeasurement}" 
                                               Minimum="0" Maximum="100" Interval="0.01"
                                               StringFormat="F3"/>
                        </StackPanel>
                        
                        <!-- Row 3: Baseline Distance | Baseline Offset D -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Baseline Distance"/>
                                <Run Text="{Binding UnitAbbreviation, Mode=OneWay, StringFormat='({0})'}" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding BaselineDistance}" 
                                               Minimum="0.1" Maximum="100" Interval="0.1"
                                               StringFormat="F3"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Baseline Offset (D)"/>
                                <Run Text="(°)" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <mah:NumericUpDown Value="{Binding BaselineOffset}" 
                                               Minimum="-180" Maximum="180" Interval="0.1"
                                               StringFormat="F2"/>
                        </StackPanel>
                        
                        <!-- Row 4: Facing Direction -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Text="ROV Facing Direction" Style="{StaticResource FieldLabelWithUnit}"/>
                            <ComboBox ItemsSource="{Binding FacingDirectionOptions}"
                                      SelectedItem="{Binding SelectedFacingDirection}"
                                      DisplayMemberPath="DisplayName"/>
                        </StackPanel>
                        
                        <!-- Row 5: Calculated Values Summary -->
                        <Border Grid.Row="4" Grid.ColumnSpan="3" Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="8" Padding="16" Margin="0,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="θ (Baseline Angle)" FontSize="11" 
                                               Foreground="{DynamicResource TextMutedBrush}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding CalculatedTheta, StringFormat={}{0:F4}°}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{DynamicResource AccentBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="Facing Offset" FontSize="11" 
                                               Foreground="{DynamicResource TextMutedBrush}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding FacingDirectionOffset, StringFormat={}{0:F1}°}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Total Correction" FontSize="11" 
                                               Foreground="{DynamicResource TextMutedBrush}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalCorrection, StringFormat={}{0:F4}°}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{DynamicResource SuccessBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- ==================== PROJECT DETAILS ==================== -->
            <StackPanel Grid.Row="3" Margin="0,0,0,24">
                <TextBlock Text="PROJECT INFORMATION" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Row 1: Project Name (full width) -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Project Name"/>
                                <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                            <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Enter project name or reference"
                                     mah:TextBoxHelper.ClearTextButton="True"/>
                        </StackPanel>
                        
                        <!-- Row 2: Vessel Name | ROV Name -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Vessel Name"/>
                                <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                            <TextBox Text="{Binding VesselName, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., MV Explorer"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource InputGroup}">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="ROV Name"/>
                                <Run Text=" *" Foreground="{DynamicResource ErrorBrush}"/>
                            </TextBlock>
                            <TextBox Text="{Binding RovName, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., Triton XLR"/>
                        </StackPanel>
                        
                        <!-- Row 3: Surveyor | Date -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Surveyor / Observer" Style="{StaticResource FieldLabelWithUnit}"/>
                            <TextBox Text="{Binding ObservedBy, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Name of person conducting calibration"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2" Style="{StaticResource InputGroup}">
                            <TextBlock Text="Survey Date" Style="{StaticResource FieldLabelWithUnit}"/>
                            <mah:DateTimePicker SelectedDateTime="{Binding SurveyDate}"
                                                SelectedDateFormat="Short"
                                                Orientation="Horizontal"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- ==================== SETTINGS ==================== -->
            <StackPanel Grid.Row="4">
                <TextBlock Text="SETTINGS" FontSize="11" FontWeight="Bold" 
                           Foreground="{DynamicResource TextMutedBrush}" 
                           Margin="0,0,0,12"/>
                
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Display Unit -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource FieldLabelWithUnit}">
                                <Run Text="Display Unit"/>
                                <Run Text=" (for distances)" Foreground="{DynamicResource TextMutedBrush}"/>
                            </TextBlock>
                            <ComboBox ItemsSource="{Binding UnitOptions}"
                                      SelectedValue="{Binding SelectedUnit}"
                                      SelectedValuePath="Unit"
                                      DisplayMemberPath="DisplayName"/>
                        </StackPanel>
                        
                        <!-- Rounding -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Result Precision" Style="{StaticResource FieldLabelWithUnit}"/>
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <mah:ToggleSwitch Grid.Column="0" IsOn="{Binding RoundingEnabled, Mode=TwoWay}"
                                                  OnContent="" OffContent="" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextSecondaryBrush}">
                                    <Run Text="Round to 4 decimal places"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Formula Reference -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                        Padding="16" Margin="0,16,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <iconPacks:PackIconMaterial Kind="Function" Width="18" Height="18"
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="ROV Gyro Formula" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">C = V + D + θ + Facing_Offset</Run>
                            <LineBreak/>
                            <Run Text="where V=Vessel Heading, D=Baseline Offset, θ=Baseline Angle, C=Corrected Reference"/>
                            <LineBreak/>
                            <Run FontWeight="SemiBold">C-O = C - ROV_Heading</Run>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
