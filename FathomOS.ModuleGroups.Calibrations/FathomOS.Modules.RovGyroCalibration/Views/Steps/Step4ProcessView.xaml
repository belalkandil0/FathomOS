<UserControl x:Class="FathomOS.Modules.RovGyroCalibration.Views.Steps.Step4ProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.RovGyroCalibration.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource CardBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Step 4: Filter &amp; Preview" Style="{DynamicResource SectionHeader}"/>
                    <TextBlock Text="Review the calculated C-O values and optionally filter by time range. Only filtered data will be used in processing."
                               TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <iconPacks:PackIconMaterial Grid.Column="1" Kind="Filter" 
                                            Width="48" Height="48" Opacity="0.3"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Time Filter -->
        <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <iconPacks:PackIconMaterial Kind="Clock" Width="18" Height="18"
                                                Foreground="{DynamicResource PrimaryBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="Time Range Filter" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Date Range Label -->
                    <TextBlock Grid.Row="0" Text="{Binding FormattedDateRange}" 
                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    
                    <!-- Time Range Slider -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Start Time Display -->
                        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="4" Padding="8,4">
                            <TextBlock Text="{Binding FormattedStartTime}" FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Range Slider -->
                        <mah:RangeSlider Grid.Column="1" Margin="12,0"
                                         Minimum="{Binding SliderMinimum}"
                                         Maximum="{Binding SliderMaximum}"
                                         LowerValue="{Binding SliderStart, Mode=TwoWay}"
                                         UpperValue="{Binding SliderEnd, Mode=TwoWay}"
                                         AutoToolTipPlacement="TopLeft"
                                         MoveWholeRange="True"
                                         ExtendedMode="True"
                                         IsSnapToTickEnabled="False"
                                         IsMoveToPointEnabled="True"
                                         MinRange="1"/>
                        
                        <!-- End Time Display -->
                        <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="4" Padding="8,4">
                            <TextBlock Text="{Binding FormattedEndTime}" FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                    
                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding ApplyFilterCommand}"
                                Style="{DynamicResource PrimaryButton}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Check" Width="14" Height="14" VerticalAlignment="Center"/>
                                <TextBlock Text="Apply Filter" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ResetFilterCommand}"
                                Style="{DynamicResource SecondaryButton}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" VerticalAlignment="Center"/>
                                <TextBlock Text="Reset" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Statistics Preview -->
        <Border Grid.Row="2" Style="{DynamicResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Records -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Records" Foreground="{DynamicResource TextSecondaryBrush}" 
                               FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCount, StringFormat='{}{0:N0}'}" 
                               FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Filtered Records -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="After Filter" Foreground="{DynamicResource TextSecondaryBrush}" 
                               FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding FilteredCount, StringFormat='{}{0:N0}'}" 
                               FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource SuccessBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Preview Mean C-O -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Preview Mean C-O" Foreground="{DynamicResource TextSecondaryBrush}" 
                               FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Center">
                        <Run Text="{Binding PreviewMeanCO, Mode=OneWay, StringFormat='{}{0:F3}'}"/><Run Text="°"/>
                    </TextBlock>
                </StackPanel>

                <!-- Preview Std Dev -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Preview Std Dev" Foreground="{DynamicResource TextSecondaryBrush}" 
                               FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource InfoBrush}"
                               HorizontalAlignment="Center">
                        <Run Text="{Binding PreviewStdDev, Mode=OneWay, StringFormat='{}{0:F3}'}"/><Run Text="°"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Preview Grid -->
        <Border Grid.Row="3" Style="{DynamicResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <iconPacks:PackIconMaterial Kind="TableLarge" Width="18" Height="18"
                                                Foreground="{DynamicResource PrimaryBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="C-O Preview (first 100 rows)" FontWeight="SemiBold" FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewData}"
                          Style="{StaticResource ModernDataGrid}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="60"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" Width="100"/>
                        <DataGridTextColumn Header="Vessel (°)" Binding="{Binding VesselHeading, StringFormat='{}{0:F2}'}" Width="100"/>
                        <DataGridTextColumn Header="ROV (°)" Binding="{Binding RovHeading, StringFormat='{}{0:F2}'}" Width="100"/>
                        <DataGridTextColumn Header="C-O (°)" Binding="{Binding CO, StringFormat='{}{0:F3}'}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- No data placeholder -->
                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8"
                        Visibility="{Binding HasData, Converter={StaticResource InverseBoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="DatabaseOff" Width="64" Height="64"
                                                    Foreground="{DynamicResource BorderBrush}"
                                                    HorizontalAlignment="Center"/>
                        <TextBlock Text="No data to display. Check column mapping in Step 3."
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontSize="14" Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Processing overlay -->
                <Border Grid.Row="1" Background="#80000000" CornerRadius="8"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <mah:ProgressRing IsActive="True" Width="40" Height="40"/>
                        <TextBlock Text="Processing data..." Foreground="White" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="6" Padding="12,8" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Kind="Information" Width="16" Height="16"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
