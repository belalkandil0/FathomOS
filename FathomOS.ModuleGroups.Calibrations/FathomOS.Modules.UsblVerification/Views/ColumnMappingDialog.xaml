<mah:MetroWindow x:Class="FathomOS.Modules.UsblVerification.Views.ColumnMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Column Mapping - USBL Verification"
        Height="700" Width="950"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentBrush}"
        TitleCharacterCasing="Normal">

    <mah:MetroWindow.Resources>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <iconPacks:PackIconMaterial Kind="TableCog" Width="28" Height="28" 
                                            VerticalAlignment="Center" 
                                            Foreground="{DynamicResource AccentBrush}"/>
                
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Configure Column Mapping" 
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock x:Name="FileNameText" Text="Loading file..."
                               FontSize="12" Opacity="0.7"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <Button x:Name="AutoDetectButton" Grid.Column="2" 
                        Style="{DynamicResource MahApps.Styles.Button.Flat}"
                        Click="AutoDetectButton_Click"
                        ToolTip="Re-run auto-detection">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="AutoFix" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Auto-Detect"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content - Split View -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Column Mapping -->
            <Border Grid.Column="0" Background="{DynamicResource CardBrush}" 
                    CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- File Settings -->
                        <TextBlock Text="FILE SETTINGS" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Delimiter:"/>
                            <ComboBox x:Name="DelimiterCombo" Grid.Column="1" SelectedIndex="1"
                                      SelectionChanged="DelimiterCombo_SelectionChanged">
                                <ComboBoxItem Content="Tab" Tag="&#x9;"/>
                                <ComboBoxItem Content="Comma" Tag=","/>
                                <ComboBoxItem Content="Semicolon" Tag=";"/>
                                <ComboBoxItem Content="Space" Tag=" "/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Header Rows:"/>
                            <mah:NumericUpDown x:Name="HeaderRowsUpDown" Grid.Column="1" 
                                               Value="1" Minimum="0" Maximum="10"
                                               ValueChanged="HeaderRowsUpDown_ValueChanged"/>
                        </Grid>
                        
                        <CheckBox x:Name="DateTimeSplitCheck" Content="NaviPac Date/Time Split" 
                                  IsChecked="True" Margin="0,5,0,15"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  ToolTip="Enable if header shows 'Time' but data has separate Date,Time columns"
                                  Checked="DateTimeSplitCheck_Changed" Unchecked="DateTimeSplitCheck_Changed"/>

                        <Separator Margin="0,5,0,15" Background="{DynamicResource BorderBrush}"/>

                        <!-- Date/Time Columns -->
                        <TextBlock Text="DATE/TIME" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Time/Date:"/>
                            <ComboBox x:Name="DateColumnCombo" Grid.Column="1"/>
                        </Grid>

                        <Separator Margin="0,10,0,15" Background="{DynamicResource BorderBrush}"/>

                        <!-- Vessel Columns -->
                        <TextBlock Text="VESSEL POSITION" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Easting:"/>
                            <ComboBox x:Name="VesselEastingCombo" Grid.Column="1"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Northing:"/>
                            <ComboBox x:Name="VesselNorthingCombo" Grid.Column="1"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Gyro/Heading:"/>
                            <ComboBox x:Name="VesselGyroCombo" Grid.Column="1"/>
                        </Grid>

                        <Separator Margin="0,10,0,15" Background="{DynamicResource BorderBrush}"/>

                        <!-- Transponder Columns -->
                        <TextBlock Text="TRANSPONDER/USBL POSITION" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Easting:"/>
                            <ComboBox x:Name="TransponderEastingCombo" Grid.Column="1"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Northing:"/>
                            <ComboBox x:Name="TransponderNorthingCombo" Grid.Column="1"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Depth/Height:"/>
                            <ComboBox x:Name="TransponderDepthCombo" Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Data Preview -->
            <Border Grid.Column="1" Background="{DynamicResource CardBrush}" 
                    CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="DATA PREVIEW" FontWeight="SemiBold" FontSize="11"
                               Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                    
                    <DataGrid x:Name="PreviewDataGrid" Grid.Row="1"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="{DynamicResource SurfaceBrush}"
                              Background="{DynamicResource BackgroundBrush}"
                              BorderThickness="1"
                              BorderBrush="{DynamicResource BorderBrush}"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock x:Name="PreviewStatusText" 
                                   Text="Showing first 20 rows"
                                   FontSize="11" Opacity="0.7"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Validation Status -->
        <Border Grid.Row="2" x:Name="ValidationBorder" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="15,10" Margin="15,0,15,10"
                CornerRadius="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <iconPacks:PackIconMaterial x:Name="ValidationIcon" Kind="CheckCircle" 
                                            Width="20" Height="20" 
                                            Foreground="{DynamicResource SuccessBrush}"
                                            VerticalAlignment="Center"/>
                
                <TextBlock x:Name="ValidationText" Grid.Column="1" 
                           Text="All required columns mapped"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="CancelButton" Grid.Column="1" Content="Cancel" 
                        Width="100" Margin="0,0,10,0"
                        Style="{DynamicResource MahApps.Styles.Button.Flat}"
                        Click="CancelButton_Click"/>
                
                <Button x:Name="ApplyButton" Grid.Column="2" Content="Apply Mapping" 
                        Width="140"
                        Style="{DynamicResource MahApps.Styles.Button.Flat.Accent}"
                        Click="ApplyButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
