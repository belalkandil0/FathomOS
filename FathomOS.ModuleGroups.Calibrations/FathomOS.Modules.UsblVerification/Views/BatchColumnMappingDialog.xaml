<mah:MetroWindow x:Class="FathomOS.Modules.UsblVerification.Views.BatchColumnMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Batch Column Mapping - USBL Verification"
        Height="750" Width="1100"
        MinHeight="650" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentBrush}"
        TitleCharacterCasing="Normal">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <iconPacks:PackIconMaterial Kind="FileMultiple" Width="28" Height="28" 
                                            VerticalAlignment="Center" 
                                            Foreground="{DynamicResource AccentBrush}"/>
                
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Batch Column Mapping" 
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock x:Name="FileCountText" Text="Loading files..."
                               FontSize="12" Opacity="0.7"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ApplyToAllButton" 
                            Style="{DynamicResource MahApps.Styles.Button.Flat}"
                            Click="ApplyToAllButton_Click"
                            ToolTip="Apply first file's mapping to all files" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ContentCopy" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Apply to All"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="AutoDetectAllButton" 
                            Style="{DynamicResource MahApps.Styles.Button.Flat}"
                            Click="AutoDetectAllButton_Click"
                            ToolTip="Re-run auto-detection on all files">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AutoFix" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Auto-Detect All"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - File List and Mapping -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - File List -->
            <Border Grid.Column="0" Background="{DynamicResource CardBrush}" 
                    CornerRadius="8" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="FILES" FontWeight="SemiBold" FontSize="11"
                               Foreground="{DynamicResource AccentBrush}" Margin="5,0,0,10"/>
                    
                    <ListBox x:Name="FileListBox" Grid.Row="1"
                             SelectionChanged="FileListBox_SelectionChanged"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <iconPacks:PackIconMaterial Kind="FileDocument" Width="16" Height="16" 
                                                                VerticalAlignment="Center" Margin="0,0,8,0"
                                                                Foreground="{DynamicResource AccentBrush}"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding ColumnCount, StringFormat='{}{0} columns'}" 
                                                   FontSize="10" Opacity="0.7"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <iconPacks:PackIconMaterial Grid.Column="2" 
                                                                Kind="{Binding ValidationIcon}"
                                                                Width="14" Height="14"
                                                                Foreground="{Binding ValidationColor}"
                                                                VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel - Current File Mapping -->
            <Border Grid.Column="1" Background="{DynamicResource CardBrush}" 
                    CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Current File Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock x:Name="CurrentFileText" Text="Select a file" 
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>

                    <!-- Column Mapping Grid -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side mappings -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="FILE SETTINGS" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Delimiter:" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="DelimiterCombo" Grid.Column="1" SelectedIndex="1">
                                    <ComboBoxItem Content="Tab" Tag="&#x9;"/>
                                    <ComboBoxItem Content="Comma" Tag=","/>
                                    <ComboBoxItem Content="Semicolon" Tag=";"/>
                                </ComboBox>
                            </Grid>
                            
                            <CheckBox x:Name="DateTimeSplitCheck" Content="NaviPac Date/Time Split" 
                                      IsChecked="True" Margin="0,0,0,15"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <TextBlock Text="DATE/TIME" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,10,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Time/Date:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="DateColumnCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <TextBlock Text="VESSEL POSITION" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,10,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Easting:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="VesselEastingCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Northing:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="VesselNorthingCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Gyro:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="VesselGyroCombo" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Right side mappings -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="TRANSPONDER POSITION" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Easting:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="TransponderEastingCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Northing:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="TransponderNorthingCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Depth:" VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <ComboBox x:Name="TransponderDepthCombo" Grid.Column="1"/>
                            </Grid>
                            
                            <Button x:Name="AutoDetectCurrentButton" 
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                    Click="AutoDetectCurrentButton_Click"
                                    Margin="0,15,0,0" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="AutoFix" Width="14" Height="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Auto-Detect This File"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Data Preview -->
                    <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                            CornerRadius="6" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="DATA PREVIEW" FontWeight="SemiBold" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            
                            <DataGrid x:Name="PreviewDataGrid" Grid.Row="1"
                                      AutoGenerateColumns="True"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      MaxHeight="200"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource BorderBrush}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Validation Status -->
        <Border Grid.Row="2" x:Name="ValidationBorder" 
                Background="{DynamicResource SurfaceBrush}" 
                Padding="15,10" Margin="15,0,15,10"
                CornerRadius="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <iconPacks:PackIconMaterial x:Name="ValidationIcon" Kind="CheckCircle" 
                                            Width="20" Height="20" 
                                            Foreground="{DynamicResource SuccessBrush}"
                                            VerticalAlignment="Center"/>
                
                <TextBlock x:Name="ValidationText" Grid.Column="1" 
                           Text="All files configured correctly"
                           VerticalAlignment="Center" Margin="10,0,0,0"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="CancelButton" Grid.Column="1" Content="Cancel" 
                        Width="100" Margin="0,0,10,0"
                        Style="{DynamicResource MahApps.Styles.Button.Flat}"
                        Click="CancelButton_Click"/>
                
                <Button x:Name="ApplyButton" Grid.Column="2" Content="Import All Files" 
                        Width="150"
                        Style="{DynamicResource MahApps.Styles.Button.Flat.Accent}"
                        Click="ApplyButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
