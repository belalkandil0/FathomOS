<Window x:Class="FathomOS.Shell.Views.CertificateViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Certificate Viewer"
        Width="900" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#0066CC" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtCertTitle" Text="Certificate of Processing" 
                               FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock x:Name="txtCertId" Text="FOS-XX-0000-00000-XXXX" 
                               FontSize="12" Foreground="#CCE5FF" Margin="0,5,0,0"
                               FontFamily="Consolas"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border x:Name="badgeSynced" Background="#28A745" CornerRadius="3" 
                            Padding="15,8" Visibility="Collapsed">
                        <TextBlock Text="âœ“ SYNCED" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                    </Border>
                    <Border x:Name="badgePending" Background="#FFC107" CornerRadius="3" 
                            Padding="15,8" Visibility="Visible">
                        <TextBlock Text="â³ PENDING SYNC" Foreground="#333" FontWeight="SemiBold" FontSize="12"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content - WebBrowser for HTML preview -->
        <Border Grid.Row="1" Margin="20" Background="White" 
                BorderBrush="#DDD" BorderThickness="1">
            <WebBrowser x:Name="webBrowser" />
        </Border>
        
        <!-- Footer with actions -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtSyncStatus" Text="â—‹ Pending server sync" 
                               Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnPrint" Content="ðŸ–¨ï¸ Print" 
                            Width="100" Height="35" Margin="0,0,10,0"
                            Click="btnPrint_Click"/>
                    <Button x:Name="btnExport" Content="ðŸ“„ Export HTML" 
                            Width="120" Height="35" Margin="0,0,10,0"
                            Background="#0066CC" Foreground="White"
                            Click="btnExport_Click"/>
                    <Button x:Name="btnClose" Content="Close" 
                            Width="80" Height="35"
                            Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
