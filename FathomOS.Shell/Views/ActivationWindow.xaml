<Window x:Class="FathomOS.Shell.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate Fathom OS" 
        Height="620" Width="600"
        MinHeight="500" MinWidth="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Background="#1A1A2E">
    
    <Window.Resources>
        <!-- Text Box Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#00D4AA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#00D4AA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00D4AA"/>
            <Setter Property="Foreground" Value="#1A1A2E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00B894"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#009B7D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="#666680"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D4A"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#252542"/>
                                <Setter Property="Foreground" Value="#666680"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Scrollable Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid x:Name="MainContent" Margin="35">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŒŠ" FontSize="36" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="FATHOM OS" FontSize="28" FontWeight="Bold" Foreground="#00D4AA"/>
                        <TextBlock Text="License Activation" FontSize="14" Foreground="#8888AA" Margin="0,-2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Hardware ID Section -->
            <Border Grid.Row="1" Background="#252542" CornerRadius="12" Padding="20" Margin="0,0,0,25">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ”‘" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Your Hardware ID" FontWeight="SemiBold" Foreground="#CCCCDD" FontSize="14"/>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="HardwareIdTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True" 
                                 FontFamily="Consolas" 
                                 FontSize="16"
                                 Background="#1A1A2E"/>
                        <Button Grid.Column="1" Content="ðŸ“‹ Copy" 
                                Style="{StaticResource SmallButton}"
                                Width="80" Margin="12,0,0,0" 
                                Click="CopyHardwareId_Click"
                                ToolTip="Copy display Hardware ID"/>
                        <Button Grid.Column="2" Content="ðŸ“‹ Full" 
                                Style="{StaticResource SmallButton}"
                                Width="80" Margin="8,0,0,0" 
                                Click="CopyFullFingerprints_Click"
                                ToolTip="Copy full fingerprints for offline license (JSON format)"/>
                        <Button Grid.Column="3" Content="ðŸ” Diagnose" 
                                Style="{StaticResource SmallButton}"
                                Width="90" Margin="8,0,0,0" 
                                Click="DiagnoseButton_Click"
                                ToolTip="Diagnose hardware mismatch issues"/>
                    </Grid>
                    <TextBlock Text="For offline license: click 'Full' to copy all fingerprints" 
                               Foreground="#666680" FontSize="12" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Separator with text -->
            <Grid Grid.Row="2" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Height="1" Background="#3D3D5C" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="ACTIVATE YOUR LICENSE" Foreground="#666680" 
                           FontSize="11" FontWeight="SemiBold" Margin="15,0" VerticalAlignment="Center"/>
                <Border Grid.Column="2" Height="1" Background="#3D3D5C" VerticalAlignment="Center"/>
            </Grid>

            <!-- Online Activation Section -->
            <Border Grid.Row="3" Background="#252542" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸŒ" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Online Activation" FontWeight="SemiBold" Foreground="#CCCCDD" FontSize="14"/>
                    </StackPanel>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="License Key" Foreground="#8888AA" FontSize="12" Margin="0,0,0,6"/>
                            <TextBox x:Name="LicenseKeyTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Email Address" Foreground="#8888AA" FontSize="12" Margin="0,0,0,6"/>
                            <TextBox x:Name="EmailTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Button x:Name="ActivateOnlineButton" 
                            Content="ðŸš€ Activate Online" 
                            Style="{StaticResource PrimaryButton}"
                            Click="ActivateOnline_Click"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Or Separator -->
            <TextBlock Grid.Row="4" Text="â€” OR â€”" HorizontalAlignment="Center" 
                       Foreground="#666680" FontSize="12" Margin="0,0,0,20"/>

            <!-- File Activation Section -->
            <Border Grid.Row="5" Background="#252542" CornerRadius="12" Padding="20" VerticalAlignment="Top">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Offline Activation" FontWeight="SemiBold" Foreground="#CCCCDD" FontSize="14"/>
                    </StackPanel>
                    <TextBlock Text="Already have a license file? Load it here to activate offline." 
                               Foreground="#8888AA" FontSize="13" Margin="0,0,0,15" TextWrapping="Wrap"/>
                    <Button x:Name="LoadFileButton" 
                            Content="ðŸ“‚ Load License File (.json)" 
                            Style="{StaticResource SecondaryButton}"
                            Click="LoadLicenseFile_Click"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Grid Grid.Row="6" Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Message -->
                <Border x:Name="StatusBorder" Background="#2D2D4A" CornerRadius="8" Padding="15,10" 
                        Visibility="Collapsed" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" TextWrapping="Wrap" FontSize="13"/>
                </Border>
                
                <!-- Cancel Button -->
                <Button Grid.Column="1" Content="Cancel" 
                        Style="{StaticResource SecondaryButton}"
                        Width="100" Margin="15,0,0,0"
                        Click="Cancel_Click"/>
            </Grid>
        </Grid>
        </ScrollViewer>
        
        <!-- Success Overlay -->
        <Grid x:Name="SuccessOverlay" Visibility="Collapsed" Background="#CC1A1A2E">
            <Border Background="#252542" CornerRadius="16" Padding="40" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="400">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" Opacity="0.5" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Success Icon -->
                    <Border Background="#00D4AA" Width="80" Height="80" CornerRadius="40" 
                            HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="âœ“" FontSize="40" Foreground="#1A1A2E" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Border>
                    
                    <TextBlock Text="License Activated!" FontSize="24" FontWeight="Bold" 
                               Foreground="#00D4AA" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="SuccessMessage" Text="Your Fathom OS license has been activated successfully." 
                               FontSize="14" Foreground="#CCCCDD" TextAlignment="Center" 
                               TextWrapping="Wrap" Margin="0,0,0,25"/>
                    
                    <!-- License Details -->
                    <Border Background="#1A1A2E" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Edition:" Foreground="#8888AA" Margin="0,0,20,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LicenseEditionText" Text="PRO" 
                                       Foreground="#00D4AA" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer:" Foreground="#8888AA" Margin="0,0,20,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CustomerNameText" Text="" Foreground="#E8E8E8"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Expires:" Foreground="#8888AA" Margin="0,0,20,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ExpiryDateText" Text="" Foreground="#E8E8E8"/>
                        </Grid>
                    </Border>
                    
                    <Button x:Name="ContinueButton" Content="ðŸš€ Continue to Fathom OS" 
                            Style="{StaticResource PrimaryButton}"
                            Click="Continue_Click"
                            HorizontalAlignment="Center" MinWidth="250"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
