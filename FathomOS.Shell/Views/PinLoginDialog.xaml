<Window x:Class="FathomOS.Shell.Views.PinLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fathom OS - Quick Login"
        Height="380" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Password Box Style for PIN -->
        <Style x:Key="PinPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#00D4AA"/>
            <Setter Property="MaxLength" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#00D4AA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00D4AA"/>
            <Setter Property="Foreground" Value="#1A1A2E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00B894"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#009B7D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="#666680"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8888AA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#00D4AA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- User Avatar and Name -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,25">
            <!-- Avatar Circle -->
            <Border Width="80" Height="80"
                    Background="#252542"
                    BorderBrush="#00D4AA"
                    BorderThickness="2"
                    CornerRadius="40"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
                <TextBlock x:Name="UserInitials"
                           Text="JD"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#00D4AA"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Username Display -->
            <TextBlock x:Name="UsernameText"
                       Text="John Doe"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#E8E8E8"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Enter your PIN to continue"
                       FontSize="13"
                       Foreground="#8888AA"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- PIN Entry -->
        <Border Grid.Row="1" Background="#252542" CornerRadius="12" Padding="25,20">
            <StackPanel>
                <PasswordBox x:Name="PinBox"
                             Style="{StaticResource PinPasswordBox}"
                             KeyDown="PinBox_KeyDown"
                             PasswordChanged="PinBox_PasswordChanged"/>

                <!-- Unlock Button -->
                <Button x:Name="UnlockButton"
                        Content="Unlock"
                        Style="{StaticResource PrimaryButton}"
                        Click="Unlock_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Message -->
        <Border x:Name="StatusBorder" Grid.Row="2"
                Background="#2D2D4A" CornerRadius="8" Padding="15,10"
                Margin="0,15,0,0"
                Visibility="Collapsed"
                VerticalAlignment="Top">
            <TextBlock x:Name="StatusText" TextWrapping="Wrap" FontSize="13" TextAlignment="Center"/>
        </Border>

        <!-- Footer Options -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="SwitchUserButton"
                    Content="Sign in as a different user"
                    Style="{StaticResource SecondaryButton}"
                    Click="SwitchUser_Click"/>
        </StackPanel>
    </Grid>
</Window>
