<Window x:Class="FathomOS.Shell.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FathomOS"
        Height="420" Width="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <!-- Easing Functions (must be defined first) -->
        <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut"/>
        <QuadraticEase x:Key="EaseIn" EasingMode="EaseIn"/>
        <QuadraticEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
        <CubicEase x:Key="EaseOutCubic" EasingMode="EaseOut"/>
        <ElasticEase x:Key="EaseOutElastic" EasingMode="EaseOut" Oscillations="1" Springiness="5"/>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.6"
                             EasingFunction="{StaticResource EaseOutCubic}"/>
        </Storyboard>

        <!-- Fade Out Animation -->
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.4"
                             EasingFunction="{StaticResource EaseIn}"/>
        </Storyboard>

        <!-- Progress Animation -->
        <Storyboard x:Key="ProgressPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ProgressGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="0.8" Duration="0:0:0.8"
                             AutoReverse="True"/>
        </Storyboard>

        <!-- Logo Pulse Animation -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="1.05" Duration="0:0:1.5"
                             AutoReverse="True"
                             EasingFunction="{StaticResource EaseInOut}"/>
            <DoubleAnimation Storyboard.TargetName="LogoIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="1.05" Duration="0:0:1.5"
                             AutoReverse="True"
                             EasingFunction="{StaticResource EaseInOut}"/>
        </Storyboard>

        <!-- Wave Animation for Logo -->
        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="WaveEmoji"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="-8" To="8" Duration="0:0:1"
                             AutoReverse="True"
                             EasingFunction="{StaticResource EaseInOut}"/>
        </Storyboard>

        <!-- Shimmer Animation for Loading Text -->
        <Storyboard x:Key="ShimmerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShimmerTransform"
                             Storyboard.TargetProperty="X"
                             From="-200" To="200" Duration="0:0:2"/>
        </Storyboard>

        <!-- Water Ripple Animation -->
        <Storyboard x:Key="RippleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Ripple1"
                             Storyboard.TargetProperty="Opacity"
                             From="0.15" To="0" Duration="0:0:2.5"/>
            <DoubleAnimation Storyboard.TargetName="Ripple1"
                             Storyboard.TargetProperty="Width"
                             From="100" To="400" Duration="0:0:2.5"/>
            <DoubleAnimation Storyboard.TargetName="Ripple1"
                             Storyboard.TargetProperty="Height"
                             From="100" To="400" Duration="0:0:2.5"/>
            <DoubleAnimation Storyboard.TargetName="Ripple2"
                             Storyboard.TargetProperty="Opacity"
                             From="0.15" To="0" Duration="0:0:2.5" BeginTime="0:0:0.8"/>
            <DoubleAnimation Storyboard.TargetName="Ripple2"
                             Storyboard.TargetProperty="Width"
                             From="100" To="400" Duration="0:0:2.5" BeginTime="0:0:0.8"/>
            <DoubleAnimation Storyboard.TargetName="Ripple2"
                             Storyboard.TargetProperty="Height"
                             From="100" To="400" Duration="0:0:2.5" BeginTime="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ProgressPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource LogoPulse}"/>
            <BeginStoryboard Storyboard="{StaticResource WaveAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ShimmerAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource RippleAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border CornerRadius="20" Background="#1E1E2E" BorderBrush="#313244" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.7" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Background Gradient -->
            <Border Grid.RowSpan="2" CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1E2E" Offset="0"/>
                        <GradientStop Color="#181825" Offset="0.5"/>
                        <GradientStop Color="#11111B" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Decorative Circles / Ocean Theme -->
            <Canvas Grid.RowSpan="2" ClipToBounds="True">
                <!-- Top-left wave effect -->
                <Ellipse Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100" Opacity="0.05">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#89B4FA" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <!-- Bottom-right wave effect -->
                <Ellipse Width="450" Height="450" Canvas.Right="-180" Canvas.Bottom="-180" Opacity="0.04">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#74C7EC" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <!-- Center accent -->
                <Ellipse Width="500" Height="500" Canvas.Left="60" Canvas.Top="-200" Opacity="0.02">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#B4BEFE" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <!-- Ripple Effects (centered behind logo) -->
            <Canvas Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-40,0,0">
                <Ellipse x:Name="Ripple1" Width="100" Height="100"
                         Canvas.Left="-50" Canvas.Top="-50"
                         Stroke="#89B4FA" StrokeThickness="1" Opacity="0.15" Fill="Transparent"/>
                <Ellipse x:Name="Ripple2" Width="100" Height="100"
                         Canvas.Left="-50" Canvas.Top="-50"
                         Stroke="#74C7EC" StrokeThickness="1" Opacity="0.15" Fill="Transparent"/>
            </Canvas>

            <!-- Main Content -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo Icon with Wave Emoji -->
                <Border x:Name="LogoIcon" Width="110" Height="110" Margin="0,0,0,28"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <Border CornerRadius="24">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#89B4FA" Offset="0"/>
                                <GradientStop Color="#74C7EC" Offset="0.5"/>
                                <GradientStop Color="#B4BEFE" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#89B4FA"/>
                        </Border.Effect>
                        <!-- Wave Emoji with Animation -->
                        <TextBlock x:Name="WaveEmoji" Text="&#x1F30A;" FontSize="52"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Border>
                </Border>

                <!-- Application Title -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="FATHOM" FontSize="46" FontWeight="Bold" FontFamily="Segoe UI">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#89B4FA" Offset="0"/>
                                <GradientStop Color="#74C7EC" Offset="0.5"/>
                                <GradientStop Color="#B4BEFE" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text=" OS" FontSize="46" FontWeight="Light" Foreground="#CDD6F4" FontFamily="Segoe UI"/>
                </StackPanel>

                <!-- Tagline -->
                <TextBlock Text="Hydrographic Survey Data Processing Platform"
                           FontSize="13" Foreground="#A6ADC8" FontFamily="Segoe UI"
                           HorizontalAlignment="Center" Margin="0,0,0,45"
                           Opacity="0.85"/>

                <!-- Loading Status -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock x:Name="TxtStatus" Text="Initializing..."
                               FontSize="12" Foreground="#BAC2DE" FontFamily="Segoe UI"
                               HorizontalAlignment="Center" Margin="0,0,0,14">
                        <TextBlock.OpacityMask>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <LinearGradientBrush.Transform>
                                    <TranslateTransform x:Name="ShimmerTransform" X="-200"/>
                                </LinearGradientBrush.Transform>
                                <GradientStop Color="#80FFFFFF" Offset="0"/>
                                <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
                                <GradientStop Color="#80FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.OpacityMask>
                    </TextBlock>

                    <!-- Progress Bar -->
                    <Grid Width="320" Height="5">
                        <!-- Track -->
                        <Border CornerRadius="2.5" Background="#313244"/>

                        <!-- Progress -->
                        <Border x:Name="ProgressBar" CornerRadius="2.5" HorizontalAlignment="Left" Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#89B4FA" Offset="0"/>
                                    <GradientStop Color="#74C7EC" Offset="0.5"/>
                                    <GradientStop Color="#B4BEFE" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Glow Effect -->
                        <Border x:Name="ProgressGlow" CornerRadius="2.5" HorizontalAlignment="Left" Width="0" Opacity="0.5">
                            <Border.Effect>
                                <BlurEffect Radius="10"/>
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#89B4FA" Offset="0"/>
                                    <GradientStop Color="#74C7EC" Offset="0.5"/>
                                    <GradientStop Color="#B4BEFE" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="1" Padding="24,14" CornerRadius="0,0,20,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#0A0A0F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Version -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtVersion" Text="v1.0.45"
                                   FontSize="11" Foreground="#6C7086" FontFamily="Segoe UI"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- License Badge -->
                    <Border x:Name="LicenseBadge" Grid.Column="1"
                            CornerRadius="12" Padding="14,5" Visibility="Collapsed">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2E7D32" Offset="0"/>
                                <GradientStop Color="#388E3C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#2E7D32"/>
                        </Border.Effect>
                        <TextBlock x:Name="TxtLicenseStatus" Text="PROFESSIONAL"
                                   FontSize="10" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    </Border>

                    <!-- Copyright -->
                    <TextBlock Grid.Column="2"
                               Text="&#x00A9; 2024 Fathom OS"
                               FontSize="11" Foreground="#6C7086" FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
