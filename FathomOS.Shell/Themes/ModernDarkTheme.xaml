<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Modern Dark Theme - Premium FathomOS Design
    A refined dark theme with subtle gradients, improved contrast, and modern aesthetics.
    Inspired by VS Code, Figma, and contemporary design systems.
    -->

    <!-- ============================================================
         WINDOW & CHROME COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="TitleBarBrush" Color="#0D0D12"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="#E4E4E7"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#27272A"/>

    <!-- ============================================================
         BACKGROUND COLORS - Layered depth system
         ============================================================ -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#18181B"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#131316"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#0D0D10"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1F1F24"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#232329"/>
    <SolidColorBrush x:Key="ElevatedBackgroundBrush" Color="#2A2A31"/>

    <!-- ============================================================
         TEXT COLORS - Enhanced readability hierarchy
         ============================================================ -->
    <SolidColorBrush x:Key="TextBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A1A1AA"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#71717A"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#52525B"/>
    <SolidColorBrush x:Key="SectionHeaderBrush" Color="#60A5FA"/>

    <!-- ============================================================
         ACCENT COLORS - Ocean-inspired palette
         ============================================================ -->
    <Color x:Key="AccentColor">#60A5FA</Color>
    <Color x:Key="AccentColorLight">#93C5FD</Color>
    <Color x:Key="AccentColorDark">#3B82F6</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#93C5FD"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#1E3A5F"/>

    <!-- Secondary Accent (Teal/Cyan) -->
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#22D3EE"/>
    <SolidColorBrush x:Key="SecondaryAccentHoverBrush" Color="#67E8F9"/>

    <!-- ============================================================
         BUTTON COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#27272A"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#52525B"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#1F1F23"/>

    <!-- Primary Button -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="PrimaryButtonPressedBrush" Color="#2563EB"/>

    <!-- ============================================================
         TILE & CARD COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="TileBackgroundBrush" Color="#232329"/>
    <SolidColorBrush x:Key="TileBorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="TileHoverBrush" Color="#2D2D35"/>
    <SolidColorBrush x:Key="TilePressedBrush" Color="#3A3A44"/>
    <SolidColorBrush x:Key="TileSelectedBrush" Color="#1E3A5F"/>

    <!-- ============================================================
         LIST & ITEM COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="#1F1F24"/>
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#27272D"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="#1E3A5F"/>
    <SolidColorBrush x:Key="ListItemActiveBrush" Color="#2563EB"/>

    <!-- ============================================================
         BORDER & SEPARATOR COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#52525B"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#27272A"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#60A5FA"/>

    <!-- ============================================================
         INPUT COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#18181B"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="InputHoverBorderBrush" Color="#52525B"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="#71717A"/>

    <!-- ============================================================
         STATUS COLORS - Semantic palette
         ============================================================ -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4ADE80"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#14532D"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#713F12"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#7F1D1D"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#1E3A5F"/>

    <!-- ============================================================
         SCROLLBAR COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#52525B"/>
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#18181B"/>

    <!-- ============================================================
         SHADOW & GLOW COLORS
         ============================================================ -->
    <Color x:Key="ShadowColor">#000000</Color>
    <Color x:Key="GlowColor">#60A5FA</Color>

    <!-- ============================================================
         GRADIENT BRUSHES - Modern depth effects
         ============================================================ -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#131316" Offset="0"/>
        <GradientStop Color="#18181B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#60A5FA" Offset="0.5"/>
        <GradientStop Color="#22D3EE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#232329" Offset="0"/>
        <GradientStop Color="#1F1F24" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================================
         THEME METADATA
         ============================================================ -->
    <sys:String x:Key="ThemeName" xmlns:sys="clr-namespace:System;assembly=mscorlib">Modern Dark</sys:String>
    <sys:String x:Key="ThemeVariant" xmlns:sys="clr-namespace:System;assembly=mscorlib">Dark</sys:String>

</ResourceDictionary>
