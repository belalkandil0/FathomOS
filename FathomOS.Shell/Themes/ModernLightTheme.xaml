<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Modern Light Theme - Premium FathomOS Design
    A clean, professional light theme with subtle shadows and refined aesthetics.
    Inspired by Apple's design language and contemporary productivity apps.
    -->

    <!-- ============================================================
         WINDOW & CHROME COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="TitleBarBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#E2E8F0"/>

    <!-- ============================================================
         BACKGROUND COLORS - Clean layered system
         ============================================================ -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ElevatedBackgroundBrush" Color="#FFFFFF"/>

    <!-- ============================================================
         TEXT COLORS - Optimal readability hierarchy
         ============================================================ -->
    <SolidColorBrush x:Key="TextBrush" Color="#0F172A"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#020617"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#64748B"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#94A3B8"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="SectionHeaderBrush" Color="#2563EB"/>

    <!-- ============================================================
         ACCENT COLORS - Ocean-inspired palette
         ============================================================ -->
    <Color x:Key="AccentColor">#2563EB</Color>
    <Color x:Key="AccentColorLight">#60A5FA</Color>
    <Color x:Key="AccentColorDark">#1D4ED8</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#DBEAFE"/>

    <!-- Secondary Accent (Teal/Cyan) -->
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#0891B2"/>
    <SolidColorBrush x:Key="SecondaryAccentHoverBrush" Color="#06B6D4"/>

    <!-- ============================================================
         BUTTON COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#F8FAFC"/>

    <!-- Primary Button -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="PrimaryButtonPressedBrush" Color="#1D4ED8"/>

    <!-- ============================================================
         TILE & CARD COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="TileBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TileBorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="TileHoverBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="TilePressedBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="TileSelectedBrush" Color="#DBEAFE"/>

    <!-- ============================================================
         LIST & ITEM COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="#DBEAFE"/>
    <SolidColorBrush x:Key="ListItemActiveBrush" Color="#2563EB"/>

    <!-- ============================================================
         BORDER & SEPARATOR COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#2563EB"/>

    <!-- ============================================================
         INPUT COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="InputHoverBorderBrush" Color="#94A3B8"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="#94A3B8"/>

    <!-- ============================================================
         STATUS COLORS - Semantic palette
         ============================================================ -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#16A34A"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#DCFCE7"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D97706"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#DBEAFE"/>

    <!-- ============================================================
         SCROLLBAR COLORS
         ============================================================ -->
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#94A3B8"/>
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#F1F5F9"/>

    <!-- ============================================================
         SHADOW & GLOW COLORS
         ============================================================ -->
    <Color x:Key="ShadowColor">#1E293B</Color>
    <Color x:Key="GlowColor">#2563EB</Color>

    <!-- ============================================================
         GRADIENT BRUSHES - Subtle depth effects
         ============================================================ -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F8FAFC" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1D4ED8" Offset="0"/>
        <GradientStop Color="#2563EB" Offset="0.5"/>
        <GradientStop Color="#0891B2" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FAFAFA" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================================
         THEME METADATA
         ============================================================ -->
    <sys:String x:Key="ThemeName" xmlns:sys="clr-namespace:System;assembly=mscorlib">Modern Light</sys:String>
    <sys:String x:Key="ThemeVariant" xmlns:sys="clr-namespace:System;assembly=mscorlib">Light</sys:String>

</ResourceDictionary>
