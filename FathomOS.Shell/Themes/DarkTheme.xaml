<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors - Modern Catppuccin Mocha Inspired -->
    
    <!-- Window Chrome -->
    <SolidColorBrush x:Key="TitleBarBrush" Color="#11111B"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="#BAC2DE"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#313244"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E2E"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#181825"/>
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#11111B"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#282A3A"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextBrush" Color="#CDD6F4"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A6ADC8"/>
    <SolidColorBrush x:Key="SectionHeaderBrush" Color="#89B4FA"/>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#89B4FA</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="#89B4FA"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#B4BEFE"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#313244"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#45475A"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#585B70"/>
    
    <!-- Tile Colors -->
    <SolidColorBrush x:Key="TileBackgroundBrush" Color="#313244"/>
    <SolidColorBrush x:Key="TileBorderBrush" Color="#45475A"/>
    <SolidColorBrush x:Key="TileHoverBrush" Color="#3E4054"/>
    <SolidColorBrush x:Key="TilePressedBrush" Color="#494D64"/>
    
    <!-- List/Item Colors -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="#282A3A"/>
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#313244"/>
    
    <!-- Border/Separator -->
    <SolidColorBrush x:Key="BorderBrush" Color="#45475A"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#313244"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#A6E3A1"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F9E2AF"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F38BA8"/>
    
    <!-- ScrollBar Styling -->
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#45475A"/>
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="#1E1E2E"/>
    
</ResourceDictionary>
