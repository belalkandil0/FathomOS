<UserControl x:Class="FathomOS.Modules.ProjectManagement.Views.ProjectDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="920">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FieldComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Light"/>
            <TextBlock Text="{Binding ProjectNumber}" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Content Tabs -->
        <TabControl Grid.Row="1">
            <!-- General Information Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0: Project Number / Project Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Project Number" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding ProjectNumber, Mode=OneWay}"
                                     Style="{StaticResource FieldTextBoxStyle}"
                                     IsReadOnly="True" Background="#F5F5F5"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Project Name *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 1: Client / Project Type -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Client *" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Clients}"
                                      SelectedItem="{Binding SelectedClient}"
                                      DisplayMemberPath="CompanyName"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Project Type" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ProjectTypes}"
                                      SelectedItem="{Binding SelectedProjectType}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 2: Status / Phase -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Status" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ProjectStatuses}"
                                      SelectedItem="{Binding SelectedStatus}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Current Phase" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ProjectPhases}"
                                      SelectedItem="{Binding SelectedPhase}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 3: Priority / Billing Type -->
                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="Priority" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding PriorityLevels}"
                                      SelectedItem="{Binding SelectedPriority}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="2">
                            <TextBlock Text="Billing Type" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding BillingTypes}"
                                      SelectedItem="{Binding SelectedBillingType}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 4: Start Date / End Date -->
                        <StackPanel Grid.Row="4" Grid.Column="0">
                            <TextBlock Text="Planned Start Date *" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker SelectedDate="{Binding PlannedStartDate}"
                                        Padding="8" Margin="0,0,0,10"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Grid.Column="2">
                            <TextBlock Text="Planned End Date" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker SelectedDate="{Binding PlannedEndDate}"
                                        Padding="8" Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- Row 5: Location / Country -->
                        <StackPanel Grid.Row="5" Grid.Column="0">
                            <TextBlock Text="Location" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding LocationName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="5" Grid.Column="2">
                            <TextBlock Text="Country/Region" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 6: Budget / Currency -->
                        <StackPanel Grid.Row="6" Grid.Column="0">
                            <TextBlock Text="Budget Amount" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Budget, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="6" Grid.Column="2">
                            <TextBlock Text="Currency" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Currencies}"
                                      SelectedItem="{Binding SelectedCurrency}"
                                      Style="{StaticResource FieldComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Row 7: Contract Value / Estimated Cost -->
                        <StackPanel Grid.Row="7" Grid.Column="0">
                            <TextBlock Text="Contract Value" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding ContractValue, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="7" Grid.Column="2">
                            <TextBlock Text="Percent Complete" Style="{StaticResource FieldLabelStyle}"/>
                            <Grid>
                                <ProgressBar Value="{Binding PercentComplete}" Minimum="0" Maximum="100" Height="30"/>
                                <TextBlock Text="{Binding PercentComplete, StringFormat='{}{0:F0}%'}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </StackPanel>

                        <!-- Row 8: Description -->
                        <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Margin="0,10,0,0">
                            <TextBlock Text="Description" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto" Padding="8"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Milestones Tab -->
            <TabItem Header="Milestones">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Button Content="+ Add Milestone" Padding="15,5"
                                Command="{Binding AddMilestoneCommand}"
                                Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Milestones}"
                              SelectedItem="{Binding SelectedMilestone}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding EditMilestoneCommand}"
                                          CommandParameter="{Binding SelectedMilestone}"/>
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Milestone" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Planned Date" Binding="{Binding PlannedDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="110"/>
                            <DataGridTextColumn Header="Actual Date" Binding="{Binding ActualDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="110"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding OwnerName}" Width="120"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit" Command="{Binding EditMilestoneCommand}"
                                          CommandParameter="{Binding SelectedMilestone}"/>
                                <MenuItem Header="Complete" Command="{Binding CompleteMilestoneCommand}"
                                          CommandParameter="{Binding SelectedMilestone}"/>
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DeleteMilestoneCommand}"
                                          CommandParameter="{Binding SelectedMilestone}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Deliverables Tab -->
            <TabItem Header="Deliverables">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Button Content="+ Add Deliverable" Padding="15,5"
                                Command="{Binding AddDeliverableCommand}"
                                Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Deliverables}"
                              SelectedItem="{Binding SelectedDeliverable}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding EditDeliverableCommand}"
                                          CommandParameter="{Binding SelectedDeliverable}"/>
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Deliverable" Binding="{Binding Name}" Width="180"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Format" Binding="{Binding Format}" Width="80"/>
                            <DataGridTextColumn Header="Due Date" Binding="{Binding PlannedDueDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Submitted" Binding="{Binding SubmissionDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding OwnerName}" Width="120"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit" Command="{Binding EditDeliverableCommand}"
                                          CommandParameter="{Binding SelectedDeliverable}"/>
                                <MenuItem Header="Submit" Command="{Binding SubmitDeliverableCommand}"
                                          CommandParameter="{Binding SelectedDeliverable}"/>
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DeleteDeliverableCommand}"
                                          CommandParameter="{Binding SelectedDeliverable}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Resources Tab -->
            <TabItem Header="Resources">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="180"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="180"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="180"/>
                        </Grid.RowDefinitions>

                        <!-- Vessels Section -->
                        <TextBlock Grid.Row="0" Text="Assigned Vessels" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <DataGrid Grid.Row="1" ItemsSource="{Binding VesselAssignments}"
                                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Vessel Name" Binding="{Binding VesselName}" Width="180"/>
                                <DataGridTextColumn Header="IMO" Binding="{Binding VesselImoNumber}" Width="90"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                                <DataGridTextColumn Header="Start" Binding="{Binding PlannedStartDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="End" Binding="{Binding PlannedEndDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                                <DataGridTextColumn Header="Day Rate" Binding="{Binding DayRate, StringFormat='{}{0:N2}'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Equipment Section -->
                        <TextBlock Grid.Row="2" Text="Assigned Equipment" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
                        <DataGrid Grid.Row="3" ItemsSource="{Binding EquipmentAssignments}"
                                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Equipment Name" Binding="{Binding EquipmentName}" Width="180"/>
                                <DataGridTextColumn Header="Asset #" Binding="{Binding EquipmentAssetNumber}" Width="100"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                                <DataGridTextColumn Header="Start" Binding="{Binding PlannedStartDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="End" Binding="{Binding PlannedEndDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Personnel Section -->
                        <TextBlock Grid.Row="4" Text="Assigned Personnel" FontWeight="SemiBold" FontSize="14" Margin="0,15,0,5"/>
                        <DataGrid Grid.Row="5" ItemsSource="{Binding PersonnelAssignments}"
                                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="180"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120"/>
                                <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" Width="120"/>
                                <DataGridTextColumn Header="Start" Binding="{Binding PlannedStartDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="End" Binding="{Binding PlannedEndDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Notes Tab -->
            <TabItem Header="Notes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Project Notes" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Height="150" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" Padding="8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Internal Notes (not visible to client)" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox Text="{Binding InternalNotes, UpdateSourceTrigger=PropertyChanged}"
                                 Height="150" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" Padding="8"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Padding="25,10" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel" Padding="25,10"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>

        <!-- Busy Indicator -->
        <Border Grid.RowSpan="3" Background="#80FFFFFF"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing IsActive="{Binding IsBusy}" Width="50" Height="50"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
