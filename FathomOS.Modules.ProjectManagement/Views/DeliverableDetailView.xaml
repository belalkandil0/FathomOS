<UserControl x:Class="FathomOS.Modules.ProjectManagement.Views.DeliverableDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <UserControl.Resources>
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="FieldComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="20" FontWeight="Light" Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Name -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Deliverable Name *" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FieldTextBoxStyle}"/>
                </StackPanel>

                <!-- Row 1: Type / Format -->
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Type" Style="{StaticResource FieldLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding DeliverableTypes}"
                              SelectedItem="{Binding SelectedType}"
                              Style="{StaticResource FieldComboBoxStyle}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="Format" Style="{StaticResource FieldLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding DeliverableFormats}"
                              SelectedItem="{Binding SelectedFormat}"
                              Style="{StaticResource FieldComboBoxStyle}"/>
                </StackPanel>

                <!-- Row 2: Status / Version -->
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Status" Style="{StaticResource FieldLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding DeliverableStatuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource FieldComboBoxStyle}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Version" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FieldTextBoxStyle}"/>
                </StackPanel>

                <!-- Row 3: Planned Due Date / Actual Due Date -->
                <StackPanel Grid.Row="3" Grid.Column="0">
                    <TextBlock Text="Planned Due Date" Style="{StaticResource FieldLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding PlannedDueDate}"
                                Padding="8" Margin="0,0,0,15"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="2">
                    <TextBlock Text="Actual Due Date" Style="{StaticResource FieldLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding ActualDueDate}"
                                Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Row 4: Submission Date / Approval Date -->
                <StackPanel Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Submission Date" Style="{StaticResource FieldLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding SubmissionDate}"
                                Padding="8" Margin="0,0,0,15"/>
                </StackPanel>
                <StackPanel Grid.Row="4" Grid.Column="2">
                    <TextBlock Text="Approval Date" Style="{StaticResource FieldLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding ApprovalDate}"
                                Padding="8" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Row 5: Owner / Sort Order -->
                <StackPanel Grid.Row="5" Grid.Column="0">
                    <TextBlock Text="Owner" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding OwnerName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FieldTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Grid.Row="5" Grid.Column="2">
                    <TextBlock Text="Sort Order" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding SortOrder, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FieldTextBoxStyle}"/>
                </StackPanel>

                <!-- Row 6: Checkboxes -->
                <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,15">
                    <CheckBox Content="Client Deliverable" IsChecked="{Binding IsClientDeliverable}" Margin="0,0,20,0"/>
                    <CheckBox Content="Requires Approval" IsChecked="{Binding RequiresClientApproval}" Margin="0,0,20,0"/>
                    <CheckBox Content="Confidential" IsChecked="{Binding IsConfidential}"/>
                </StackPanel>

                <!-- Row 7: Description -->
                <StackPanel Grid.Row="7" Grid.ColumnSpan="3">
                    <TextBlock Text="Description" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Padding="8" Margin="0,0,0,15"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Submit" Padding="15,8" Margin="0,0,10,0"
                    Command="{Binding SubmitCommand}"
                    IsEnabled="{Binding CanSubmit}"
                    Background="#FF9800" Foreground="White" BorderThickness="0"/>
            <Button Content="Save" Padding="20,8" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Background="#2196F3" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel" Padding="20,8"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
