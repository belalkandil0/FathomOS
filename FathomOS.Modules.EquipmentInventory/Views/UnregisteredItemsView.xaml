<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.UnregisteredItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        
        <!-- Status to Color Converter -->
        <converters:UnregisteredItemStatusToColorConverter x:Key="StatusToColor"/>
        
        <!-- Item Card Style -->
        <Style x:Key="ItemCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Unregistered Items" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
                <TextBlock Text="Review items received during verification that are not in the inventory system" 
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnRefresh" Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Click="Refresh_Click" ToolTip="Refresh list">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Pending Review -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="ClockAlertOutline" Width="24" Height="24" 
                                                    Foreground="{DynamicResource WarningBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="PendingCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource WarningBrush}"/>
                    <TextBlock Text="Pending Review" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Converted to Equipment -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="CheckCircleOutline" Width="24" Height="24" 
                                                    Foreground="{DynamicResource SuccessBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="ConvertedCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource SuccessBrush}"/>
                    <TextBlock Text="Converted" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Consumables -->
            <Border Grid.Column="2" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="PackageVariant" Width="24" Height="24" 
                                                    Foreground="{DynamicResource InfoBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="ConsumableCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource InfoBrush}"/>
                    <TextBlock Text="Consumables" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Rejected -->
            <Border Grid.Column="3" Style="{DynamicResource CardBorder}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="CloseCircleOutline" Width="24" Height="24" 
                                                    Foreground="{DynamicResource ErrorBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="RejectedCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource ErrorBrush}"/>
                    <TextBlock Text="Rejected" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Items List -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="0" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filters -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="SearchBox" Grid.Column="0" 
                                     mah:TextBoxHelper.Watermark="Search items..."
                                     mah:TextBoxHelper.ClearTextButton="True"
                                     TextChanged="SearchBox_TextChanged" Margin="0,0,15,0"/>
                            
                            <ComboBox x:Name="StatusFilter" Grid.Column="1" Width="160" Margin="0,0,10,0"
                                      SelectionChanged="StatusFilter_SelectionChanged">
                                <ComboBoxItem Content="All Statuses" IsSelected="True"/>
                                <ComboBoxItem Content="Pending Review"/>
                                <ComboBoxItem Content="Converted"/>
                                <ComboBoxItem Content="Consumable"/>
                                <ComboBoxItem Content="Rejected"/>
                            </ComboBox>
                            
                            <Button Grid.Column="2" Style="{DynamicResource SecondaryButton}" Padding="10,6"
                                    Click="Refresh_Click">
                                <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Items List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ItemsList" Margin="15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ItemCard}" 
                                            Tag="{Binding}" MouseLeftButtonUp="ItemCard_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="15"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding SerialNumber, StringFormat='S/N: {0}'}" 
                                                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                                                               Visibility="{Binding SerialNumber, Converter={StaticResource NullToVisibility}}"/>
                                                    <TextBlock Text=" | " Foreground="{DynamicResource TextSecondaryBrush}"
                                                               Visibility="{Binding SerialNumber, Converter={StaticResource NullToVisibility}}"/>
                                                    <TextBlock Text="{Binding Manufacturer}" FontSize="12" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <iconPacks:PackIconMaterial Kind="TruckDeliveryOutline" Width="12" Height="12" 
                                                                                Foreground="{DynamicResource TextSecondaryBrush}" 
                                                                                VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Manifest.ManifestNumber}" FontSize="11"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" â†’ " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding CurrentLocation.Name, FallbackValue='Unknown'}" 
                                                               FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <Border CornerRadius="4" Padding="10,5"
                                                        Background="{Binding Status, Converter={StaticResource StatusToColor}}">
                                                    <TextBlock Text="{Binding Status}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd}'}" 
                                                           FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <Border x:Name="EmptyState" Grid.Row="1" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="PackageVariantClosed" Width="48" Height="48" 
                                                        Foreground="{DynamicResource TextSecondaryBrush}" 
                                                        HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="No unregistered items" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Items will appear here when received during shipment verification"
                                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="0">
                <Grid>
                    <!-- No Selection State -->
                    <Border x:Name="NoSelectionState">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="CursorDefaultClickOutline" Width="40" Height="40" 
                                                        Foreground="{DynamicResource TextSecondaryBrush}" 
                                                        HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Select an item" FontSize="16"
                                       Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="to view details and take action"
                                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Selected Item Details -->
                    <Grid x:Name="SelectedItemDetails" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20">
                            <StackPanel>
                                <TextBlock x:Name="DetailName" Text="Item Name" FontSize="18" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Border x:Name="DetailStatusBadge" CornerRadius="4" Padding="10,4" Margin="0,0,10,0">
                                        <TextBlock x:Name="DetailStatus" Text="Status" FontSize="11" Foreground="White"/>
                                    </Border>
                                    <TextBlock x:Name="DetailQuantity" Text="Qty: 1" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Details -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Item Details -->
                                <TextBlock Text="ITEM DETAILS" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                        <TextBlock Text="Serial Number" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailSerial" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                        <TextBlock Text="Part Number" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailPartNumber" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                        <TextBlock Text="Manufacturer" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailManufacturer" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                                        <TextBlock Text="Model" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailModel" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Description" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailDescription" FontSize="13" TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Source -->
                                <TextBlock Text="SOURCE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Manifest" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailManifest" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Current Location" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailLocation" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Dates -->
                                <TextBlock Text="TIMELINE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Received" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailCreatedAt" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Reviewed" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailReviewedAt" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Review Notes (if any) -->
                                <StackPanel x:Name="ReviewNotesPanel" Visibility="Collapsed" Margin="0,0,0,10">
                                    <TextBlock Text="REVIEW NOTES" FontSize="11" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="12">
                                        <TextBlock x:Name="DetailReviewNotes" TextWrapping="Wrap" FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Actions -->
                        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15">
                            <StackPanel x:Name="ActionButtons">
                                <!-- Actions populated dynamically -->
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
