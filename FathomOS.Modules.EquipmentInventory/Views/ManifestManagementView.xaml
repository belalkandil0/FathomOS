<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.ManifestManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:ManifestStatusToColorConverter x:Key="ManifestStatusToColor"/>
        <converters:VerificationStatusToColorConverter x:Key="VerificationStatusToColor"/>
        
        <!-- Tab Header Style -->
        <Style x:Key="ManifestTabHeader" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter x:Name="icon" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="text" Text="{TemplateBinding Tag}" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="text" Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Manifest Card Style -->
        <Style x:Key="ManifestCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Manifest Management" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
                <TextBlock Text="Track equipment transfers, shipments, and receiving operations" 
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
            </StackPanel>
            
            <!-- Quick Actions -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnVerifyShipment" Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Click="VerifyShipment_Click" ToolTip="Scan and verify incoming shipment">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="QrcodeScan" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Verify Shipment"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnNewInward" Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Click="NewInwardManifest_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="TruckCheck" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Receive"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnNewOutward" Style="{DynamicResource PrimaryButton}"
                        Click="NewOutwardManifest_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="TruckDelivery" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Ship Out"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Tab Navigation -->
        <Border Grid.Row="1" Background="{DynamicResource CardBrush}" CornerRadius="10" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="TabAll" Style="{StaticResource ManifestTabHeader}" Tag="All Manifests" 
                             IsChecked="True" Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="FormatListBulleted" Width="18" Height="18" 
                                                Foreground="{DynamicResource TextSecondaryBrush}"/>
                </RadioButton>
                <RadioButton x:Name="TabOutbound" Style="{StaticResource ManifestTabHeader}" Tag="Outbound" 
                             Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="TruckDeliveryOutline" Width="18" Height="18" 
                                                Foreground="{DynamicResource TextSecondaryBrush}"/>
                </RadioButton>
                <RadioButton x:Name="TabInbound" Style="{StaticResource ManifestTabHeader}" Tag="Inbound" 
                             Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="TruckCheckOutline" Width="18" Height="18" 
                                                Foreground="{DynamicResource TextSecondaryBrush}"/>
                </RadioButton>
                <RadioButton x:Name="TabInTransit" Style="{StaticResource ManifestTabHeader}" Tag="In Transit" 
                             Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="TruckFastOutline" Width="18" Height="18" 
                                                Foreground="{DynamicResource InfoBrush}"/>
                </RadioButton>
                <RadioButton x:Name="TabPendingReceipt" Style="{StaticResource ManifestTabHeader}" Tag="Pending Receipt" 
                             Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="PackageVariant" Width="18" Height="18" 
                                                Foreground="{DynamicResource WarningBrush}"/>
                </RadioButton>
                <RadioButton x:Name="TabDiscrepancies" Style="{StaticResource ManifestTabHeader}" Tag="Discrepancies" 
                             Checked="Tab_Checked">
                    <iconPacks:PackIconMaterial Kind="AlertCircleOutline" Width="18" Height="18" 
                                                Foreground="{DynamicResource ErrorBrush}"/>
                </RadioButton>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>
            
            <!-- Manifest List -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="0" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filter -->
                    <Grid Grid.Row="0" Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchBox" Grid.Column="0" 
                                 mah:TextBoxHelper.Watermark="Search manifests..." 
                                 mah:TextBoxHelper.ClearTextButton="True"
                                 TextChanged="SearchBox_TextChanged"/>
                        
                        <ComboBox x:Name="StatusFilter" Grid.Column="1" Width="150" Margin="10,0,0,0"
                                  SelectionChanged="StatusFilter_SelectionChanged">
                            <ComboBoxItem Content="All Statuses" IsSelected="True"/>
                            <ComboBoxItem Content="Draft"/>
                            <ComboBoxItem Content="Submitted"/>
                            <ComboBoxItem Content="Approved"/>
                            <ComboBoxItem Content="In Transit"/>
                            <ComboBoxItem Content="Received"/>
                            <ComboBoxItem Content="Completed"/>
                        </ComboBox>
                        
                        <Button Grid.Column="2" Style="{DynamicResource ToolbarButton}" Margin="10,0,0,0"
                                Click="RefreshManifests_Click" ToolTip="Refresh">
                            <iconPacks:PackIconMaterial Kind="Refresh" Width="18" Height="18"/>
                        </Button>
                    </Grid>
                    
                    <!-- Manifest List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,0,16,16">
                        <ItemsControl x:Name="ManifestList" ItemsSource="{Binding FilteredManifests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ManifestCard}" MouseLeftButtonUp="ManifestCard_Click"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Type Icon -->
                                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Margin="0,0,16,0"
                                                    Background="{DynamicResource AccentBrush}">
                                                <iconPacks:PackIconMaterial Width="24" Height="24" Foreground="White"
                                                    Kind="TruckDeliveryOutline"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ManifestNumber}" FontWeight="Bold" FontSize="15"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <Border Background="{Binding Status, Converter={StaticResource ManifestStatusToColor}}"
                                                            CornerRadius="4" Padding="8,2" Margin="12,0,0,0">
                                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="White" FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <TextBlock Text="{Binding FromLocation.Name, FallbackValue='-'}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                                                    <iconPacks:PackIconMaterial Kind="ArrowRight" Width="14" Height="14" Margin="8,0"
                                                                                Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding ToLocation.Name, FallbackValue='-'}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                                    <TextBlock Text=" â€¢ " Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                                    <TextBlock Text="{Binding CreatedDate, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Verification Progress -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding VerificationProgress}" 
                                                           FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Text="verified" FontSize="11" HorizontalAlignment="Right"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <iconPacks:PackIconMaterial Kind="PackageVariantClosed" Width="64" Height="64" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.5"
                                                    HorizontalAlignment="Center"/>
                        <TextBlock Text="No manifests found" FontSize="16" Margin="0,15,0,5"
                                   Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Create a new manifest to get started" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="0">
                <Grid x:Name="DetailsPanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- No Selection State -->
                    <StackPanel x:Name="NoSelectionState" Grid.RowSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="GestureTapButton" Width="48" Height="48" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.5"
                                                    HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a manifest" FontSize="14" Margin="0,15,0,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Selected Manifest Details -->
                    <Grid x:Name="SelectedManifestDetails" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20">
                            <StackPanel>
                                <TextBlock x:Name="DetailManifestNumber" FontSize="18" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Border x:Name="DetailTypeBadge" CornerRadius="4" Padding="10,4" Margin="0,0,10,0">
                                        <TextBlock x:Name="DetailType" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border x:Name="DetailStatusBadge" CornerRadius="4" Padding="10,4">
                                        <TextBlock x:Name="DetailStatus" Foreground="White" FontSize="12"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Details Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Route -->
                                <TextBlock Text="ROUTE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="From" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailFromLocation" FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <iconPacks:PackIconMaterial Grid.Column="1" Kind="ArrowRight" Width="20" Height="20"
                                                                Foreground="{DynamicResource AccentBrush}" Margin="15,0"
                                                                VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="To" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailToLocation" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Dates -->
                                <TextBlock Text="TIMELINE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                        <TextBlock Text="Created" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailCreatedDate" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                        <TextBlock Text="Shipped" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailShippedDate" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Expected" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailExpectedDate" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                        <TextBlock Text="Received" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailReceivedDate" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Tracking -->
                                <TextBlock Text="TRACKING" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Carrier" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailCarrier" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Tracking #" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailTrackingNumber" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Verification Status -->
                                <TextBlock x:Name="VerificationHeader" Text="VERIFICATION" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Border x:Name="VerificationStatusPanel" Background="{DynamicResource SurfaceBrush}" 
                                        CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock x:Name="DetailVerificationStatus" FontSize="14" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock x:Name="DetailVerificationProgress" FontSize="12" Margin="0,4,0,0"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                            <TextBlock x:Name="DetailVerifiedCount" FontSize="24" FontWeight="Bold"
                                                       Foreground="{DynamicResource AccentBrush}" HorizontalAlignment="Right"/>
                                            <TextBlock Text="items verified" FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Items Preview -->
                                <TextBlock Text="ITEMS" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <ItemsControl x:Name="DetailItemsList" Margin="0,0,0,10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" 
                                                    Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                        <TextBlock Text="{Binding AssetNumber}" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </StackPanel>
                                                    <Border Grid.Column="1" CornerRadius="4" Padding="8,4"
                                                            Background="{Binding VerificationStatus, Converter={StaticResource VerificationStatusToColor}}">
                                                        <TextBlock Text="{Binding VerificationStatusDisplay}" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Actions -->
                        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15">
                            <StackPanel x:Name="ActionButtons">
                                <!-- Actions will be added dynamically based on manifest status -->
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
