<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.ExpectedItemSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Search Expected Items"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="450"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <mah:MetroWindow.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="Enter" Command="{Binding SelectCommand}"/>
    </mah:MetroWindow.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchTextBox" Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         mah:TextBoxHelper.Watermark="Search by name, asset number, unique ID, or serial..."
                         mah:TextBoxHelper.ClearTextButton="True"
                         FontSize="14" Padding="12,10">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SelectCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="{Binding FilteredCount}" FontSize="14" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="items" FontSize="14" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Results -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibility}}">
                <iconPacks:PackIconMaterial Kind="PackageVariantClosed" Width="48" Height="48"
                                            HorizontalAlignment="Center"
                                            Foreground="{DynamicResource TextSecondaryBrush}"
                                            Opacity="0.5"/>
                <TextBlock Text="No matching items found" HorizontalAlignment="Center"
                           Margin="0,15,0,5" FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                <TextBlock Text="Try a different search term" HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.7"/>
            </StackPanel>
            
            <!-- Results List -->
            <DataGrid ItemsSource="{Binding FilteredItems}"
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="Transparent"
                      BorderThickness="0"
                      RowHeaderWidth="0"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Status" Width="60" Binding="{Binding StatusIcon}"/>
                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Asset #" Width="120" Binding="{Binding AssetNumber}"/>
                    <DataGridTextColumn Header="Unique ID" Width="100" Binding="{Binding UniqueId}"/>
                    <DataGridTextColumn Header="Serial #" Width="120" Binding="{Binding SerialNumber}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Select an item and click 'Verify' to mark as received"
                           VerticalAlignment="Center" FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <Button Grid.Column="1" Content="Cancel" Width="90" Margin="0,0,10,0"
                        Click="CancelButton_Click" IsCancel="True"
                        Style="{DynamicResource SecondaryButton}"/>
                        
                <Button Grid.Column="2" Content="Verify Item" Width="110"
                        Click="VerifyButton_Click"
                        IsEnabled="{Binding HasSelection}"
                        Style="{DynamicResource PrimaryButton}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Check" Width="14" Height="14" 
                                                            VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Verify Item" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
