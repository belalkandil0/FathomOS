<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.ManifestWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="{Binding WindowTitle}"
        Height="700" Width="950"
        MinHeight="600" MinWidth="850"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StepDotConverter x:Key="WizardStepDotConverter"/>
        <converters:StepLineConverter x:Key="WizardStepLineConverter"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Step Indicator -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding StepTitle}" FontSize="18" FontWeight="Bold" 
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding StepDescription}" FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                
                <!-- Step Dots -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Ellipse Width="12" Height="12" Fill="{DynamicResource AccentBrush}" Margin="0,0,5,0"/>
                    <Rectangle Width="40" Height="2" Fill="{Binding IsStep1, Converter={StaticResource WizardStepLineConverter}}" VerticalAlignment="Center"/>
                    <Ellipse Width="12" Height="12" Fill="{Binding IsStep2, Converter={StaticResource WizardStepDotConverter}}" Margin="5,0"/>
                    <Rectangle Width="40" Height="2" Fill="{Binding IsStep2, Converter={StaticResource WizardStepLineConverter}}" VerticalAlignment="Center"/>
                    <Ellipse Width="12" Height="12" Fill="{Binding IsStep3, Converter={StaticResource WizardStepDotConverter}}" Margin="5,0"/>
                    <Rectangle Width="40" Height="2" Fill="{Binding IsStep3, Converter={StaticResource WizardStepLineConverter}}" VerticalAlignment="Center"/>
                    <Ellipse Width="12" Height="12" Fill="{Binding IsStep4, Converter={StaticResource WizardStepDotConverter}}" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Step Content -->
        <Grid Grid.Row="1" Margin="20">
            
            <!-- Step 1: Locations -->
            <Grid Visibility="{Binding IsStep1, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- From Location -->
                <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="20">
                    <StackPanel>
                        <TextBlock Text="FROM" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Location *" Style="{DynamicResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Locations}" 
                                  SelectedItem="{Binding FromLocation}"
                                  DisplayMemberPath="Name" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Project (optional)" Style="{DynamicResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Projects}" 
                                  SelectedItem="{Binding SelectedProject}"
                                  DisplayMemberPath="Name" Margin="0,0,0,15"/>
                    </StackPanel>
                </Border>
                
                <!-- Arrow -->
                <iconPacks:PackIconMaterial Grid.Column="1" Kind="ArrowRight" 
                    Width="30" Height="30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Foreground="{DynamicResource AccentBrush}"/>
                
                <!-- To Location -->
                <Border Grid.Column="2" Style="{DynamicResource CardBorder}" Padding="20">
                    <StackPanel>
                        <TextBlock Text="TO" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Location *" Style="{DynamicResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Locations}" 
                                  SelectedItem="{Binding ToLocation}"
                                  DisplayMemberPath="Name" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Expected Delivery" Style="{DynamicResource FieldLabel}"/>
                        <DatePicker SelectedDate="{Binding ExpectedDeliveryDate}" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Shipping Method" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding ShippingMethod}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Step 2: Equipment Selection -->
            <Grid Visibility="{Binding IsStep2, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Available Equipment -->
                <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Available Equipment" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <TextBox Grid.Row="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 mah:TextBoxHelper.Watermark="Search..." Margin="0,0,0,10"/>
                        
                        <DataGrid Grid.Row="2" ItemsSource="{Binding AvailableEquipment}"
                                  SelectedItem="{Binding SelectedAvailableEquipment}"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  SelectionMode="Single" GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Asset #" Binding="{Binding AssetNumber}" Width="100"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Transfer Buttons -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                    <Button Command="{Binding AddEquipmentCommand}" ToolTip="Add Selected" Padding="10" Margin="0,0,0,5">
                        <iconPacks:PackIconMaterial Kind="ChevronRight"/>
                    </Button>
                    <Button Command="{Binding AddAllEquipmentCommand}" ToolTip="Add All" Padding="10" Margin="0,0,0,5">
                        <iconPacks:PackIconMaterial Kind="ChevronDoubleRight"/>
                    </Button>
                    <Button Command="{Binding RemoveEquipmentCommand}" ToolTip="Remove Selected" Padding="10" Margin="0,0,0,5">
                        <iconPacks:PackIconMaterial Kind="ChevronLeft"/>
                    </Button>
                    <Separator Margin="0,10"/>
                    <Button Command="{Binding AddUnregisteredItemCommand}" ToolTip="Add item not in system" Padding="10"
                            Background="{DynamicResource WarningBrush}">
                        <iconPacks:PackIconMaterial Kind="Plus"/>
                    </Button>
                </StackPanel>
                
                <!-- Manifest Items -->
                <Border Grid.Column="2" Style="{DynamicResource CardBorder}" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" FontWeight="Bold" Margin="0,0,0,10">
                            <Run Text="Manifest Items ("/>
                            <Run Text="{Binding TotalItems, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding ManifestItems}"
                                  SelectedItem="{Binding SelectedManifestItem}"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  SelectionMode="Single" GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Asset #" Binding="{Binding AssetNumber}" Width="100"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <TextBlock Grid.Row="2" Margin="0,10,0,0">
                            <Run Text="Total Weight: "/>
                            <Run Text="{Binding TotalWeight, StringFormat='{}{0:F2} kg', Mode=OneWay}"/>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Step 3: Contact Details -->
            <Grid Visibility="{Binding IsStep3, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Sender -->
                <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="SENDER CONTACT" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Name" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding FromContactName}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Phone" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding FromContactPhone}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Email" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding FromContactEmail}"/>
                    </StackPanel>
                </Border>
                
                <!-- Receiver -->
                <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="RECEIVER CONTACT" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Name" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding ToContactName}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Phone" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding ToContactPhone}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Email" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding ToContactEmail}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Step 4: Review -->
            <ScrollViewer Visibility="{Binding IsStep4, Converter={StaticResource BoolToVisibility}}"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border Style="{DynamicResource CardBorder}" Padding="20" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="FROM" FontWeight="Bold"/>
                                <TextBlock Text="{Binding FromLocationName}" FontSize="16" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding FromContactName}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="TO" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ToLocationName}" FontSize="16" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ToContactName}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <Border Style="{DynamicResource CardBorder}" Padding="20" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ITEMS" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <ItemsControl ItemsSource="{Binding ManifestItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding AssetNumber}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Quantity, StringFormat='Qty: {0}'}" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <TextBlock Text="Total Items: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalItems}" Margin="0,0,20,0"/>
                                <TextBlock Text="Total Weight: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalWeight, StringFormat='{}{0:F2} kg'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{DynamicResource CardBorder}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="NOTES" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox Text="{Binding Notes}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" 
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="100" Margin="0,0,10,0"/>
                
                <Button Grid.Column="2" Content="â† Back" Command="{Binding BackCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="100" Margin="0,0,10,0"
                        Visibility="{Binding CanGoBack, Converter={StaticResource BoolToVisibility}}"/>
                
                <Button Grid.Column="3" Content="{Binding NextButtonText}" Command="{Binding NextCommand}"
                        Style="{DynamicResource PrimaryButton}" Width="120"/>
            </Grid>
        </Border>
        
        <!-- Loading -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing IsActive="True" Width="60" Height="60"/>
                <TextBlock Text="Creating manifest..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
