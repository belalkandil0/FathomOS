<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.EquipmentSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Search Equipment"
        Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="500"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" x:Name="SearchBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         mah:TextBoxHelper.Watermark="Search by name, asset number, serial number, or unique ID..."
                         mah:TextBoxHelper.ClearTextButton="True"
                         FontSize="14" Padding="10,8">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <Button Grid.Column="1" Command="{Binding SearchCommand}"
                        Width="40" Height="40" Margin="10,0,0,0"
                        ToolTip="Search">
                    <iconPacks:PackIconMaterial Kind="Magnify" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Results List -->
        <Grid Grid.Row="1" Margin="15">
            <DataGrid ItemsSource="{Binding SearchResults}"
                      SelectedItem="{Binding SelectedEquipment}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="Transparent"
                      RowHeaderWidth="0"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Asset Number" Binding="{Binding AssetNumber}" Width="120"/>
                    <DataGridTextColumn Header="Unique ID" Binding="{Binding UniqueId}" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="120"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding CurrentLocation.Name}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                </DataGrid.Columns>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
            
            <!-- Empty State -->
            <StackPanel Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibility}}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="Magnify" Width="48" Height="48" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Opacity="0.5"/>
                <TextBlock Text="{Binding EmptyStateMessage}" FontSize="14" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
            
            <!-- Loading -->
            <mah:ProgressRing IsActive="{Binding IsBusy}" Width="40" Height="40"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding ResultCount, StringFormat='{}{0} items found'}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" Margin="20,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="90" Margin="0,0,10,0"/>
                
                <Button Grid.Column="3" Content="Select" Command="{Binding SelectCommand}"
                        Style="{DynamicResource PrimaryButton}" Width="90"
                        IsEnabled="{Binding HasSelection}"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
