<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.ShipmentVerificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Shipment Verification"
        Height="750" Width="1000"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        MinHeight="600" MinWidth="800"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.InputBindings>
        <!-- Global keyboard shortcuts -->
        <KeyBinding Key="F5" Command="{Binding RefreshPendingManifestsCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding SearchExpectedItemCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveProgressCommand}"/>
    </mah:MetroWindow.InputBindings>
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- === HEADER === -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <iconPacks:PackIconMaterial Grid.Column="0" Kind="PackageVariant" 
                                            Width="32" Height="32" 
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource AccentBrush}"/>
                
                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Shipment Verification" FontSize="18" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Progress indicator (visible when verifying) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            Visibility="{Binding IsVerifyingState, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding ProgressText}" FontSize="16" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="0,0,15,0"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <mah:MetroProgressBar Value="{Binding ProgressPercentage}" 
                                          Width="150" Height="8"
                                          VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- === CONTENT === -->
        <Grid Grid.Row="1">
            
            <!-- STATE 1: Scan Shipment QR -->
            <Grid Visibility="{Binding IsScanShipmentState, Converter={StaticResource BoolToVisibility}}"
                  Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Option 1: Pending Inbound Shipments -->
                <Border Grid.Row="0" Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,20"
                        Visibility="{Binding HasPendingManifests, Converter={StaticResource BoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MaxHeight="200"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <iconPacks:PackIconMaterial Kind="PackageDown" Width="20" Height="20"
                                                        VerticalAlignment="Center" Margin="0,0,10,0"
                                                        Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="PENDING INBOUND SHIPMENTS" FontSize="14" FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding PendingManifestsCount, StringFormat=' ({0})'}"
                                       FontSize="14" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <Button Content="↻ Refresh" Command="{Binding RefreshPendingManifestsCommand}"
                                    Margin="15,0,0,0" Padding="10,3" FontSize="11"
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" Text="Select a shipment to start verification, or enter the manifest number manually below."
                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <DataGrid Grid.Row="2" ItemsSource="{Binding PendingManifests}"
                                  SelectedItem="{Binding SelectedPendingManifest}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Manifest #" Width="130" 
                                                    Binding="{Binding ManifestNumber}"/>
                                <DataGridTextColumn Header="From" Width="*" 
                                                    Binding="{Binding FromLocation.Name}"/>
                                <DataGridTextColumn Header="Shipped" Width="100" 
                                                    Binding="{Binding ShippedDate, StringFormat='{}{0:dd MMM}'}"/>
                                <DataGridTextColumn Header="Items" Width="60" 
                                                    Binding="{Binding Items.Count}"/>
                                <DataGridTemplateColumn Header="" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Verify" Padding="12,4" FontSize="11"
                                                    Command="{Binding DataContext.SelectPendingManifestCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{DynamicResource PrimaryButton}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Option 2: Manual Entry -->
                <Border Grid.Row="1" Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="450">
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <iconPacks:PackIconMaterial Kind="Barcode" Width="32" Height="32"
                                                        VerticalAlignment="Center" Margin="0,0,15,0"
                                                        Foreground="{DynamicResource AccentBrush}"/>
                            <StackPanel>
                                <TextBlock Text="ENTER MANIFEST NUMBER" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="Scan QR code or type the manifest number"
                                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="ManifestNumberTextBox" Grid.Column="0"
                                     Text="{Binding ShipmentQrCode, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="e.g., OUT-2026-00001 or scan QR..."
                                     FontSize="16" Padding="15,12"
                                     mah:TextBoxHelper.ClearTextButton="True">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoadShipmentCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <Button Grid.Column="1" Command="{Binding LoadShipmentCommand}"
                                    Style="{DynamicResource PrimaryButton}"
                                    Margin="10,0,0,0" Padding="20,12">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Magnify" Width="18" Height="18" 
                                                                VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Load" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <TextBlock Text="Accepts: Manifest number (OUT-2026-00001), QR code (fosman:...), or legacy format (s7mn:...)"
                                   FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center"/>
                        
                        <!-- Last scan result -->
                        <TextBlock Text="{Binding LastScanResult}" 
                                   HorizontalAlignment="Center" Margin="0,15,0,0"
                                   FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
                
                <!-- Keyboard shortcuts hint -->
                <TextBlock Grid.Row="2" Text="Tip: Press Enter after typing to load • F5 to refresh pending list • Escape to cancel"
                           HorizontalAlignment="Center" Margin="0,15,0,0"
                           FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </Grid>
            
            <!-- STATE 2: Verifying Items -->
            <Grid Visibility="{Binding IsVerifyingState, Converter={StaticResource BoolToVisibility}}"
                  Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- Shipment Info Card -->
                <Border Grid.Row="0" Grid.ColumnSpan="2" 
                        Background="{DynamicResource CardBrush}" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Manifest" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding ManifestNumber}" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="From" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding FromLocation}" FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="To" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding ToLocation}" FontSize="14"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Shipped" Style="{DynamicResource FieldLabel}"/>
                            <TextBlock Text="{Binding ShippedDate}" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Scan Input -->
                <Border Grid.Row="1" Grid.ColumnSpan="2" 
                        Background="{DynamicResource CardBrush}" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding ItemScanInput, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Scan item QR code here..."
                                     FontSize="16" Padding="12,10"
                                     mah:TextBoxHelper.ClearTextButton="True">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding ScanItemCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                <Button Content="Verify" Command="{Binding ScanItemCommand}"
                                        Style="{DynamicResource PrimaryButton}" Width="80"/>
                                <Button Command="{Binding SearchExpectedItemCommand}"
                                        Margin="10,0,0,0" Width="40"
                                        ToolTip="Search expected items (Ctrl+F)">
                                    <iconPacks:PackIconMaterial Kind="Magnify" Width="16" Height="16"/>
                                </Button>
                                <Button Content="Add Manual" Command="{Binding AddManualItemCommand}"
                                        Margin="10,0,0,0" Width="100"
                                        ToolTip="Add item without QR code (consumable)"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Input hints -->
                        <TextBlock Text="Accepts: UniqueId (S7WSS04068), Asset # (EQ-2026-00001), Serial #, or QR code"
                                   FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Items List -->
                <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="EXPECTED ITEMS" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding ExpectedItems}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBrush}" 
                                        CornerRadius="5" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Icon -->
                                        <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                            <Setter Property="Background" Value="#2ECC71"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Damaged">
                                                            <Setter Property="Background" Value="#F39C12"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Missing">
                                                            <Setter Property="Background" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="✓" FontSize="16" FontWeight="Bold"
                                                       Foreground="White" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="?"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                <Setter Property="Text" Value="✓"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Damaged">
                                                                <Setter Property="Text" Value="!"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Missing">
                                                                <Setter Property="Text" Value="✗"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                        
                                        <!-- Item Details -->
                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding AssetNumber}" FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text=" • " FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           Visibility="{Binding UniqueId, Converter={StaticResource NullToVisibility}}"/>
                                                <TextBlock Text="{Binding UniqueId}" FontSize="11"
                                                           Foreground="{DynamicResource AccentBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding DamageNotes}" FontSize="11"
                                                       Foreground="#F39C12" TextWrapping="Wrap"
                                                       Visibility="{Binding DamageNotes, Converter={StaticResource NullToVisibility}}"/>
                                        </StackPanel>
                                        
                                        <!-- Action Buttons (only for pending items) -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal"
                                                    Visibility="{Binding IsPending, Converter={StaticResource BoolToVisibility}}">
                                            <Button Content="✓" ToolTip="Mark Verified"
                                                    Command="{Binding DataContext.MarkVerifiedCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30" Margin="2"
                                                    Background="#2ECC71" Foreground="White"/>
                                            <Button Content="!" ToolTip="Mark Damaged"
                                                    Command="{Binding DataContext.MarkDamagedCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30" Margin="2"
                                                    Background="#F39C12" Foreground="White"/>
                                            <Button Content="✗" ToolTip="Mark Missing"
                                                    Command="{Binding DataContext.MarkMissingCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Width="30" Height="30" Margin="2"
                                                    Background="#E74C3C" Foreground="White"/>
                                        </StackPanel>
                                        
                                        <!-- Status Badge (for non-pending items) -->
                                        <Border Grid.Column="2" CornerRadius="3" Padding="8,4"
                                                Visibility="{Binding IsPending, Converter={StaticResource InverseBoolToVisibility}}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                            <Setter Property="Background" Value="#2ECC71"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Damaged">
                                                            <Setter Property="Background" Value="#F39C12"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Missing">
                                                            <Setter Property="Background" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                
                <!-- Right Sidebar - Summary & Actions -->
                <Border Grid.Row="2" Grid.Column="1" 
                        Background="{DynamicResource CardBrush}" 
                        CornerRadius="5" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Last Scan Result -->
                            <TextBlock Text="LAST SCAN" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource SurfaceBrush}" 
                                    CornerRadius="3" Padding="10" Margin="0,0,0,20">
                                <TextBlock Text="{Binding LastScanResult}" TextWrapping="Wrap"/>
                            </Border>
                            
                            <!-- Summary Stats -->
                            <TextBlock Text="VERIFICATION SUMMARY" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Verified"/>
                                <TextBlock Grid.Column="1" Text="{Binding VerifiedCount}" 
                                           FontWeight="Bold" Foreground="#2ECC71"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Pending"/>
                                <TextBlock Grid.Column="1" Text="{Binding PendingCount}" 
                                           FontWeight="Bold" Foreground="#95A5A6"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Damaged"/>
                                <TextBlock Grid.Column="1" Text="{Binding DamagedCount}" 
                                           FontWeight="Bold" Foreground="#F39C12"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Missing"/>
                                <TextBlock Grid.Column="1" Text="{Binding MissingCount}" 
                                           FontWeight="Bold" Foreground="#E74C3C"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Extra Items"/>
                                <TextBlock Grid.Column="1" Text="{Binding ExtraCount}" 
                                           FontWeight="Bold" Foreground="#3498DB"/>
                            </Grid>
                            
                            <!-- Extra Items List (if any) -->
                            <StackPanel Visibility="{Binding ExtraCount, Converter={StaticResource IntToVisibility}}">
                                <TextBlock Text="EXTRA ITEMS" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding ExtraItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SurfaceBrush}" 
                                                    CornerRadius="3" Padding="8" Margin="0,0,0,5">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding DisplayName}" FontSize="12"/>
                                                    <TextBlock Text="{Binding AssetNumber}" FontSize="10"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <Separator Margin="0,15"/>
                            
                            <!-- Quick Actions -->
                            <Button Content="Mark All Pending as Missing" 
                                    Command="{Binding MarkAllMissingCommand}"
                                    Margin="0,0,0,10" Padding="10,8"
                                    HorizontalAlignment="Stretch"/>
                            
                            <Button Content="Save Progress" 
                                    Command="{Binding SaveProgressCommand}"
                                    Margin="0,0,0,10" Padding="10,8"
                                    HorizontalAlignment="Stretch"/>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
            
            <!-- STATE 3: Complete -->
            <Grid Visibility="{Binding IsCompleteState, Converter={StaticResource BoolToVisibility}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
                    
                    <iconPacks:PackIconMaterial Kind="CheckCircle" Width="80" Height="80"
                                                HorizontalAlignment="Center" Margin="0,0,0,30"
                                                Foreground="#2ECC71"/>
                    
                    <TextBlock Text="Verification Complete!" FontSize="24" FontWeight="SemiBold"
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <!-- Summary Card -->
                    <Border Background="{DynamicResource CardBrush}" 
                            CornerRadius="5" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Items Verified" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="{Binding VerifiedCount}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#2ECC71"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10" 
                                  Visibility="{Binding DamagedCount, Converter={StaticResource IntToVisibility}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Items Damaged" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="{Binding DamagedCount}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#F39C12"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10"
                                  Visibility="{Binding MissingCount, Converter={StaticResource IntToVisibility}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Items Missing" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="{Binding MissingCount}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#E74C3C"/>
                            </Grid>
                            
                            <Grid Visibility="{Binding ExtraCount, Converter={StaticResource IntToVisibility}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Extra Items Added" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="{Binding ExtraCount}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#3498DB"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Discrepancy Warning -->
                    <Border Background="#FFF3CD" CornerRadius="5" Padding="15" Margin="0,0,0,20"
                            Visibility="{Binding HasDiscrepancies, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AlertCircle" Width="24" Height="24"
                                                        Foreground="#856404" Margin="0,0,10,0"/>
                            <TextBlock Text="Discrepancies have been noted. Notifications have been sent."
                                       Foreground="#856404" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="All verified items have been transferred to the destination location."
                               TextAlignment="Center" TextWrapping="Wrap"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,20"/>
                    
                </StackPanel>
            </Grid>
            
        </Grid>
        
        <!-- === FOOTER === -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Busy indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                    <mah:ProgressRing IsActive="True" Width="20" Height="20"/>
                    <TextBlock Text="Processing..." Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Right: Action buttons -->
                <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="100" Margin="0,0,10,0"
                        Visibility="{Binding IsCompleteState, Converter={StaticResource InverseBoolToVisibility}}"/>
                
                <Button Grid.Column="1" Content="Close" Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="100" Margin="0,0,10,0"
                        Visibility="{Binding IsCompleteState, Converter={StaticResource BoolToVisibility}}"/>
                
                <Button Grid.Column="2" Content="Complete Verification" 
                        Command="{Binding CompleteVerificationCommand}"
                        Style="{DynamicResource PrimaryButton}" Width="180"
                        Visibility="{Binding IsVerifyingState, Converter={StaticResource BoolToVisibility}}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="CheckAll" Width="16" Height="16" 
                                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Complete Verification" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
