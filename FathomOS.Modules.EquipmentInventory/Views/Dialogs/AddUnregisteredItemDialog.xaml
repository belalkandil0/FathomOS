<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.AddUnregisteredItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Add Unregistered Item"
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Add Unregistered Item" FontSize="18" FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock Text="Add an item that is not in the equipment system" FontSize="12"
                           Foreground="#CCFFFFFF" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Item Type Selection -->
                <TextBlock Text="ITEM TYPE" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Content="Equipment" IsChecked="{Binding IsEquipment}" 
                                 GroupName="ItemType" Margin="0,0,20,0"/>
                    <RadioButton Content="Consumable" IsChecked="{Binding IsConsumable}" 
                                 GroupName="ItemType"/>
                </StackPanel>
                
                <Separator Margin="0,0,0,15"/>
                
                <!-- Basic Information -->
                <TextBlock Text="BASIC INFORMATION" FontWeight="Bold" FontSize="12" Margin="0,0,0,15"/>
                
                <TextBlock Text="Name *" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         mah:TextBoxHelper.Watermark="Enter item name"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Description" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         mah:TextBoxHelper.Watermark="Brief description"
                         TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                         Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Quantity *" Style="{DynamicResource FieldLabel}"/>
                        <mah:NumericUpDown Value="{Binding Quantity}" Minimum="1" Maximum="9999"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Unit of Measure" Style="{DynamicResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding UnitOptions}" SelectedItem="{Binding UnitOfMeasure}"
                                  IsEditable="True"/>
                    </StackPanel>
                </Grid>
                
                <Separator Margin="0,10,0,15"/>
                
                <!-- Equipment Details (shown when IsEquipment) -->
                <StackPanel Visibility="{Binding IsEquipment, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="EQUIPMENT DETAILS" FontWeight="Bold" FontSize="12" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Serial Number" Style="{DynamicResource FieldLabel}"/>
                    <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                             mah:TextBoxHelper.Watermark="Enter serial number if available"
                             Margin="0,0,0,10"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Manufacturer" Style="{DynamicResource FieldLabel}"/>
                            <TextBox Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Manufacturer"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Model" Style="{DynamicResource FieldLabel}"/>
                            <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Model"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Part Number" Style="{DynamicResource FieldLabel}"/>
                    <TextBox Text="{Binding PartNumber, UpdateSourceTrigger=PropertyChanged}"
                             mah:TextBoxHelper.Watermark="Part number if known"
                             Margin="0,0,0,10"/>
                    
                    <Separator Margin="0,10,0,15"/>
                </StackPanel>
                
                <!-- Category Suggestion -->
                <TextBlock Text="SUGGESTED CATEGORY" FontWeight="Bold" FontSize="12" Margin="0,0,0,15"/>
                
                <TextBlock Text="Category (optional)" Style="{DynamicResource FieldLabel}"/>
                <ComboBox ItemsSource="{Binding Categories}" 
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          mah:TextBoxHelper.Watermark="Select if known"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Type (optional)" Style="{DynamicResource FieldLabel}"/>
                <ComboBox ItemsSource="{Binding Types}" 
                          SelectedItem="{Binding SelectedType}"
                          DisplayMemberPath="Name"
                          mah:TextBoxHelper.Watermark="Select if known"
                          Margin="0,0,0,10"/>
                
                <!-- Photo Section -->
                <Separator Margin="0,10,0,15"/>
                
                <TextBlock Text="PHOTOS" FontWeight="Bold" FontSize="12" Margin="0,0,0,15"/>
                
                <Button Content="Add Photo" Command="{Binding AddPhotoCommand}"
                        HorizontalAlignment="Left" Padding="15,8" Margin="0,0,0,10">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Camera" Width="16" Height="16" 
                                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Add Photo" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                
                <TextBlock Text="{Binding PhotoCount, StringFormat='{}{0} photo(s) attached'}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"/>
                
                <!-- Info Box -->
                <Border Background="{DynamicResource SurfaceBrush}" 
                        BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1"
                        CornerRadius="4" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="ğŸ“‹ Review Required" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            This item will be added to a pending review list. Inventory management 
                            will review and either add it as registered equipment or keep it as 
                            a consumable item.
                        </TextBlock>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButton}" Width="90" Margin="0,0,10,0"/>
                
                <Button Grid.Column="2" Content="Add Item" Command="{Binding SaveCommand}"
                        Style="{DynamicResource PrimaryButton}" Width="100"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
