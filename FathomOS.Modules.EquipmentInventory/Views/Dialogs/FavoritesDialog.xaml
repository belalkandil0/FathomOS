<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.FavoritesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Favorites & Recent"
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        TitleCharacterCasing="Normal"
        BorderThickness="1"
        BorderBrush="{DynamicResource AccentBrush}"
        GlowBrush="{DynamicResource AccentBrush}">
    
    <mah:MetroWindow.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColor"/>
    </mah:MetroWindow.Resources>
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tab Control -->
        <TabControl Grid.Row="1" x:Name="MainTabs">
            <!-- Favorites Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Star" Width="16" Height="16" Margin="0,0,8,0"
                                                    Foreground="{DynamicResource WarningBrush}"/>
                        <TextBlock Text="Favorites"/>
                        <TextBlock x:Name="FavoritesCount" Text=" (0)" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <ListBox x:Name="FavoritesList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="FavoritesList_SelectionChanged"
                             MouseDoubleClick="List_DoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <iconPacks:PackIconMaterial Kind="Star" Width="20" Height="20" 
                                                                Margin="0,0,12,0"
                                                                Foreground="{DynamicResource WarningBrush}"
                                                                VerticalAlignment="Center"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding AssetNumber}" FontSize="12" FontFamily="Consolas"
                                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding CurrentLocation.Name, FallbackValue='No Location'}" 
                                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="2" 
                                            Background="{Binding Status, Converter={StaticResource StatusToColor}}" 
                                            CornerRadius="4" Padding="8,4" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="White" FontSize="10"/>
                                    </Border>
                                    
                                    <Button Grid.Column="3" Style="{DynamicResource SecondaryButton}"
                                            Tag="{Binding}" Click="RemoveFavorite_Click" Padding="8,6"
                                            ToolTip="Remove from favorites">
                                        <iconPacks:PackIconMaterial Kind="StarOff" Width="14" Height="14"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel x:Name="FavoritesEmpty" VerticalAlignment="Center" 
                                HorizontalAlignment="Center" Visibility="Collapsed">
                        <iconPacks:PackIconMaterial Kind="StarOff" Width="48" Height="48" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}" 
                                                    HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="No favorites" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,15,0,5"/>
                        <TextBlock Text="Click the star icon on equipment to add favorites"
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"
                                   HorizontalAlignment="Center" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Recent Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="History" Width="16" Height="16" Margin="0,0,8,0"
                                                    Foreground="{DynamicResource AccentBrush}"/>
                        <TextBlock Text="Recent"/>
                        <TextBlock x:Name="RecentCount" Text=" (0)" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <ListBox x:Name="RecentList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="RecentList_SelectionChanged"
                             MouseDoubleClick="List_DoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <iconPacks:PackIconMaterial Kind="History" Width="20" Height="20" 
                                                                Margin="0,0,12,0"
                                                                Foreground="{DynamicResource AccentBrush}"
                                                                VerticalAlignment="Center"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding AssetNumber}" FontSize="12" FontFamily="Consolas"
                                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding CurrentLocation.Name, FallbackValue='No Location'}" 
                                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="2" 
                                            Background="{Binding Status, Converter={StaticResource StatusToColor}}" 
                                            CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel x:Name="RecentEmpty" VerticalAlignment="Center" 
                                HorizontalAlignment="Center" Visibility="Collapsed">
                        <iconPacks:PackIconMaterial Kind="HistoryRemove" Width="48" Height="48" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}" 
                                                    HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="No recent items" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,15,0,5"/>
                        <TextBlock Text="Equipment you view will appear here"
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"
                                   HorizontalAlignment="Center" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" x:Name="ClearButton" Style="{DynamicResource SecondaryButton}"
                    Click="Clear_Click" Padding="15,10">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="DeleteSweep" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Clear All"/>
                </StackPanel>
            </Button>
            
            <Button Grid.Column="2" Content="Cancel" Style="{DynamicResource SecondaryButton}"
                    Click="Cancel_Click" Padding="20,10" Margin="0,0,10,0"/>
            <Button Grid.Column="3" x:Name="SelectButton" Style="{DynamicResource PrimaryButton}"
                    Click="Select_Click" Padding="20,10" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="ArrowRight" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Go to Item"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
