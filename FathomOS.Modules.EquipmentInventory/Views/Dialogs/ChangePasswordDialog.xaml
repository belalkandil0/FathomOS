<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Change Password"
        Height="480" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="KeyChange" Width="28" Height="28" 
                                                Foreground="{DynamicResource AccentBrush}"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="Change Password" FontSize="20" FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding HeaderMessage}" FontSize="12"
                          Foreground="{DynamicResource TextSecondaryBrush}"
                          Margin="40,8,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="24">
            <!-- Current Password (if not first login) -->
            <StackPanel Visibility="{Binding ShowCurrentPassword, Converter={StaticResource BoolToVisibility}}"
                       Margin="0,0,0,16">
                <TextBlock Text="Current Password" FontSize="12"
                          Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <PasswordBox x:Name="CurrentPasswordBox" 
                            mah:TextBoxHelper.Watermark="Enter current password"
                            PasswordChanged="CurrentPasswordBox_PasswordChanged"/>
            </StackPanel>
            
            <!-- New Password -->
            <TextBlock Text="New Password" FontSize="12"
                      Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <PasswordBox x:Name="NewPasswordBox" 
                        mah:TextBoxHelper.Watermark="Enter new password"
                        PasswordChanged="NewPasswordBox_PasswordChanged"/>
            
            <!-- Confirm Password -->
            <TextBlock Text="Confirm New Password" FontSize="12"
                      Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,16,0,6"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                        mah:TextBoxHelper.Watermark="Confirm new password"
                        PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            
            <!-- Password Requirements -->
            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                   Padding="16" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Password Requirements:" FontSize="12" FontWeight="SemiBold"
                              Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding LengthIcon}" Width="14" Height="14"
                                                    Foreground="{Binding LengthColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="At least 8 characters" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding UppercaseIcon}" Width="14" Height="14"
                                                    Foreground="{Binding UppercaseColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="At least one uppercase letter" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding LowercaseIcon}" Width="14" Height="14"
                                                    Foreground="{Binding LowercaseColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="At least one lowercase letter" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding DigitIcon}" Width="14" Height="14"
                                                    Foreground="{Binding DigitColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="At least one digit" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding SpecialIcon}" Width="14" Height="14"
                                                    Foreground="{Binding SpecialColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="At least one special character (!@#$%&amp;*)" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <iconPacks:PackIconMaterial Kind="{Binding MatchIcon}" Width="14" Height="14"
                                                    Foreground="{Binding MatchColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="Passwords match" FontSize="11"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Error Message -->
            <Border Background="#40FF0000" CornerRadius="4" Padding="12" Margin="0,16,0,0"
                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FFCCCC" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" Content="Cancel" IsCancel="True"
                       Click="CancelButton_Click"
                       Style="{DynamicResource SecondaryButton}"
                       Width="100" Margin="0,0,12,0"
                       Visibility="{Binding AllowCancel, Converter={StaticResource BoolToVisibility}}"/>
                
                <Button Grid.Column="2" Content="Change Password" 
                       Click="ChangeButton_Click"
                       Style="{DynamicResource PrimaryButton}"
                       Width="140" IsEnabled="{Binding CanChange}"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
