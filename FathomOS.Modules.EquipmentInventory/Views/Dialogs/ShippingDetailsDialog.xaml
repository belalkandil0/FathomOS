<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.ShippingDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Shipping Details"
        Height="420" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        TitleCharacterCasing="Normal"
        BorderThickness="1"
        BorderBrush="{DynamicResource AccentBrush}"
        GlowBrush="{DynamicResource AccentBrush}">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <iconPacks:PackIconMaterial Kind="TruckDelivery" Width="28" Height="28" 
                                            Foreground="{DynamicResource AccentBrush}" 
                                            VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBlock Text="Enter Shipping Details" Style="{DynamicResource HeadingMedium}"/>
            </StackPanel>
            <TextBlock Text="Provide carrier and tracking information for this shipment." 
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Form Fields -->
        <StackPanel Grid.Row="1">
            <!-- Shipping Method -->
            <TextBlock Text="Shipping Method" FontSize="12" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <ComboBox x:Name="ShippingMethodCombo" Margin="0,0,0,16" SelectedIndex="0">
                <ComboBoxItem Content="Road"/>
                <ComboBoxItem Content="Sea"/>
                <ComboBoxItem Content="Air"/>
                <ComboBoxItem Content="Helicopter"/>
                <ComboBoxItem Content="Internal Transfer"/>
            </ComboBox>
            
            <!-- Carrier Name -->
            <TextBlock Text="Carrier Name" FontSize="12" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <TextBox x:Name="CarrierNameBox" Margin="0,0,0,16" 
                     mah:TextBoxHelper.Watermark="e.g., DHL, FedEx, Maersk..."
                     mah:TextBoxHelper.ClearTextButton="True"/>
            
            <!-- Tracking Number -->
            <TextBlock Text="Tracking Number" FontSize="12" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <TextBox x:Name="TrackingNumberBox" Margin="0,0,0,16" 
                     mah:TextBoxHelper.Watermark="Enter tracking number (optional)"
                     mah:TextBoxHelper.ClearTextButton="True"/>
            
            <!-- Expected Delivery Date -->
            <TextBlock Text="Expected Delivery Date" FontSize="12" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <DatePicker x:Name="ExpectedDatePicker" Margin="0,0,0,16"/>
        </StackPanel>
        
        <!-- Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Content="Cancel" Style="{DynamicResource SecondaryButton}"
                    Click="Cancel_Click" Padding="20,10" Margin="0,0,10,0"/>
            <Button Grid.Column="2" Style="{DynamicResource PrimaryButton}"
                    Click="Confirm_Click" Padding="20,10">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="TruckFastOutline" Width="16" Height="16" 
                                                VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Mark as Shipped"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
