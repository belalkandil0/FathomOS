<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.Dialogs.MaintenanceRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="{Binding DialogTitle}"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1">
    
    <mah:MetroWindow.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="25">
            <StackPanel>
                <TextBlock Text="EQUIPMENT" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBlock Text="Select Equipment" Style="{DynamicResource FieldLabel}"/>
                <ComboBox ItemsSource="{Binding EquipmentList}" 
                          SelectedItem="{Binding SelectedEquipment}"
                          DisplayMemberPath="Name" Margin="0,0,0,15"/>
                
                <TextBlock Text="Selected Asset #" Style="{DynamicResource FieldLabel}"
                           Visibility="{Binding HasSelectedEquipment, Converter={StaticResource BoolToVisibility}}"/>
                <TextBlock Text="{Binding SelectedEquipment.AssetNumber}" 
                           Foreground="{DynamicResource AccentBrush}" FontWeight="SemiBold"
                           Visibility="{Binding HasSelectedEquipment, Converter={StaticResource BoolToVisibility}}"
                           Margin="0,0,0,15"/>
                
                <Separator Margin="0,10"/>
                
                <TextBlock Text="MAINTENANCE DETAILS" FontWeight="Bold" Margin="0,15,0,10"/>
                
                <TextBlock Text="Maintenance Type" Style="{DynamicResource FieldLabel}"/>
                <ComboBox ItemsSource="{Binding MaintenanceTypes}" 
                          SelectedItem="{Binding MaintenanceType}" Margin="0,0,0,10"/>
                
                <TextBlock Text="Description" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                         VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,5,10">
                        <TextBlock Text="Performed Date" Style="{DynamicResource FieldLabel}"/>
                        <DatePicker SelectedDate="{Binding PerformedDate}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5,0,0,10">
                        <TextBlock Text="Next Due Date" Style="{DynamicResource FieldLabel}"/>
                        <DatePicker SelectedDate="{Binding NextDueDate}"/>
                    </StackPanel>
                </Grid>
                
                <TextBlock Text="Performed By" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding PerformedBy, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                
                <Separator Margin="0,10"/>
                
                <TextBlock Text="ADDITIONAL INFO" FontWeight="Bold" Margin="0,15,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,5,10">
                        <TextBlock Text="Cost" Style="{DynamicResource FieldLabel}"/>
                        <mah:NumericUpDown Value="{Binding Cost}" Minimum="0" StringFormat="F2"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5,0,0,10">
                        <TextBlock Text="Work Order #" Style="{DynamicResource FieldLabel}"/>
                        <TextBox Text="{Binding WorkOrderNumber}"/>
                    </StackPanel>
                </Grid>
                
                <TextBlock Text="Notes" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Content="Cancel" Width="100" Margin="0,0,10,0"
                        Style="{DynamicResource SecondaryButton}" Command="{Binding CancelCommand}"/>
                
                <Button Grid.Column="2" Content="Save" Width="100"
                        Style="{DynamicResource PrimaryButton}" Command="{Binding SaveCommand}"/>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
