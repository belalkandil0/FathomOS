<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.DefectReportListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColor"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Defect Reports (EFN)" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
                <TextBlock Text="Equipment Failure Notifications and defect tracking" 
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Command="{Binding RefreshDefectsCommand}" ToolTip="Refresh">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                </Button>
                <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Command="{Binding ExportDefectsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Export" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
                <Button Style="{DynamicResource PrimaryButton}" Command="{Binding NewDefectReportCommand}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="New EFN Report"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Defect List -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Margin="0,0,15,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search & Filter Bar -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15" 
                            CornerRadius="12,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Box -->
                            <Border Grid.Column="0" Background="{DynamicResource CardBrush}" CornerRadius="8" 
                                    Padding="12,0" Margin="0,0,15,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <iconPacks:PackIconMaterial Kind="Magnify" Width="16" Height="16" 
                                                                Foreground="{DynamicResource TextSecondaryBrush}" 
                                                                VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding DefectSearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                             Background="Transparent" BorderThickness="0" FontSize="13"
                                             Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"
                                             mah:TextBoxHelper.Watermark="Search by report #, serial, description..."/>
                                </Grid>
                            </Border>
                            
                            <!-- Status Filter -->
                            <ComboBox Grid.Column="1" ItemsSource="{Binding DefectStatusOptions}" 
                                      SelectedItem="{Binding SelectedDefectStatusFilter}"
                                      Width="150" Margin="0,0,10,0"/>
                            
                            <!-- Urgency Filter -->
                            <ComboBox Grid.Column="2" ItemsSource="{Binding DefectUrgencyOptions}" 
                                      SelectedItem="{Binding SelectedDefectUrgencyFilter}"
                                      Width="130" Margin="0,0,10,0"/>
                            
                            <!-- Clear Filters -->
                            <Button Grid.Column="3" Style="{DynamicResource IconButton}" ToolTip="Clear Filters"
                                    Command="{Binding ClearDefectFiltersCommand}">
                                <iconPacks:PackIconMaterial Kind="FilterRemove" Width="16" Height="16"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Results Count -->
                    <Border Grid.Row="1" Background="{DynamicResource BackgroundBrush}" Padding="15,10">
                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13">
                            <Run Text="{Binding DefectReports.Count, Mode=OneWay}"/>
                            <Run Text="reports found"/>
                        </TextBlock>
                    </Border>
                    
                    <!-- Defect List -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding DefectReports}" 
                             SelectedItem="{Binding SelectedDefectReport}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="15,12"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border" Background="Transparent" 
                                                    BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#08FFFFFF"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#10FFFFFF"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter TargetName="border" Property="BorderThickness" Value="3,0,0,1"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Urgency Indicator -->
                                    <Border Grid.Column="0" Width="4" CornerRadius="2" Margin="0,0,12,0"
                                            VerticalAlignment="Stretch">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ReplacementUrgency}" Value="High">
                                                        <Setter Property="Background" Value="#F85149"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ReplacementUrgency}" Value="Medium">
                                                        <Setter Property="Background" Value="#D29922"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ReplacementUrgency}" Value="Low">
                                                        <Setter Property="Background" Value="#3FB950"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    
                                    <!-- Report Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimaryBrush}">
                                            <Run Text="{Binding ReportNumber}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   Margin="0,4,0,0">
                                            <Run Text="{Binding FaultCategory}"/>
                                            <Run Text=" â€¢ "/>
                                            <Run Text="{Binding MajorComponent}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   Margin="0,4,0,0" TextTrimming="CharacterEllipsis" MaxWidth="400">
                                            <Run Text="{Binding DetailedSymptoms}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- Status & Date -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Border CornerRadius="10" Padding="10,4" HorizontalAlignment="Right">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#303840"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                            <Setter Property="Background" Value="#30808080"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Submitted">
                                                            <Setter Property="Background" Value="#3058A6FF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="UnderReview">
                                                            <Setter Property="Background" Value="#30D29922"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                            <Setter Property="Background" Value="#3000B4D8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Resolved">
                                                            <Setter Property="Background" Value="#303FB950"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Closed">
                                                            <Setter Property="Background" Value="#30808080"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusDisplay}" FontSize="11" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </Border>
                                        <TextBlock Text="{Binding ReportDate, StringFormat='{}{0:dd MMM yyyy}'}" 
                                                   FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Detail Panel -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="20">
                <Grid>
                    <!-- No Selection -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding HasSelectedDefect, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
                        <iconPacks:PackIconMaterial Kind="FileDocumentAlertOutline" Width="64" Height="64" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}" 
                                                    HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="Select a Report" FontSize="16" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,15,0,0" Opacity="0.5"/>
                    </StackPanel>
                    
                    <!-- Selected Report Details -->
                    <ScrollViewer Visibility="{Binding HasSelectedDefect, Converter={StaticResource BoolToVisibility}}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedDefectReport.ReportNumber}" 
                                               FontSize="20" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedDefectReport.ReportDate, StringFormat='Reported: {0:dd MMMM yyyy}'}"
                                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Style="{DynamicResource IconButton}" ToolTip="Edit"
                                            Command="{Binding EditDefectReportCommand}" Margin="0,0,5,0">
                                        <iconPacks:PackIconMaterial Kind="Pencil" Width="16" Height="16"/>
                                    </Button>
                                    <Button Style="{DynamicResource IconButton}" ToolTip="Print"
                                            Command="{Binding PrintDefectReportCommand}">
                                        <iconPacks:PackIconMaterial Kind="Printer" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Status & Urgency -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="STATUS" Style="{DynamicResource FieldLabel}"/>
                                    <TextBlock Text="{Binding SelectedDefectReport.StatusDisplay}" 
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="URGENCY" Style="{DynamicResource FieldLabel}"/>
                                    <TextBlock FontSize="14" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedDefectReport.ReplacementUrgency}" Value="High">
                                                        <Setter Property="Foreground" Value="#F85149"/>
                                                        <Setter Property="Text" Value="HIGH"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedDefectReport.ReplacementUrgency}" Value="Medium">
                                                        <Setter Property="Foreground" Value="#D29922"/>
                                                        <Setter Property="Text" Value="MEDIUM"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedDefectReport.ReplacementUrgency}" Value="Low">
                                                        <Setter Property="Foreground" Value="#3FB950"/>
                                                        <Setter Property="Text" Value="LOW"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Fault Details -->
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="FAULT DETAILS" FontSize="11" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.7" Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                            <TextBlock Text="Category" Style="{DynamicResource FieldLabel}"/>
                                            <TextBlock Text="{Binding SelectedDefectReport.FaultCategory}" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                            <TextBlock Text="Major Component" Style="{DynamicResource FieldLabel}"/>
                                            <TextBlock Text="{Binding SelectedDefectReport.MajorComponent}" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="0">
                                            <TextBlock Text="Manufacturer" Style="{DynamicResource FieldLabel}"/>
                                            <TextBlock Text="{Binding SelectedDefectReport.Manufacturer}" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="1">
                                            <TextBlock Text="Serial Number" Style="{DynamicResource FieldLabel}"/>
                                            <TextBlock Text="{Binding SelectedDefectReport.SerialNumber}" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Symptoms -->
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="SYMPTOMS" FontSize="11" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.7" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding SelectedDefectReport.DetailedSymptoms}" 
                                               TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Content="Submit" Style="{DynamicResource PrimaryButton}"
                                        Command="{Binding SubmitDefectReportCommand}"
                                        Visibility="{Binding SelectedDefectReport.CanSubmit, Converter={StaticResource BoolToVisibility}}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Resolve" Style="{DynamicResource SecondaryButton}"
                                        Command="{Binding ResolveDefectReportCommand}"
                                        Visibility="{Binding SelectedDefectReport.CanResolve, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
