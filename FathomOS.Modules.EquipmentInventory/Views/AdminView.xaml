<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:UnregisteredItemStatusToColorConverter x:Key="UnregisteredItemStatusToColor"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Administration" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
            <TextBlock Text="User management, roles, and system configuration" 
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
        </StackPanel>
        
        <!-- Admin Tabs -->
        <TabControl Grid.Row="1">
            
            <!-- Users Tab -->
            <TabItem Header="Users">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Info Card for Default Credentials -->
                    <Border Grid.Row="0" Background="{DynamicResource InfoBrush}" CornerRadius="8" 
                           Padding="16" Margin="0,0,0,16"
                           Visibility="{Binding ShowDefaultCredentialsInfo, Converter={StaticResource BoolToVisibility}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="InformationOutline" Width="20" Height="20"
                                                        Foreground="{DynamicResource InfoTextBrush}"
                                                        VerticalAlignment="Top" Margin="0,2,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Default Administrator Credentials" FontWeight="SemiBold"
                                          Foreground="{DynamicResource InfoTextBrush}"/>
                                <TextBlock Foreground="{DynamicResource InfoTextBrush}" Margin="0,4,0,0">
                                    <Run Text="Username:"/><Run Text=" admin" FontWeight="SemiBold"/>
                                    <Run Text="  |  Password:"/><Run Text=" Admin@123!" FontWeight="SemiBold"/>
                                    <Run Text="  |  Default PIN:"/><Run Text=" 1234" FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock Text="Users must change their password on first login."
                                          Foreground="{DynamicResource InfoTextBrush}" FontStyle="Italic" Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="2" Content="Dismiss" 
                                   Command="{Binding DismissInfoCommand}"
                                   Style="{DynamicResource SecondaryButton}"
                                   Padding="12,6" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>
                    
                    <!-- Toolbar -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" Text="{Binding UserSearchText, UpdateSourceTrigger=PropertyChanged}"
                                Width="300" HorizontalAlignment="Left"
                                Tag="Search users..." Style="{DynamicResource SearchTextBox}"/>
                        
                        <Button Grid.Column="1" Style="{DynamicResource PrimaryButton}" 
                                Command="{Binding AddUserCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AccountPlus" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Add User"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <Border Grid.Row="2" Style="{DynamicResource CardBorder}" Padding="0">
                        <DataGrid ItemsSource="{Binding FilteredUsers}" AutoGenerateColumns="False" IsReadOnly="True"
                                 SelectedItem="{Binding SelectedUser}" SelectionMode="Single">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit User" Command="{Binding EditUserCommand}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial Kind="AccountEdit" Width="14" Height="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Reset Password" Command="{Binding ResetPasswordCommand}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial Kind="KeyChange" Width="14" Height="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Set PIN" Command="{Binding SetPinCommand}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial Kind="Pin" Width="14" Height="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Unlock Account" Command="{Binding UnlockUserCommand}"
                                             IsEnabled="{Binding SelectedUser.IsLocked}">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial Kind="LockOpen" Width="14" Height="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Deactivate User" Command="{Binding DeactivateUserCommand}"
                                             Foreground="OrangeRed">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial Kind="AccountOff" Width="14" Height="14" Foreground="OrangeRed"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                                <DataGridTextColumn Header="Full Name" Binding="{Binding DisplayName}" Width="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#2000AA00"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#20FF0000"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                                                <Setter Property="Background" Value="#20FF8800"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Active"/>
                                                            <Setter Property="Foreground" Value="#00AA00"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Text" Value="Inactive"/>
                                                                    <Setter Property="Foreground" Value="#FF0000"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                                                    <Setter Property="Text" Value="Locked"/>
                                                                    <Setter Property="Foreground" Value="#FF8800"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Pwd Reset" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <iconPacks:PackIconMaterial Width="14" Height="14" HorizontalAlignment="Center">
                                                <iconPacks:PackIconMaterial.Style>
                                                    <Style TargetType="iconPacks:PackIconMaterial">
                                                        <Setter Property="Kind" Value="CheckCircle"/>
                                                        <Setter Property="Foreground" Value="#00AA00"/>
                                                        <Setter Property="ToolTip" Value="Password OK"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MustChangePassword}" Value="True">
                                                                <Setter Property="Kind" Value="AlertCircle"/>
                                                                <Setter Property="Foreground" Value="#FF8800"/>
                                                                <Setter Property="ToolTip" Value="Must change password"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </iconPacks:PackIconMaterial.Style>
                                            </iconPacks:PackIconMaterial>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Last Login" Binding="{Binding LastLoginAt, StringFormat='{}{0:g}'}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Roles Tab -->
            <TabItem Header="Roles">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0" Style="{DynamicResource PrimaryButton}" 
                            HorizontalAlignment="Right" Margin="0,0,0,20"
                            Command="{Binding AddRoleCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ShieldPlus" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Role"/>
                        </StackPanel>
                    </Button>
                    
                    <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Padding="0">
                        <DataGrid ItemsSource="{Binding Roles}" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridCheckBoxColumn Header="System" Binding="{Binding IsSystemRole}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Categories Tab -->
            <TabItem Header="Categories">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0" Style="{DynamicResource PrimaryButton}" 
                            HorizontalAlignment="Right" Margin="0,0,0,20"
                            Command="{Binding AddCategoryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FolderPlus" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Category"/>
                        </StackPanel>
                    </Button>
                    
                    <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Padding="0">
                        <DataGrid ItemsSource="{Binding Categories}" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Consumable" Binding="{Binding IsConsumable}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Certification" Binding="{Binding RequiresCertification}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Calibration" Binding="{Binding RequiresCalibration}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Pending Items Tab (Unregistered Items from Shipments) -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Pending Items"/>
                        <Border x:Name="PendingBadge" Background="#FF6B6B" CornerRadius="10" Padding="6,2" Margin="8,0,0,0"
                                Visibility="{Binding HasPendingItems, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding PendingItemCount}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Info Banner -->
                    <Border Grid.Row="0" Background="{DynamicResource WarningBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                            Visibility="{Binding HasPendingItems, Converter={StaticResource BoolToVisibility}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <iconPacks:PackIconMaterial Kind="PackageVariant" Width="24" Height="24"
                                                        Foreground="{DynamicResource WarningTextBrush}"
                                                        VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Items Awaiting Review" FontWeight="SemiBold"
                                          Foreground="{DynamicResource WarningTextBrush}"/>
                                <TextBlock Foreground="{DynamicResource WarningTextBrush}" TextWrapping="Wrap">
                                    These items were added during shipment verification but are not in the inventory system.
                                    Review each item to convert to equipment, keep as consumable, or reject.
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Filter Toolbar -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0" x:Name="PendingItemFilter" Width="200"
                                  SelectedIndex="0" SelectionChanged="PendingItemFilter_Changed">
                            <ComboBoxItem Content="Pending Review"/>
                            <ComboBoxItem Content="All Items"/>
                            <ComboBoxItem Content="Converted to Equipment"/>
                            <ComboBoxItem Content="Kept as Consumable"/>
                            <ComboBoxItem Content="Rejected"/>
                        </ComboBox>
                        
                        <Button Grid.Column="2" Style="{DynamicResource SecondaryButton}" 
                                Click="RefreshPendingItems_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <!-- Pending Items List -->
                    <Border Grid.Row="2" Style="{DynamicResource CardBorder}" Padding="0">
                        <Grid>
                            <DataGrid x:Name="PendingItemsGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                      CanUserSortColumns="True" SelectionMode="Single"
                                      ItemsSource="{Binding UnregisteredItems}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="130"/>
                                    <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}" Width="120"/>
                                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="120"/>
                                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                                    <DataGridTextColumn Header="From Manifest" Binding="{Binding SourceManifestNumber}" Width="140"/>
                                    <DataGridTextColumn Header="Added" Binding="{Binding CreatedDate, StringFormat='MMM dd, yyyy'}" Width="100"/>
                                    <DataGridTemplateColumn Header="Status" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Status, Converter={StaticResource UnregisteredItemStatusToColor}}"
                                                        CornerRadius="4" Padding="8,4">
                                                    <TextBlock Text="{Binding StatusDisplayName}" FontSize="12"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="220">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" 
                                                           Visibility="{Binding IsPendingReview, Converter={StaticResource BoolToVisibility}}">
                                                    <Button Content="â†’ Equipment" Style="{DynamicResource SmallSuccessButton}"
                                                            Click="ConvertToEquipment_Click" Tag="{Binding}"
                                                            ToolTip="Convert to tracked equipment" Margin="0,0,5,0"/>
                                                    <Button Content="Consumable" Style="{DynamicResource SmallSecondaryButton}"
                                                            Click="KeepAsConsumable_Click" Tag="{Binding}"
                                                            ToolTip="Mark as consumable (not tracked)" Margin="0,0,5,0"/>
                                                    <Button Content="Reject" Style="{DynamicResource SmallDangerButton}"
                                                            Click="RejectItem_Click" Tag="{Binding}"
                                                            ToolTip="Reject/remove item"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Empty State -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding HasNoPendingItems, Converter={StaticResource BoolToVisibility}}">
                                <iconPacks:PackIconMaterial Kind="CheckCircleOutline" Width="64" Height="64"
                                                           Foreground="{DynamicResource SuccessBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="No Pending Items" FontSize="18" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" Margin="0,16,0,8"/>
                                <TextBlock Text="All unregistered items have been processed" 
                                          Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
