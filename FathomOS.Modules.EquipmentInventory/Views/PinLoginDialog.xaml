<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.PinLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="PIN Login"
        Height="520" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowTitleBar="False"
        ShowCloseButton="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- PIN Button Style -->
        <Style x:Key="PinButton" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#20FFFFFF" CornerRadius="35">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource PinButton}">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="20" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="40" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1B2A" Offset="0"/>
                <GradientStop Color="#1B263B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <!-- Close Button -->
            <Button x:Name="CloseButton" Click="CloseButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,15,15,0" Width="32" Height="32"
                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" CornerRadius="16">
                            <iconPacks:PackIconMaterial Kind="Close" Width="12" Height="12" 
                                                        Foreground="#60FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <StackPanel VerticalAlignment="Center" Margin="30">
                
                <!-- Title -->
                <TextBlock Text="Enter PIN" FontSize="24" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <!-- PIN Dots -->
                <StackPanel x:Name="DotsPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Ellipse x:Name="Dot1" Width="18" Height="18" Fill="#30FFFFFF" Margin="8,0"/>
                    <Ellipse x:Name="Dot2" Width="18" Height="18" Fill="#30FFFFFF" Margin="8,0"/>
                    <Ellipse x:Name="Dot3" Width="18" Height="18" Fill="#30FFFFFF" Margin="8,0"/>
                    <Ellipse x:Name="Dot4" Width="18" Height="18" Fill="#30FFFFFF" Margin="8,0"/>
                </StackPanel>
                
                <!-- Error Message -->
                <TextBlock x:Name="ErrorText" Text="" Foreground="#FF6B6B" FontSize="13" 
                           HorizontalAlignment="Center" Margin="0,0,0,15" Visibility="Collapsed"/>
                
                <!-- Number Pad -->
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Content="1" Grid.Row="0" Grid.Column="0" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="2" Grid.Row="0" Grid.Column="1" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="3" Grid.Row="0" Grid.Column="2" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    
                    <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    
                    <Button Content="7" Grid.Row="2" Grid.Column="0" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="8" Grid.Row="2" Grid.Column="1" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Content="9" Grid.Row="2" Grid.Column="2" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    
                    <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource ActionButton}" Click="CancelButton_Click">
                        <iconPacks:PackIconMaterial Kind="Close" Width="20" Height="20" Foreground="#FF6B6B"/>
                    </Button>
                    <Button Content="0" Grid.Row="3" Grid.Column="1" Style="{StaticResource PinButton}" Click="NumberButton_Click"/>
                    <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ActionButton}" Click="BackspaceButton_Click">
                        <iconPacks:PackIconMaterial Kind="BackspaceOutline" Width="22" Height="22" Foreground="White"/>
                    </Button>
                </Grid>
                
            </StackPanel>
            
            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Visibility="Collapsed" Background="#E0000000" CornerRadius="20">
                <mah:ProgressRing IsActive="True" Width="40" Height="40" Foreground="#00D4AA"/>
            </Border>
        </Grid>
    </Border>
</mah:MetroWindow>
