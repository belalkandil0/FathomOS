<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,0,0,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Welcome Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="{Binding WelcomeMessage}" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentDate}" 
                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
                </StackPanel>
                <Button Grid.Column="1" Style="{DynamicResource SecondaryButton}" 
                        Command="{Binding RefreshCommand}" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <!-- Summary Stats Row -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Equipment -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,15,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Total Equipment" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="13" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalEquipment}" FontSize="36" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="#203FB950" CornerRadius="4" Padding="6,3" Margin="0,0,8,0">
                                    <TextBlock Text="{Binding AvailableCount, StringFormat='{}{0} available'}" 
                                               Foreground="{DynamicResource SuccessBrush}" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Width="56" Height="56" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00D4AA" Offset="0"/>
                                    <GradientStop Color="#00B4D8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <iconPacks:PackIconMaterial Kind="PackageVariantClosed" Width="26" Height="26" 
                                                        Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Active Manifests -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,15,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Active Manifests" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="13" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding ActiveManifests}" FontSize="36" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="#2058A6FF" CornerRadius="4" Padding="6,3">
                                    <TextBlock Text="{Binding InTransitCount, StringFormat='{}{0} in transit'}" 
                                               Foreground="{DynamicResource InfoBrush}" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Width="56" Height="56" CornerRadius="12" Background="#1558A6FF">
                            <iconPacks:PackIconMaterial Kind="TruckDeliveryOutline" Width="26" Height="26" 
                                                        Foreground="{DynamicResource InfoBrush}" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Certifications Alert -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="0,0,15,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Cert. Alerts" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="13" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding CertAlerts}" FontSize="36" FontWeight="Bold"
                                       Foreground="{DynamicResource WarningBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="#20D29922" CornerRadius="4" Padding="6,3">
                                    <TextBlock Text="{Binding ExpiringSoonCount, StringFormat='{}{0} expiring soon'}" 
                                               Foreground="{DynamicResource WarningBrush}" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Width="56" Height="56" CornerRadius="12" Background="#15D29922">
                            <iconPacks:PackIconMaterial Kind="AlertCircleOutline" Width="26" Height="26" 
                                                        Foreground="{DynamicResource WarningBrush}" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Locations -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Locations" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       FontSize="13" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalLocations}" FontSize="36" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="#209E9E9E" CornerRadius="4" Padding="6,3">
                                    <TextBlock Text="{Binding VesselsCount, StringFormat='{}{0} vessels'}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Width="56" Height="56" CornerRadius="12" Background="#159E9E9E">
                            <iconPacks:PackIconMaterial Kind="MapMarkerOutline" Width="26" Height="26" 
                                                        Foreground="{DynamicResource TextSecondaryBrush}" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Quick Actions -->
            <Border Grid.Row="2" Style="{StaticResource StatCard}" Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="Quick Actions" Style="{DynamicResource HeadingMedium}" Margin="0,0,0,20"/>
                    <WrapPanel>
                        <Button Style="{DynamicResource PrimaryButton}" Margin="0,0,15,10"
                                Command="{Binding NewEquipmentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Add Equipment"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,15,10"
                                Command="{Binding NewOutwardManifestCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="TruckDelivery" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Ship Out"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,15,10"
                                Command="{Binding VerifyShipmentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="QrcodeScan" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Verify Shipment"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,15,10"
                                Command="{Binding NewInwardManifestCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="TruckCheck" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Receive"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource SecondaryButton}" Margin="0,0,15,10"
                                Command="{Binding NewDefectReportCommand}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AlertCircleOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Report Defect"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>
            
            <!-- Bottom Row: Recent Activity & Alerts -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                
                <!-- Recent Activity -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="Recent Activity" Style="{DynamicResource HeadingMedium}"/>
                            <Button Content="View All" Style="{DynamicResource SecondaryButton}" 
                                    HorizontalAlignment="Right" Margin="20,0,0,0" Padding="12,6"/>
                        </StackPanel>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding RecentActivity}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="0,12" BorderThickness="0,0,0,1" 
                                            BorderBrush="{DynamicResource BorderBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Width="36" Height="36" CornerRadius="8" 
                                                    Background="{DynamicResource SurfaceBrush}">
                                                <iconPacks:PackIconMaterial Kind="{Binding Icon}" Width="16" Height="16"
                                                                            Foreground="{DynamicResource AccentBrush}"
                                                                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" FontSize="12"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Alerts Panel -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="Alerts" Style="{DynamicResource HeadingMedium}"/>
                            <Border Background="#20F85149" CornerRadius="10" Padding="8,3" Margin="12,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding AlertCount}" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{DynamicResource ErrorBrush}"/>
                            </Border>
                        </StackPanel>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Alerts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" Margin="0,0,0,10" CornerRadius="8"
                                            Background="{DynamicResource SurfaceBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <iconPacks:PackIconMaterial Kind="{Binding Icon}" Width="18" Height="18"
                                                                        Foreground="{Binding Color}" Margin="0,0,12,0"
                                                                        VerticalAlignment="Top"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13"/>
                                                <TextBlock Text="{Binding Message}" FontSize="12" TextWrapping="Wrap"
                                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
