<mah:MetroWindow x:Class="FathomOS.Modules.EquipmentInventory.Views.ReportBuilderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters"
        Title="Report Builder - Fathom OS"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="FileChart" Width="28" Height="28" 
                                                 VerticalAlignment="Center" Margin="0,0,12,0"
                                                 Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="Report Builder" FontSize="22" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding PresetTemplates}" SelectedItem="{Binding SelectedPreset}"
                              DisplayMemberPath="TemplateName" Width="200" Margin="0,0,10,0">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBox">
                                <Setter Property="mah:TextBoxHelper.Watermark" Value="Load Preset..."/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                    <Button Command="{Binding SaveTemplateCommand}" Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ContentSave" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Save Template"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Configuration -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,15,0">
                    <!-- Report Title -->
                    <TextBlock Text="Report Title" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding ReportTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                    
                    <!-- Available Fields -->
                    <TextBlock Text="Available Fields" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Double-click or drag to add" FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                    
                    <Border Style="{DynamicResource CardBorder}" Padding="0" MaxHeight="250">
                        <TreeView ItemsSource="{Binding FieldsByCategory}" Background="Transparent" BorderThickness="0">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Fields}">
                                    <TextBlock Text="{Binding Category}" FontWeight="SemiBold"/>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" Cursor="Hand"
                                                       ToolTip="Double-click to add">
                                                <TextBlock.InputBindings>
                                                    <MouseBinding Gesture="LeftDoubleClick" 
                                                                  Command="{Binding DataContext.AddFieldCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                                  CommandParameter="{Binding}"/>
                                                </TextBlock.InputBindings>
                                            </TextBlock>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Border>
                    
                    <!-- Filters -->
                    <TextBlock Text="Filters" FontWeight="SemiBold" Margin="0,20,0,10"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <TextBlock Text="Category" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Location" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Locations}" SelectedItem="{Binding SelectedLocation}"
                              DisplayMemberPath="Name" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Status" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Statuses}" SelectedItem="{Binding SelectedStatus}" Margin="0,0,0,10"/>
                    
                    <CheckBox Content="Certification Expiring (30 days)" IsChecked="{Binding FilterCertExpiring}" Margin="0,0,0,5"/>
                    <CheckBox Content="Calibration Overdue" IsChecked="{Binding FilterCalOverdue}" Margin="0,0,0,15"/>
                    
                    <!-- Options -->
                    <TextBlock Text="Options" FontWeight="SemiBold" Margin="0,10,0,10"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Orientation:" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <RadioButton Content="Portrait" IsChecked="{Binding IsPortrait}" Margin="0,0,10,0"/>
                        <RadioButton Content="Landscape" IsChecked="{Binding IsLandscape}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Right Panel - Selected Columns & Preview -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Selected Columns -->
                <Border Grid.Row="0" Style="{DynamicResource CardBorder}" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Selected Columns" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding SelectedColumns.Count, StringFormat=' ({0})'}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedColumns}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="3" 
                                            Padding="8,4" Margin="0,0,8,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                            <Button Style="{DynamicResource SecondaryButton}" Padding="2" Margin="6,0,0,0"
                                                    Command="{Binding DataContext.RemoveColumnCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}">
                                                <iconPacks:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Preview -->
                <Border Grid.Row="1" Style="{DynamicResource CardBorder}" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Preview" FontWeight="SemiBold" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Button Content="Refresh Preview" Command="{Binding RefreshPreviewCommand}"
                                    Style="{DynamicResource SecondaryButton}" Margin="15,0,0,0" Padding="10,4"/>
                            <TextBlock Text="{Binding PreviewRowCount, StringFormat='({0} rows)'}" 
                                       Margin="10,0,0,0" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewData}" 
                                  AutoGenerateColumns="True" IsReadOnly="True"
                                  Background="{DynamicResource CardBrush}"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal" FontSize="11"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ExportExcelCommand}" Style="{DynamicResource PrimaryButton}" 
                            Margin="0,0,10,0" MinWidth="140">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FileExcel" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Export Excel"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportPdfCommand}" Style="{DynamicResource SecondaryButton}" MinWidth="140">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FilePdfBox" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Export PDF"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
