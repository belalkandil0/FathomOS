<UserControl x:Class="FathomOS.Modules.EquipmentInventory.Views.NotificationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.EquipmentInventory.Converters">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:NotificationTypeToColorConverter x:Key="NotificationTypeToColor"/>
        <converters:NotificationTypeToIconConverter x:Key="NotificationTypeToIcon"/>
        
        <!-- Notification Card Style -->
        <Style x:Key="NotificationCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Notifications" Style="{DynamicResource HeadingLarge}" Margin="0,0,0,5"/>
                <TextBlock Text="Review and resolve issues reported during shipment verification" 
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnResolveAll" Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"
                        Click="ResolveAll_Click" ToolTip="Mark all as resolved">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="CheckAll" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Resolve All"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnRefresh" Style="{DynamicResource SecondaryButton}"
                        Click="Refresh_Click" ToolTip="Refresh list">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Pending -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="AlertCircleOutline" Width="24" Height="24" 
                                                    Foreground="{DynamicResource WarningBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="PendingCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource WarningBrush}"/>
                    <TextBlock Text="Pending" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Missing Items -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="PackageVariantRemove" Width="24" Height="24" 
                                                    Foreground="{DynamicResource ErrorBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="MissingCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource ErrorBrush}"/>
                    <TextBlock Text="Missing" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Damaged -->
            <Border Grid.Column="2" Style="{DynamicResource CardBorder}" Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="PackageVariantClosedCheck" Width="24" Height="24" 
                                                    Foreground="#FFC107"/>
                    </StackPanel>
                    <TextBlock x:Name="DamagedCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="#FFC107"/>
                    <TextBlock Text="Damaged" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
            
            <!-- Resolved -->
            <Border Grid.Column="3" Style="{DynamicResource CardBorder}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <iconPacks:PackIconMaterial Kind="CheckCircleOutline" Width="24" Height="24" 
                                                    Foreground="{DynamicResource SuccessBrush}"/>
                    </StackPanel>
                    <TextBlock x:Name="ResolvedCount" Text="0" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource SuccessBrush}"/>
                    <TextBlock Text="Resolved" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>
            
            <!-- Notifications List -->
            <Border Grid.Column="0" Style="{DynamicResource CardBorder}" Padding="0" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Filters -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="SearchBox" Grid.Column="0" 
                                     mah:TextBoxHelper.Watermark="Search notifications..."
                                     mah:TextBoxHelper.ClearTextButton="True"
                                     TextChanged="SearchBox_TextChanged" Margin="0,0,15,0"/>
                            
                            <ComboBox x:Name="TypeFilter" Grid.Column="1" Width="140" Margin="0,0,10,0"
                                      SelectionChanged="TypeFilter_SelectionChanged">
                                <ComboBoxItem Content="All Types" IsSelected="True"/>
                                <ComboBoxItem Content="Missing"/>
                                <ComboBoxItem Content="Damaged"/>
                                <ComboBoxItem Content="Extra"/>
                                <ComboBoxItem Content="Wrong"/>
                                <ComboBoxItem Content="Discrepancy"/>
                            </ComboBox>
                            
                            <ComboBox x:Name="StatusFilter" Grid.Column="2" Width="120"
                                      SelectionChanged="StatusFilter_SelectionChanged">
                                <ComboBoxItem Content="Pending" IsSelected="True"/>
                                <ComboBoxItem Content="Resolved"/>
                                <ComboBoxItem Content="All"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Notifications List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="NotificationsList" Margin="15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource NotificationCard}" 
                                            Tag="{Binding}" MouseLeftButtonUp="NotificationCard_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Type Icon -->
                                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8"
                                                    Background="{Binding NotificationType, Converter={StaticResource NotificationTypeToColor}}"
                                                    Margin="0,0,15,0">
                                                <iconPacks:PackIconMaterial 
                                                    Kind="{Binding NotificationType, Converter={StaticResource NotificationTypeToIcon}}"
                                                    Width="20" Height="20" Foreground="White"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Content -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Message}" FontWeight="SemiBold" FontSize="14"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Details}" FontSize="12" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis" Margin="0,4,0,0"
                                                           Visibility="{Binding Details, Converter={StaticResource NullToVisibility}}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <iconPacks:PackIconMaterial Kind="TruckDeliveryOutline" Width="12" Height="12" 
                                                                                Foreground="{DynamicResource TextSecondaryBrush}" 
                                                                                VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Manifest.ManifestNumber, FallbackValue='Unknown'}" 
                                                               FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Status / Time -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <Border CornerRadius="4" Padding="8,4"
                                                        Background="#4CAF50"
                                                        Visibility="{Binding IsResolved, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="Resolved" FontSize="10" Foreground="White"/>
                                                </Border>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, HH:mm}'}" 
                                                           FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"
                                                           HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <Border x:Name="EmptyState" Grid.Row="1" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="BellOffOutline" Width="48" Height="48" 
                                                        Foreground="{DynamicResource TextSecondaryBrush}" 
                                                        HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="No notifications" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="All issues have been resolved"
                                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" Style="{DynamicResource CardBorder}" Padding="0">
                <Grid>
                    <!-- No Selection State -->
                    <Border x:Name="NoSelectionState">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="CursorDefaultClickOutline" Width="40" Height="40" 
                                                        Foreground="{DynamicResource TextSecondaryBrush}" 
                                                        HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Select a notification" FontSize="16"
                                       Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="to view details and resolve"
                                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Selected Notification Details -->
                    <Grid x:Name="SelectedNotificationDetails" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border x:Name="DetailTypeBadge" CornerRadius="4" Padding="10,4" Margin="0,0,10,0">
                                        <TextBlock x:Name="DetailType" Text="Type" FontSize="11" Foreground="White"/>
                                    </Border>
                                    <Border x:Name="DetailStatusBadge" CornerRadius="4" Padding="10,4"
                                            Visibility="{Binding IsResolved, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock x:Name="DetailStatus" Text="Resolved" FontSize="11" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock x:Name="DetailMessage" Text="Notification Message" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Details -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                            <StackPanel>
                                <!-- Details Text -->
                                <StackPanel x:Name="DetailsPanel" Margin="0,0,0,20">
                                    <TextBlock Text="DETAILS" FontSize="11" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="12">
                                        <TextBlock x:Name="DetailDetails" TextWrapping="Wrap" FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Source -->
                                <TextBlock Text="SOURCE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Manifest" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailManifest" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Location" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailLocation" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Equipment (if linked) -->
                                <StackPanel x:Name="EquipmentPanel" Visibility="Collapsed" Margin="0,0,0,20">
                                    <TextBlock Text="RELATED EQUIPMENT" FontSize="11" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="12">
                                        <StackPanel>
                                            <TextBlock x:Name="DetailEquipmentName" FontWeight="SemiBold" FontSize="13"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock x:Name="DetailEquipmentAsset" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Dates -->
                                <TextBlock Text="TIMELINE" FontSize="11" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Created" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailCreatedAt" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Resolved" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock x:Name="DetailResolvedAt" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Resolution Notes (if resolved) -->
                                <StackPanel x:Name="ResolutionPanel" Visibility="Collapsed">
                                    <TextBlock Text="RESOLUTION" FontSize="11" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="12">
                                        <TextBlock x:Name="DetailResolutionNotes" TextWrapping="Wrap" FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Actions -->
                        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15">
                            <StackPanel x:Name="ActionButtons">
                                <!-- Populated dynamically -->
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
