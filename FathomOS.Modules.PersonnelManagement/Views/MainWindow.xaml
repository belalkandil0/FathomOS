<mah:MetroWindow x:Class="FathomOS.Modules.PersonnelManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:FathomOS.Modules.PersonnelManagement.Views"
        xmlns:converters="clr-namespace:FathomOS.Modules.PersonnelManagement.Converters"
        mc:Ignorable="d"
        Title="Personnel Management"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <mah:MetroWindow.Resources>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:ExpiryStatusToColorConverter x:Key="ExpiryStatusToColorConverter"/>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Personnel Management" FontSize="28" FontWeight="Light"/>
            <TextBlock Text="Manage survey crew, certifications, training records, and competency tracking"
                       FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" x:Name="MainTabControl"
                    SelectedIndex="{Binding SelectedTabIndex}">

            <!-- Crew Roster Tab -->
            <TabItem Header="Crew Roster">
                <local:PersonnelListView x:Name="PersonnelListViewControl"/>
            </TabItem>

            <!-- Certifications Tab -->
            <TabItem Header="Certifications">
                <local:CertificationListView x:Name="CertificationListViewControl"/>
            </TabItem>

            <!-- Vessel Assignments Tab -->
            <TabItem Header="Assignments">
                <local:VesselAssignmentView x:Name="VesselAssignmentViewControl"/>
            </TabItem>

            <!-- Timesheets Tab -->
            <TabItem Header="Timesheets">
                <local:TimesheetView x:Name="TimesheetViewControl"/>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ProgressBar x:Name="BusyIndicator" IsIndeterminate="True" Width="100" Height="3"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="0,0,10,0"/>
                <TextBlock x:Name="BusyText" Text="{Binding BusyMessage}"
                           Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                           Foreground="Gray"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ImportButton" Content="Import" Margin="0,0,10,0" Padding="20,8"
                        Command="{Binding ImportCommand}"/>
                <Button x:Name="ExportButton" Content="Export" Margin="0,0,10,0" Padding="20,8"
                        Command="{Binding ExportCommand}"/>
                <Button x:Name="ReportButton" Content="Generate Report" Padding="20,8"
                        Command="{Binding GenerateReportCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
