<mah:MetroWindow x:Class="FathomOS.Modules.PersonnelManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Personnel Management"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Personnel Management" FontSize="28" FontWeight="Light"/>
            <TextBlock Text="Manage survey crew, certifications, and training records"
                       FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <TabItem Header="Crew Roster">
                <Grid Margin="10">
                    <TextBlock Text="Crew roster management will be implemented here"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="Gray"/>
                </Grid>
            </TabItem>
            <TabItem Header="Certifications">
                <Grid Margin="10">
                    <TextBlock Text="Certification tracking will be implemented here"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="Gray"/>
                </Grid>
            </TabItem>
            <TabItem Header="Training Records">
                <Grid Margin="10">
                    <TextBlock Text="Training record management will be implemented here"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="Gray"/>
                </Grid>
            </TabItem>
            <TabItem Header="Competency Matrix">
                <Grid Margin="10">
                    <TextBlock Text="Competency matrix will be implemented here"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Import" Margin="0,0,10,0" Padding="20,8"/>
            <Button Content="Export" Margin="0,0,10,0" Padding="20,8"/>
            <Button Content="Generate Report" Padding="20,8"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
