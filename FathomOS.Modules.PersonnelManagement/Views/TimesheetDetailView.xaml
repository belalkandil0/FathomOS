<UserControl x:Class="FathomOS.Modules.PersonnelManagement.Views.TimesheetDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:FathomOS.Modules.PersonnelManagement.Converters"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="920">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="HourColumnStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{Binding HeaderText}" FontSize="24" FontWeight="Light"/>
            <ProgressBar IsIndeterminate="True" Height="2" Margin="0,10,0,0"
                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Timesheet Header Info -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Personnel" Style="{StaticResource FieldLabelStyle}"/>
                <ComboBox ItemsSource="{Binding PersonnelList}"
                          SelectedItem="{Binding SelectedPersonnel}"
                          DisplayMemberPath="FullName"
                          Padding="10,8"
                          IsEnabled="{Binding IsNewRecord}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0">
                <TextBlock Text="Period Start" Style="{StaticResource FieldLabelStyle}"/>
                <DatePicker SelectedDate="{Binding PeriodStartDate}"
                            Padding="8"
                            IsEnabled="{Binding IsNewRecord}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5,0">
                <TextBlock Text="Period End" Style="{StaticResource FieldLabelStyle}"/>
                <DatePicker SelectedDate="{Binding PeriodEndDate}"
                            Padding="8"
                            IsEnabled="{Binding IsNewRecord}"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="10,0,0,0">
                <TextBlock Text="Status" Style="{StaticResource FieldLabelStyle}"/>
                <Border Background="{Binding Status, Converter={StaticResource BoolToVisibilityConverter}}"
                        CornerRadius="3" Padding="10,8" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding StatusDisplay}" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Vessel/Project Info -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Vessel" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox Text="{Binding VesselName, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10,8"
                         IsEnabled="{Binding CanEdit}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0">
                <TextBlock Text="Project" Style="{StaticResource FieldLabelStyle}"/>
                <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10,8"
                         IsEnabled="{Binding CanEdit}"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Generate Entries"
                    Padding="15,8"
                    VerticalAlignment="Bottom"
                    Command="{Binding GenerateEntriesCommand}"
                    Visibility="{Binding IsNewRecord, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <!-- Timesheet Entries Grid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Entries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F8F8F8"
                  IsReadOnly="{Binding CanEdit, Converter={StaticResource InverseBoolToVisibilityConverter}}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding EntryDate, StringFormat='{}{0:ddd dd MMM}'}"
                                    Width="100"
                                    IsReadOnly="True"/>

                <DataGridComboBoxColumn Header="Type"
                                        SelectedItemBinding="{Binding EntryType}"
                                        Width="100"/>

                <DataGridTextColumn Header="Regular"
                                    Binding="{Binding RegularHours, StringFormat='{}{0:F1}'}"
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="OT"
                                    Binding="{Binding OvertimeHours, StringFormat='{}{0:F1}'}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Double"
                                    Binding="{Binding DoubleTimeHours, StringFormat='{}{0:F1}'}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Night"
                                    Binding="{Binding NightShiftHours, StringFormat='{}{0:F1}'}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Standby"
                                    Binding="{Binding StandbyHours, StringFormat='{}{0:F1}'}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Travel"
                                    Binding="{Binding TravelHours, StringFormat='{}{0:F1}'}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource HourColumnStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridCheckBoxColumn Header="Rest"
                                        Binding="{Binding IsRestDay}"
                                        Width="50"/>

                <DataGridCheckBoxColumn Header="Leave"
                                        Binding="{Binding IsLeave}"
                                        Width="50"/>

                <DataGridTextColumn Header="Notes"
                                    Binding="{Binding Notes}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Hour Totals Summary -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Totals -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Regular" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalRegularHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="Overtime" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalOvertimeHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,20,0">
                        <TextBlock Text="Double Time" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalDoubleTimeHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="0,0,20,0">
                        <TextBlock Text="Night" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalNightShiftHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="0,0,20,0">
                        <TextBlock Text="Standby" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalStandbyHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="5" Margin="0,0,20,0">
                        <TextBlock Text="Travel" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalTravelHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Light"/>
                    </StackPanel>

                    <StackPanel Grid.Column="6" Margin="0,0,20,0">
                        <TextBlock Text="Total Hours" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding TotalHours, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2"/>
                    </StackPanel>

                    <StackPanel Grid.Column="7">
                        <TextBlock Text="Leave/Sick Days" FontSize="11" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalLeaveDays, StringFormat='{}{0:F0}'}" FontSize="18" FontWeight="Light"/>
                            <TextBlock Text=" / " FontSize="18" FontWeight="Light" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalSickDays, StringFormat='{}{0:F0}'}" FontSize="18" FontWeight="Light"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer Buttons -->
        <Grid Grid.Row="5" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Comments -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Comments:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding SubmissionComments, UpdateSourceTrigger=PropertyChanged}"
                         Width="300" Padding="10,8"
                         IsEnabled="{Binding CanEdit}"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Submit for Approval"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Background="#FF9800"
                        Foreground="White"
                        Command="{Binding SubmitCommand}"
                        Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Content="Save"
                        Padding="25,10"
                        Margin="0,0,10,0"
                        Command="{Binding SaveCommand}"
                        IsDefault="True"/>

                <Button Content="Cancel"
                        Padding="25,10"
                        Command="{Binding CancelCommand}"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
