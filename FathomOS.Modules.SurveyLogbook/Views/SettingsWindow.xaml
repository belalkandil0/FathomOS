<mah:MetroWindow x:Class="FathomOS.Modules.SurveyLogbook.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:converters="clr-namespace:FathomOS.Modules.SurveyLogbook.Converters"
        mc:Ignorable="d"
        Title="Settings - Survey Electronic Logbook"
        Height="900" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentBrush}"
        TitleCharacterCasing="Normal">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:ConnectionStateToColorConverter x:Key="ConnectionStateToColor"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- ============================================================ -->
                <!-- NAVIPAC TCP/UDP CONNECTION -->
                <!-- ============================================================ -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <iconPacks:PackIconMaterial Kind="Lan" Width="20" Height="20" 
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="NaviPac Network Connection" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Enable Connection -->
                        <CheckBox Grid.Row="1" 
                                  Content="Enable NaviPac Network Connection"
                                  IsChecked="{Binding EnableNaviPacConnection}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>

                        <!-- Protocol Selection -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,15">
                            <TextBlock Text="Protocol" Style="{DynamicResource FieldLabel}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <RadioButton Content="TCP (Connect to NaviPac)" 
                                             IsChecked="{Binding IsTcpProtocol}"
                                             GroupName="Protocol"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             IsEnabled="{Binding EnableNaviPacConnection}"
                                             Margin="0,0,20,0"/>
                                <RadioButton Content="UDP (Listen for NaviPac)" 
                                             IsChecked="{Binding IsUdpProtocol}"
                                             GroupName="Protocol"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             IsEnabled="{Binding EnableNaviPacConnection}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ProtocolDescription}" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- IP Address and Port -->
                        <Grid Grid.Row="3" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <!-- TCP Mode: Show IP Address -->
                                <StackPanel Visibility="{Binding IsTcpProtocol, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="IP Address (NaviPac Server)" Style="{DynamicResource FieldLabel}"/>
                                    <TextBox Text="{Binding NaviPacIpAddress, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource ModernTextBox}"
                                             IsEnabled="{Binding EnableNaviPacConnection}"/>
                                </StackPanel>
                                <!-- UDP Mode: Show info text -->
                                <StackPanel Visibility="{Binding IsUdpProtocol, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="Local Interface" Style="{DynamicResource FieldLabel}"/>
                                    <TextBlock Text="UDP listens on all interfaces (0.0.0.0)" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Port" Style="{DynamicResource FieldLabel}"/>
                                <mah:NumericUpDown Value="{Binding NaviPacPort}"
                                                   Minimum="1" Maximum="65535"
                                                   IsEnabled="{Binding EnableNaviPacConnection}"
                                                   StringFormat="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Reconnect Settings -->
                        <Grid Grid.Row="4" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Reconnect Interval (seconds)" Style="{DynamicResource FieldLabel}"/>
                                <mah:NumericUpDown Value="{Binding ReconnectIntervalSeconds}"
                                                   Minimum="5" Maximum="300"
                                                   IsEnabled="{Binding EnableNaviPacConnection}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Connection Timeout (seconds)" Style="{DynamicResource FieldLabel}"/>
                                <mah:NumericUpDown Value="{Binding ConnectionTimeoutSeconds}"
                                                   Minimum="5" Maximum="120"
                                                   IsEnabled="{Binding EnableNaviPacConnection}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Firewall Settings (UDP only) -->
                        <Border Grid.Row="5" 
                                Background="{DynamicResource SurfaceBrush}"
                                CornerRadius="4" Padding="12" Margin="0,0,0,15"
                                Visibility="{Binding IsUdpProtocol, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <iconPacks:PackIconMaterial Kind="ShieldLock" Width="16" Height="16" 
                                                                Foreground="{DynamicResource WarningBrush}"
                                                                Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Windows Firewall" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding FirewallStatus}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding CreateFirewallRuleCommand}"
                                            Style="{DynamicResource SecondaryButton}"
                                            Margin="0,0,10,0"
                                            ToolTip="Create firewall rule (requires Administrator)">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="ShieldPlus" Width="14" Height="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Create Rule"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding CopyFirewallCommandCommand}"
                                            Style="{DynamicResource SecondaryButton}"
                                            ToolTip="Copy netsh command to clipboard">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="ContentCopy" Width="14" Height="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Copy Command"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Connection Test -->
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                    Command="{Binding TestConnectionCommand}"
                                    Style="{DynamicResource SecondaryButton}"
                                    IsEnabled="{Binding EnableNaviPacConnection}"
                                    Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="LanConnect" Width="14" Height="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Test Connection"/>
                                </StackPanel>
                            </Button>

                            <!-- Connection Status -->
                            <Border Grid.Column="1" 
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="4" Padding="10,8">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" 
                                             Fill="{Binding ConnectionTestResult, Converter={StaticResource ConnectionStateToColor}}"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ConnectionTestMessage}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ============================================================ -->
                <!-- NAVIPAC DATA CONFIGURATION -->
                <!-- ============================================================ -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <iconPacks:PackIconMaterial Kind="DatabaseCog" Width="20" Height="20" 
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="NaviPac Data Configuration" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Debug Logging -->
                        <CheckBox Grid.Row="1" 
                                  Content="Enable Debug Logging (logs raw NaviPac data for troubleshooting)"
                                  IsChecked="{Binding EnableDebugLogging}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>

                        <!-- Separator Selection -->
                        <Grid Grid.Row="2" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Data Separator" Style="{DynamicResource FieldLabel}"/>
                                <ComboBox SelectedValue="{Binding NaviPacSeparator}"
                                          SelectedValuePath="Tag"
                                          IsEnabled="{Binding EnableNaviPacConnection}">
                                    <ComboBoxItem Content="Comma (,)" Tag=","/>
                                    <ComboBoxItem Content="Space" Tag=" "/>
                                    <ComboBoxItem Content="Semicolon (;)" Tag=";"/>
                                    <ComboBoxItem Content="Colon (:)" Tag=":"/>
                                    <ComboBoxItem Content="Tab" Tag="&#x09;"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Separator Info" Style="{DynamicResource FieldLabel}"/>
                                <TextBlock Text="Match the separator configured in NaviPac User Defined Output"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11" TextWrapping="Wrap" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Field Mapping Mode -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,15">
                            <TextBlock Text="Field Detection Mode" Style="{DynamicResource FieldLabel}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <RadioButton Content="Auto-Detect (recommended)" 
                                             IsChecked="{Binding AutoDetectFields}"
                                             GroupName="FieldMapping"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             IsEnabled="{Binding EnableNaviPacConnection}"
                                             Margin="0,0,20,0"/>
                                <RadioButton Content="Manual Field Mapping" 
                                             IsChecked="{Binding ManualFieldMapping}"
                                             GroupName="FieldMapping"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             IsEnabled="{Binding EnableNaviPacConnection}"/>
                            </StackPanel>
                            <TextBlock Text="Auto-detect intelligently parses fields based on data patterns. Use Manual Mapping only if auto-detect fails."
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Captured Data Fields -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,15">
                            <TextBlock Text="Data Fields to Capture" Style="{DynamicResource FieldLabel}" Margin="0,0,0,10"/>
                            <Border Background="{DynamicResource SurfaceBrush}" 
                                    CornerRadius="4" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Column 1 -->
                                    <CheckBox Grid.Row="0" Grid.Column="0" Content="Event Number" 
                                              IsChecked="{Binding CaptureEvent}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="1" Grid.Column="0" Content="Date/Time" 
                                              IsChecked="{Binding CaptureDateTime}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="0" Content="Easting" 
                                              IsChecked="{Binding CaptureEasting}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="3" Grid.Column="0" Content="Northing" 
                                              IsChecked="{Binding CaptureNorthing}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="4" Grid.Column="0" Content="Height/Depth" 
                                              IsChecked="{Binding CaptureHeight}" Margin="0,0,0,0"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>

                                    <!-- Column 2 -->
                                    <CheckBox Grid.Row="0" Grid.Column="1" Content="KP (Kilometre Post)" 
                                              IsChecked="{Binding CaptureKP}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="1" Grid.Column="1" Content="DCC (Distance Cross Course)" 
                                              IsChecked="{Binding CaptureDCC}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="1" Content="Latitude" 
                                              IsChecked="{Binding CaptureLatitude}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="3" Grid.Column="1" Content="Longitude" 
                                              IsChecked="{Binding CaptureLongitude}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="4" Grid.Column="1" Content="Gyro/Heading" 
                                              IsChecked="{Binding CaptureGyro}" Margin="0,0,0,0"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>

                                    <!-- Column 3 -->
                                    <CheckBox Grid.Row="0" Grid.Column="2" Content="Roll" 
                                              IsChecked="{Binding CaptureRoll}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="1" Grid.Column="2" Content="Pitch" 
                                              IsChecked="{Binding CapturePitch}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="2" Grid.Column="2" Content="Heave" 
                                              IsChecked="{Binding CaptureHeave}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="3" Grid.Column="2" Content="SMG (Speed)" 
                                              IsChecked="{Binding CaptureSMG}" Margin="0,0,0,8"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox Grid.Row="4" Grid.Column="2" Content="CMG (Course)" 
                                              IsChecked="{Binding CaptureCMG}" Margin="0,0,0,0"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="Select the data fields sent by NaviPac User Defined Output that you want to log."
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11" Margin="0,8,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Select All / Clear All buttons -->
                        <StackPanel Grid.Row="5" Orientation="Horizontal">
                            <Button Command="{Binding SelectAllFieldsCommand}"
                                    Style="{DynamicResource SecondaryButton}"
                                    Margin="0,0,10,0" Padding="15,6">
                                <TextBlock Text="Select All Fields"/>
                            </Button>
                            <Button Command="{Binding ClearAllFieldsCommand}"
                                    Style="{DynamicResource SecondaryButton}"
                                    Padding="15,6">
                                <TextBlock Text="Clear All"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ============================================================ -->
                <!-- FILE MONITORING -->
                <!-- ============================================================ -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <iconPacks:PackIconMaterial Kind="FolderEye" Width="20" Height="20" 
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="File Monitoring" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Enable File Monitoring -->
                        <CheckBox Grid.Row="1" 
                                  Content="Enable File Monitoring"
                                  IsChecked="{Binding EnableFileMonitoring}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>

                        <!-- SLOG Files Path -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,15">
                            <TextBlock Text="SLOG Files Directory" Style="{DynamicResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding SlogFilesPath, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"
                                         IsEnabled="{Binding EnableFileMonitoring}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding BrowseSlogPathCommand}"
                                        Style="{DynamicResource IconButton}"
                                        IsEnabled="{Binding EnableFileMonitoring}"
                                        Margin="5,0,0,0" Width="36" Height="36">
                                    <iconPacks:PackIconMaterial Kind="FolderOpen" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- NPC Files Path -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,15">
                            <TextBlock Text="NPC Calibration Files Directory" Style="{DynamicResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding NpcFilesPath, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"
                                         IsEnabled="{Binding EnableFileMonitoring}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding BrowseNpcPathCommand}"
                                        Style="{DynamicResource IconButton}"
                                        IsEnabled="{Binding EnableFileMonitoring}"
                                        Margin="5,0,0,0" Width="36" Height="36">
                                    <iconPacks:PackIconMaterial Kind="FolderOpen" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- DVR Folder Path -->
                        <StackPanel Grid.Row="4">
                            <TextBlock Text="DVR Recordings Directory" Style="{DynamicResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding DvrFolderPath, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"
                                         IsEnabled="{Binding EnableFileMonitoring}"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding BrowseDvrPathCommand}"
                                        Style="{DynamicResource IconButton}"
                                        IsEnabled="{Binding EnableFileMonitoring}"
                                        Margin="5,0,0,0" Width="36" Height="36">
                                    <iconPacks:PackIconMaterial Kind="FolderOpen" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ============================================================ -->
                <!-- AUTO-SAVE SETTINGS -->
                <!-- ============================================================ -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <iconPacks:PackIconMaterial Kind="ContentSaveSettings" Width="20" Height="20" 
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Auto-Save Settings" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <!-- Enable Auto-Save -->
                        <CheckBox Grid.Row="1" 
                                  Content="Enable Auto-Save"
                                  IsChecked="{Binding EnableAutoSave}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>

                        <!-- Auto-Save Interval -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Auto-Save Interval (minutes)" Style="{DynamicResource FieldLabel}"/>
                                <mah:NumericUpDown Value="{Binding AutoSaveIntervalMinutes}"
                                                   Minimum="1" Maximum="60"
                                                   IsEnabled="{Binding EnableAutoSave}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Default Save Directory" Style="{DynamicResource FieldLabel}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding DefaultSaveDirectory, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource ModernTextBox}"
                                             IsEnabled="{Binding EnableAutoSave}"/>
                                    <Button Grid.Column="1" 
                                            Command="{Binding BrowseSavePathCommand}"
                                            Style="{DynamicResource IconButton}"
                                            IsEnabled="{Binding EnableAutoSave}"
                                            Margin="5,0,0,0" Width="36" Height="36">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="16" Height="16"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ============================================================ -->
                <!-- PROJECT DEFAULTS -->
                <!-- ============================================================ -->
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <iconPacks:PackIconMaterial Kind="FileDocumentEdit" Width="20" Height="20" 
                                                        Foreground="{DynamicResource AccentBrush}"
                                                        Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Project Defaults" 
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Default Client" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding DefaultClient, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Default Vessel" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding DefaultVessel, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Default Project" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding DefaultProject, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ============================================================ -->
        <!-- ACTION BUTTONS -->
        <!-- ============================================================ -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Reset to Defaults -->
                <Button Grid.Column="0" 
                        Command="{Binding ResetToDefaultsCommand}"
                        Style="{DynamicResource SecondaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Restore" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Reset to Defaults"/>
                    </StackPanel>
                </Button>

                <!-- Save and Cancel -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding CancelCommand}"
                            Style="{DynamicResource SecondaryButton}"
                            Margin="0,0,10,0"
                            IsCancel="True">
                        <TextBlock Text="Cancel"/>
                    </Button>
                    
                    <Button Command="{Binding SaveCommand}"
                            Style="{DynamicResource PrimaryButton}"
                            IsDefault="True">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ContentSave" Width="14" Height="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
