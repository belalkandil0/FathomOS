<UserControl x:Class="FathomOS.Modules.SurveyLogbook.Views.DprView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:FathomOS.Modules.SurveyLogbook.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="Transparent">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToDefaultConverter x:Key="NullToDefault"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>  <!-- Report List -->
            <ColumnDefinition Width="*"/>     <!-- Report Editor -->
        </Grid.ColumnDefinitions>

        <!-- ============================================================ -->
        <!-- LEFT PANEL: Report List -->
        <!-- ============================================================ -->
        <Border Grid.Column="0" 
                Style="{DynamicResource CardBorder}"
                Margin="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                           Text="DPR Reports" 
                           Style="{DynamicResource SectionHeader}"/>

                <!-- Report List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Reports}"
                         SelectedItem="{Binding SelectedReport}"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="0,10,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" 
                                    Margin="0,2"
                                    CornerRadius="4"
                                    Background="{DynamicResource SurfaceBrush}">
                                <StackPanel>
                                    <TextBlock Text="{Binding ReportDate, StringFormat='dd MMM yyyy'}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Shift}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- New Report Button -->
                <Button Grid.Row="2" 
                        Command="{Binding NewReportCommand}"
                        Style="{DynamicResource PrimaryButton}"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="New Report"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ============================================================ -->
        <!-- RIGHT PANEL: Report Editor -->
        <!-- ============================================================ -->
        <Grid Grid.Column="1">
            <!-- No Report Selected Message -->
            <Border Style="{DynamicResource CardBorder}"
                    Visibility="{Binding HasCurrentReport, Converter={StaticResource InverseBoolToVisibility}}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="40">
                <StackPanel HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="FileDocumentOutline" 
                                                Width="64" Height="64" 
                                                HorizontalAlignment="Center"
                                                Foreground="{DynamicResource TextSecondaryBrush}"
                                                Margin="0,0,0,20"/>
                    <TextBlock Text="No Report Selected" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Click 'New Report' to create a new DPR or select an existing report from the list."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxWidth="300"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Report Editor (visible when report is selected) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding HasCurrentReport, Converter={StaticResource BoolToVisibility}}">
            <StackPanel>
                <!-- Project Information Section -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Project Information" Style="{DynamicResource SectionHeader}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Client -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,15,10">
                                <TextBlock Text="Client" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding Client, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Vessel -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,15,10">
                                <TextBlock Text="Vessel" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding Vessel, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Project Number -->
                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="Project Number" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding ProjectNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Location/Depth -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,15,0">
                                <TextBlock Text="Location / Water Depth" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding LocationDepth, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Report Date -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,15,0">
                                <TextBlock Text="Report Date" Style="{DynamicResource FieldLabel}"/>
                                <DatePicker SelectedDate="{Binding SelectedDate}"
                                            Padding="10,8"/>
                            </StackPanel>

                            <!-- Shift -->
                            <StackPanel Grid.Column="2" Grid.Row="1">
                                <TextBlock Text="Shift" Style="{DynamicResource FieldLabel}"/>
                                <ComboBox SelectedItem="{Binding CurrentReport.Shift}"
                                          Padding="10,8">
                                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Day Shift</sys:String>
                                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Night Shift</sys:String>
                                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">24 Hour</sys:String>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Personnel Section -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Key Personnel" Style="{DynamicResource SectionHeader}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Offshore Manager -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Offshore Manager" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding OffshoreManager, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Project Surveyor -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Project Surveyor" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding ProjectSurveyor, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Party Chief -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Party Chief" Style="{DynamicResource FieldLabel}"/>
                                <TextBox Text="{Binding PartyChief, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{DynamicResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Crew On Duty Section -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Survey Crew" Style="{DynamicResource SectionHeader}" Margin="0"/>
                            <TextBlock Text="{Binding CurrentReport.SurveyCrew.Count, StringFormat=' ({0})', FallbackValue=' (0)'}"
                                       Style="{DynamicResource SectionHeader}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0"/>
                        </StackPanel>

                        <!-- Crew List -->
                        <ItemsControl Grid.Row="1" 
                                      ItemsSource="{Binding CurrentReport.SurveyCrew}"
                                      Margin="0,10,0,10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Margin="0,0,10,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Name}"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Rank}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Margin="15,0"
                                                       VerticalAlignment="Center"/>
                                            <Button Grid.Column="2"
                                                    Command="{Binding DataContext.RemoveCrewMemberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{DynamicResource IconButton}"
                                                    Width="24" Height="24">
                                                <iconPacks:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <Button Grid.Row="2" 
                                Command="{Binding AddCrewMemberCommand}"
                                Style="{DynamicResource SecondaryButton}"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AccountPlus" Width="14" Height="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Add Crew Member"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Operations Summary Section -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Operations Summary" Style="{DynamicResource SectionHeader}"/>

                        <!-- Last 24 Hours Highlights -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="Last 24 Hours Highlights" Style="{DynamicResource FieldLabel}"/>
                            <TextBox Text="{Binding Last24HrsHighlights, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource ModernTextBox}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="100"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Known Issues -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Known Issues / Outstanding Actions" Style="{DynamicResource FieldLabel}"/>
                            <TextBox Text="{Binding KnownIssues, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource ModernTextBox}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Survey Comments Section -->
                <Border Style="{DynamicResource CardBorder}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="General Survey Comments" Style="{DynamicResource SectionHeader}"/>

                        <TextBox Grid.Row="1"
                                 Text="{Binding GeneralSurveyComments, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource ModernTextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="100"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <Border Style="{DynamicResource CardBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Delete -->
                        <Button Grid.Column="0"
                                Command="{Binding DeleteReportCommand}"
                                Style="{DynamicResource SecondaryButton}"
                                HorizontalAlignment="Left"
                                Foreground="{DynamicResource ErrorBrush}"
                                BorderBrush="{DynamicResource ErrorBrush}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Delete" Width="14" Height="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Delete Report"/>
                            </StackPanel>
                        </Button>

                        <!-- Right: Save and Export -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Command="{Binding SaveReportCommand}"
                                    Style="{DynamicResource PrimaryButton}"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="ContentSave" Width="14" Height="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Save Report"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding ExportWordCommand}"
                                    Style="{DynamicResource SecondaryButton}"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="MicrosoftExcel" Width="14" Height="14" 
                                                                Foreground="#217346" Margin="0,0,8,0"/>
                                    <TextBlock Text="Excel"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding ExportPdfCommand}"
                                    Style="{DynamicResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FilePdfBox" Width="14" Height="14" 
                                                                Foreground="#E74C3C" Margin="0,0,8,0"/>
                                    <TextBlock Text="PDF"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
