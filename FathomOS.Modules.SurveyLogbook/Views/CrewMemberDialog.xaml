<mah:MetroWindow x:Class="FathomOS.Modules.SurveyLogbook.Views.CrewMemberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Add Crew Member"
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentBrush}"
        TitleCharacterCasing="Normal">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <!-- Name -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Name *" Style="{DynamicResource FieldLabel}"/>
                <TextBox x:Name="NameTextBox"
                         Text="{Binding CrewMemberName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource ModernTextBox}"
                         mah:TextBoxHelper.Watermark="Enter crew member name"/>
            </StackPanel>

            <!-- Rank/Role -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Rank / Role" Style="{DynamicResource FieldLabel}"/>
                <ComboBox x:Name="RankCombo"
                          Text="{Binding Rank, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="True"
                          Padding="10,8">
                    <ComboBoxItem Content="Party Chief"/>
                    <ComboBoxItem Content="Senior Surveyor"/>
                    <ComboBoxItem Content="Surveyor"/>
                    <ComboBoxItem Content="Junior Surveyor"/>
                    <ComboBoxItem Content="Survey Technician"/>
                    <ComboBoxItem Content="ROV Supervisor"/>
                    <ComboBoxItem Content="ROV Pilot"/>
                    <ComboBoxItem Content="Data Processor"/>
                    <ComboBoxItem Content="Client Representative"/>
                    <ComboBoxItem Content="Offshore Manager"/>
                </ComboBox>
            </StackPanel>

            <!-- Shift -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Shift" Style="{DynamicResource FieldLabel}"/>
                <ComboBox x:Name="ShiftCombo"
                          SelectedItem="{Binding Shift}"
                          Padding="10,8">
                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Day</sys:String>
                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Night</sys:String>
                    <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Day/Night</sys:String>
                </ComboBox>
            </StackPanel>

            <!-- Employer -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Employer" Style="{DynamicResource FieldLabel}"/>
                <TextBox Text="{Binding Employer, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource ModernTextBox}"
                         mah:TextBoxHelper.Watermark="Company name"/>
            </StackPanel>

            <!-- Date On Board -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Date On Board" Style="{DynamicResource FieldLabel}"/>
                <DatePicker SelectedDate="{Binding DateOnBoard}" Padding="10,8"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{DynamicResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Width="100"
                        IsCancel="True"
                        Click="CancelButton_Click"/>
                
                <Button x:Name="AddButton"
                        Style="{DynamicResource PrimaryButton}"
                        Width="120"
                        IsDefault="True"
                        Click="AddButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="AccountPlus" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Add"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
